	<!-- spring service that should be exposed on the ksb to receive messages 
		from the distributed cache manager -->
	<bean id="kfs.core.CacheAdminService" class="org.kuali.rice.core.impl.cache.CacheAdminServiceImpl"
		p:cacheManager-ref="kfs.core.LocalCacheManager" />

	<bean id="kfs.core.LocalCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
		<property name="cacheManager">
			<bean class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean"
				p:configLocation="classpath:kfs.ehcache.xml" />
		</property>
	</bean>

	<!-- the distributed cache manager that calls into the CacheAdminService on the ksb -->
	<bean id="kfs.core.DistributedCacheManager"
		class="org.kuali.rice.core.impl.cache.DistributedCacheManagerDecorator">
		<property name="cacheManager" ref="kfs.core.LocalCacheManager" />
		<property name="serviceName"  value="{KFS}kfsCoreCacheAdminService" />
	</bean>

	<bean id="kfs.core.cacheManagerRegistry" class="org.kuali.rice.core.impl.cache.CacheManagerRegistryImpl">
		<property name="cacheManager" ref="kfs.core.DistributedCacheManager" />
	</bean>

	<bean id="kfs.core.serviceExporter" abstract="true"
			class="org.kuali.rice.ksb.api.bus.support.ServiceBusExporter" p:serviceBus-ref="rice.ksb.serviceBus" />

  	<util:constant id="kfs.core.serviceNamespace" static-field="org.kuali.kfs.sys.KFSConstants.KFS_CORE_SERVICE_NAMESPACE"/>

	<bean id="kfs.core.Service"
		class="org.kuali.rice.ksb.api.bus.support.SoapServiceDefinition"
		abstract="true">
		<!-- <property name="serviceNameSpaceURI" ref="kfs.core.serviceNamespace" /> -->
		<property name="serviceNameSpaceURI" value="KFS" />
		<property name="jaxWsService" value="true" />
		<property name="priority" value="3" />
		<property name="retryAttempts" value="0" />
		<property name="busSecurity" value="true" />
		<property name="serviceVersion" value="${kfs.version}" />
		<property name="servicePath" value="" />
	</bean>


	<bean id="kfs.core.CacheAdminService.exporter" parent="kfs.core.serviceExporter">
		<property name="serviceDefinition">
			<bean parent="kfs.core.Service" p:service-ref="kfs.core.CacheAdminService"
				p:localServiceName="kfsCoreCacheAdminService" p:queue="false" />
		</property>
	</bean>

	<bean id="kfs.import.globalCacheManager" class="org.kuali.rice.krad.config.GlobalResourceLoaderServiceFactoryBean">
		<property name="serviceName" value="globalCacheManager" />
	</bean>
	
	<cache:annotation-driven cache-manager="kfs.import.globalCacheManager" />

	<import resource="classpath:org/kuali/rice/core/CommonSpringBeans.xml"/> 
</beans>
