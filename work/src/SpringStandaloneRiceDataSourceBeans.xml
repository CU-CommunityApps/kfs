<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="kewDataSource" class="org.kuali.rice.database.XAPoolDataSource">
		<property name="transactionManager" ref="jotm" />
		<property name="driverClassName" value="${rice.workflow.datasource.driver.class}" />
		<property name="maxSize" value="${rice.workflow.datasource.pool.size}" />
		<property name="minSize" value="5" />
		<property name="maxWait" value="${rice.workflow.datasource.connection.timeout}" />
		<property name="validationQuery" value="${rice.workflow.datasource.validating.query}" />
		<property name="url" value="${rice.workflow.datasource.url}" />
		<property name="username" value="${rice.workflow.datasource.username}" />
		<property name="password" value="${rice.workflow.datasource.password}" />
	</bean>

    <alias name="kewDataSource" alias="registryDataSource"/>
</beans>