<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.financial.bo.Deposit">


        <attributes>
            <attributeReference name="documentNumber" sourceClassName="org.kuali.core.bo.DocumentHeader" sourceAttributeName="documentNumber" />

            <attribute name="financialDocumentDepositLineNumber">
                <label>Deposit Number</label>
                <shortLabel>Deposit Number</shortLabel>

                <maxLength>10</maxLength>
                <required>true</required>

                <control>
                    <text size="2" />
                </control>
            </attribute>


            <attribute name="depositTypeCode">
                <label>Deposit Type</label>
                <shortLabel>Deposit Type</shortLabel>

                <maxLength>10</maxLength>
                <required>true</required>

                <control>
                    <text size="10" />
                </control>
            </attribute>


            <attributeReference name="depositDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericTimestamp">
                <label>Deposit Date</label>
                <shortLabel>Deposit Date</shortLabel>
                <required>true</required>
            </attributeReference>

            <attributeReference name="depositAmount" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericAmount">
                <required>true</required>
            </attributeReference>

            <attribute name="depositTicketNumber">
                <label>Deposit Ticket #</label>
                <shortLabel>Deposit #</shortLabel>

                <maxLength>20</maxLength>

                <control>
                    <text size="10" />
                </control>
            </attribute>


            <attributeReference name="depositBankCode" sourceClassName="org.kuali.module.financial.bo.Bank" sourceAttributeName="financialDocumentBankCode">
                <required>true</required>
            </attributeReference>

            <attributeReference name="depositBankAccountNumber" sourceClassName="org.kuali.module.financial.bo.BankAccount" sourceAttributeName="finDocumentBankAccountNumber">
                <required>true</required>
            </attributeReference>
        </attributes>
