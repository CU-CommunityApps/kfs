<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.financial.bo.TravelPerDiem">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Travel Per Diem Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="fiscalYear" />
                <field attributeName="perDiemCountryName" />
                <field attributeName="perDiemCountryText" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Travel Per Diem Lookup</title>

            <instructions>Lookup a Travel Per Diem Category</instructions>

            <defaultSort attributeName="perDiemCountryName" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="fiscalYear" required="false">
                    <defaultValueFinderClass>org.kuali.core.lookup.valueFinder.FiscalYearFinder</defaultValueFinderClass>
                </lookupField>
                <lookupField attributeName="perDiemCountryName" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="fiscalYear" />
                <field attributeName="perDiemCountryName" />
                <field attributeName="perDiemCountryText" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="fiscalYear" forceUppercase="false">
                <label>Fiscal Year</label>
                <shortLabel>Year</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern>
                    <numeric />
                </validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>The fiscal year of the budget for the travel per diem.</description>
            </attribute>

            <attribute name="perDiemCountryName" forceUppercase="false">
                <label>Per Diem Category/Country Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>10</maxLength>

                <control>
                    <text size="10" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>The country for the travel per diem.</description>
            </attribute>

            <attribute name="perDiemCountryText" forceUppercase="false">
                <label>Per Diem Category/Country URL</label>
                <shortLabel>URL</shortLabel>

                <maxLength>255</maxLength>

                <control>
                    <text size="75" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>The country URL for the travel per diem.</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>
    </businessObject>
</dictionaryEntry>

