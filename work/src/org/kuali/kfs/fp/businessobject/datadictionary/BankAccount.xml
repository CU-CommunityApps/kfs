<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.financial.bo.BankAccount">


        <inquiry>
            <title>Bank Account Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="financialDocumentBankCode" />
                <field attributeName="finDocumentBankAccountNumber" />
                <field attributeName="finDocumentBankAccountDesc" />
                <field attributeName="cashOffsetFinancialChartOfAccountCode" />
                <field attributeName="cashOffsetAccountNumber" />
                <field attributeName="cashOffsetSubAccountNumber" />
                <field attributeName="cashOffsetObjectCode" />
                <field attributeName="cashOffsetSubObjectCode" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Bank Account Lookup</title>

            <instructions>Lookup a Bank Account</instructions>

            <defaultSort attributeName="financialDocumentBankCode" sortAscending="true" />

            <lookupFields>
                <lookupField attributeName="financialDocumentBankCode" required="false" />
                <lookupField attributeName="finDocumentBankAccountNumber" required="false" />
                <lookupField attributeName="finDocumentBankAccountDesc" required="false" />
                <lookupField attributeName="cashOffsetFinancialChartOfAccountCode" required="false" />
                <lookupField attributeName="cashOffsetAccountNumber" required="false" />
                <lookupField attributeName="cashOffsetSubAccountNumber" required="false" />
                <lookupField attributeName="cashOffsetObjectCode" required="false" />
                <lookupField attributeName="cashOffsetSubObjectCode" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="financialDocumentBankCode" />
                <field attributeName="finDocumentBankAccountNumber" />
                <field attributeName="finDocumentBankAccountDesc" />
                <field attributeName="cashOffsetFinancialChartOfAccountCode" />
                <field attributeName="cashOffsetAccountNumber" />
                <field attributeName="cashOffsetSubAccountNumber" />
                <field attributeName="cashOffsetObjectCode" />
                <field attributeName="cashOffsetSubObjectCode" />
            </resultFields>
        </lookup>

        <titleAttribute>finDocumentBankAccountNumber</titleAttribute>

        <attributes>

            <attributeReference name="financialDocumentBankCode" sourceClassName="org.kuali.module.financial.bo.Bank" sourceAttributeName="financialDocumentBankCode">
                <required>true</required>
            </attributeReference>

            <attribute name="finDocumentBankAccountNumber" forceUppercase="true">
                <label>Bank Account Number</label>
                <shortLabel>Bank Acct</shortLabel>

                <maxLength>15</maxLength>
                <required>true</required>
                <control>
                    <text size="15" />
                </control>
                
                <attributeAuthorization>
                  <displayWorkgroup>kualiUniversalGroup</displayWorkgroup>
                  <displayMask><maskLiteral literal="***************"/></displayMask>
                </attributeAuthorization>
            </attribute>

            <attribute name="finDocumentBankAccountDesc" forceUppercase="true">
                <label>Bank Account Description</label>
                <shortLabel>Bank Acct Desc</shortLabel>

                <maxLength>40</maxLength>
                <required>true</required>
                <control>
                    <text size="40" />
                </control>
            </attribute>

            <attributeReference name="cashOffsetFinancialChartOfAccountCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <label>Cash Offset Chart Of Accounts</label>
                <shortLabel>Cash Off CoA</shortLabel>
                <required>false</required>
                <control>
                    <text size="2" />
                </control>
            </attributeReference>

            <attributeReference name="cashOffsetAccountNumber" sourceClassName="org.kuali.module.chart.bo.Account" sourceAttributeName="accountNumber">
                <label>Cash Offset Account Number</label>
                <shortLabel>Cash Off Acct</shortLabel>
                <required>false</required>
            </attributeReference>
            
            <attributeReference name="cashOffsetSubAccountNumber" sourceClassName="org.kuali.module.chart.bo.SubAccount" sourceAttributeName="subAccountNumber">
                <label>Cash Offset Sub-Account Number</label>
                <shortLabel>Cash Off Sub-Acct Nbr</shortLabel>
                <required>false</required>
            </attributeReference>

            <attributeReference name="cashOffsetObjectCode" sourceClassName="org.kuali.module.chart.bo.ObjectCode" sourceAttributeName="financialObjectCode">
                <label>Cash Offset Object Code</label>
                <shortLabel>Cash Off Obj Cd</shortLabel>
                <required>false</required>
            </attributeReference>

            <attributeReference name="cashOffsetSubObjectCode" sourceClassName="org.kuali.module.chart.bo.SubObjCd" sourceAttributeName="financialSubObjectCode">
                <label>Cash Offset Sub-Object Code</label>
                <shortLabel>Cash Off Sub-Obj Cd</shortLabel>
                <required>false</required>
            </attributeReference>
            
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
