<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
	<businessObject businessObjectClass="org.kuali.module.financial.bo.CreditCardType">
		<customAttributeEnabled>false</customAttributeEnabled>

		<inquiry>
			<title>Credit Card Type Inquiry</title>

			<inquiryFields>
				<field attributeName="financialDocumentCreditCardTypeCode" />
				<field attributeName="financialDocumentCreditCardCompanyName" />					
			</inquiryFields>
		</inquiry>

		<lookup>
			<title>Credit Card Type Lookup</title>

			<menubar><![CDATA[<a href="maintenance.do?methodToCall=start&businessObjectClassName=org.kuali.module.financial.bo.CreditCardType">Create New</a>]]></menubar>

			<instructions>Lookup a Credit Card Type</instructions>

			<defaultSort attributeName="financialDocumentCreditCardTypeCode" sortAscending="true" />

			<lookupFields>
				<lookupField attributeName="financialDocumentCreditCardTypeCode" required="false" />
				<lookupField attributeName="financialDocumentCreditCardCompanyName" required="false" />
			</lookupFields>

			<resultFields>
				<field attributeName="financialDocumentCreditCardTypeCode" />
				<field attributeName="financialDocumentCreditCardCompanyName" />
			</resultFields>
		</lookup>

		<attributes>

			<attribute name="financialDocumentCreditCardTypeCode" forceUppercase="true">
				<label>Credit Card Type Code</label>
				<shortLabel>Code</shortLabel>

				<maxLength>2</maxLength>
				<validationPattern><alphaNumeric /></validationPattern>
				<required>true</required>
				<control>
					<text size="2" />
				</control>

				<summary><![CDATA[&nbsp;]]></summary>
				<description>The code uniquely identifiying the type of credit card.</description>
			</attribute>
			
			<attribute name="financialDocumentCreditCardCompanyName" forceUppercase="false">
                <label>Bank Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
				<required>true</required>
                <control>
                    <text size="40" />
                </control>

                <summary><![CDATA[&nbsp;]]></summary>
                <description>The company name for this type of credit card.</description>
                
            </attribute>

            
 			<attributeReference name="versionNumber" 
 				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
 				sourceAttributeName="versionNumber" />

		</attributes>
	</businessObject>
</dictionaryEntry>

