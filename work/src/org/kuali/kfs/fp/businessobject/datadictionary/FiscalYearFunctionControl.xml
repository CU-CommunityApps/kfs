<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.financial.bo.FiscalYearFunctionControl">


        <inquiry>
            <title>Fiscal Year Function Control Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="universityFiscalYear" />
                <field attributeName="financialSystemFunctionControlCode" />
                <field attributeName="financialSystemFunctionActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Fiscal Year Function Control Lookup</title>

            <instructions>Lookup an Fiscal Year Function Control</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="universityFiscalYear" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="universityFiscalYear" required="false" />
                <lookupField attributeName="financialSystemFunctionControlCode" required="false" />
                <lookupField attributeName="financialSystemFunctionActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="universityFiscalYear" />
                <field attributeName="financialSystemFunctionControlCode" />
                <field attributeName="financialSystemFunctionActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attributeReference name="universityFiscalYear" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericFiscalYear">
                <required>true</required>
            </attributeReference>

            <attribute name="financialSystemFunctionControlCode" forceUppercase="true">
                <label>Financial System Function Control Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>6</maxLength>
                <validationPattern>
                    <anyCharacter />
                </validationPattern>

                <control>
                    <text size="8" />
                </control>
            </attribute>

            <attribute name="financialSystemFunctionActiveIndicator" forceUppercase="true">
                <label>Financial System Function Active Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>
               <formatterClass>org.kuali.core.web.format.BooleanFormatter</formatterClass>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
