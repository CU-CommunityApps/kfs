<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="DistributionOfIncomeAndExpenseDocument" parent="DistributionOfIncomeAndExpenseDocument-parentBean" />

  <bean id="DistributionOfIncomeAndExpenseDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Distribution Of Income And Expense" />
    <property name="shortLabel" value="Distribution Of Income And Expense" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The Distribution of Income and Expense (DI) document is used to distribute income or expense, or assets and liabilities. &lt;br&gt; Amounts being distributed are usually the result of an accumulation of transactions that need to be divided up between various accounts. &lt;br&gt; &lt;br&gt; See FIS documentation here: &lt;a target=&quot;_blank&quot; href=&quot;http://www.fms.indiana.edu/fis/documentation/di.pdf&quot;&gt; http://www.fms.indiana.edu/fis/documentation/di.pdf &lt;/a&gt;" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.document.DistributionOfIncomeAndExpenseDocument" p:parameterName="DISTRIBUTION_OF_INCOME_AND_EXPENSE" />
    </property>
    <property name="documentTypeName" value="DistributionOfIncomeAndExpenseDocument" />
    <property name="documentClass" value="org.kuali.kfs.fp.document.DistributionOfIncomeAndExpenseDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.DistributionOfIncomeAndExpenseDocumentAuthorizer" />
    <property name="documentTypeCode" value="DI" />
    <property name="sessionDocument" value="true" />
    <property name="allowsCopy" value="true" />
    <property name="workflowAttributes">
    	<ref bean="DistributionOfIncomeAndExpenseDocument-workflowAttributes" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property> 
    <property name="validationMap" ref="DistributionOfIncomeAndExpenseDocument-validations" />
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="DistributionOfIncomeAndExpense-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
	    	<entry>
	    		<key><value>target</value></key>
	    		<ref bean="DistributionOfIncomeAndExpense-targetAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>
    <property name="importedLineParserClass" value="org.kuali.kfs.sys.businessobject.AccountingLineParserBase" />
  </bean>
  
    <!-- Validations -->
  
  <bean id="DistributionOfIncomeAndExpenseDocument-validations" parent="DistributionOfIncomeAndExpenseDocument-validations-parentBean" />
  
  <bean id="DistributionOfIncomeAndExpenseDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>DistributionOfIncomeAndExpense-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>DistributionOfIncomeAndExpense-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>DistributionOfIncomeAndExpense-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>DistributionOfIncomeAndExpense-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>DistributionOfIncomeAndExpense-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>DistributionOfIncomeAndExpense-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>DistributionOfIncomeAndExpense-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
  
  <!-- accounting line groups -->
  <bean id="DistributionOfIncomeAndExpense-sourceAccountingLineGroup" parent="DistributionOfIncomeAndExpense-sourceAccountingLineGroup-parentBean" />  
  <bean id="DistributionOfIncomeAndExpense-sourceAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="FinancialProcessing-SalesTax-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.sys.businessobject.SourceAccountingLine" />
	  <property name="groupLabel" value="Income" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.DistributionOfIncomeAndExpenseAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="source" />
	  <property name="totals" ref="AccountingDocument-sourceGroupTotals" />
	  <property name="errorKey" value="document.sourceAccounting*,sourceAccountingLines,newSourceLine*" /> <!-- note people copying this: AV and JV have extra things that belong here -->
	</bean>
	
	<bean id="DistributionOfIncomeAndExpense-targetAccountingLineGroup" parent="DistributionOfIncomeAndExpense-targetAccountingLineGroup-parentBean" />	
	<bean id="DistributionOfIncomeAndExpense-targetAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="FinancialProcessing-SalesTax-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.sys.businessobject.TargetAccountingLine" />
	  <property name="groupLabel" value="Expense" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.FinancialProcessingAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="target" />
	  <property name="totals" ref="AccountingDocument-targetGroupTotals" />
	  <property name="errorKey" value="document.targetAccounting*,targetAccountingLines,newTargetLine*" />
	</bean>
	
	<!-- workflow attributes for routing -->
	<bean id="DistributionOfIncomeAndExpenseDocument-workflowAttributes" parent="DistributionOfIncomeAndExpenseDocument-workflowAttributes-parentBean" />
	
	<dd:workflowAttributes id="DistributionOfIncomeAndExpenseDocument-workflowAttributes-parentBean" abstract="true">
    <dd:routingType nodeName="Account">
        <dd:routingAttributes>
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.sys.businessobject.FinancialSystemDocumentHeader" attributeName="totalAmount" />
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.Chart" attributeName="chartOfAccountsCode" />
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.Account" attributeName="accountNumber" />
        </dd:routingAttributes>
        <dd:documentValuePathGroup>
            <dd:documentValue path="totalAmount"/>
            <dd:documentCollectionPath path="sourceAccountingLines">
            	<dd:documentValue path="chartsOfAccountCode"/>
                <dd:documentValue path="accountNumber"/>
        	</dd:documentCollectionPath>
        </dd:documentValuePathGroup>
        <dd:documentValuePathGroup>
            <dd:documentValue path="totalAmount"/>
            <dd:documentCollectionPath path="targetAccountingLines">
	            <dd:documentValue path="chartsOfAccountCode"/>
                <dd:documentValue path="accountNumber"/>
            </dd:documentCollectionPath>
        </dd:documentValuePathGroup>
    </dd:routingType>
    <dd:routingType nodeName="OrganizationHierarchy">
        <dd:routingAttributes>
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.sys.businessobject.FinancialSystemDocumentHeader" attributeName="totalAmount" />
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.Chart" attributeName="chartOfAccountsCode" />
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.Org" attributeName="organizationCode" />
            <dd:routingAttribute businessObjectClassName="org.kuali.kfs.sys.businessobject.AccountingLine" attributeName="overrideCode" />
        </dd:routingAttributes>
        <dd:documentValuePathGroup>
            <dd:documentValue path="totalAmount"/>
            <dd:documentCollectionPath path="sourceAccountingLines">
            	<dd:documentValue path="chartsOfAccountCode"/>
                <dd:documentValue path="account.organizationCode"/>
                <dd:documentValue path="overrideCode"/>
            </dd:documentCollectionPath>
        </dd:documentValuePathGroup>
        <dd:documentValuePathGroup>
            <dd:documentValue path="totalAmount"/>
            <dd:documentCollectionPath path="targetAccountingLines">
            	<dd:documentValue path="chartsOfAccountCode"/>
                <dd:documentValue path="account.organizationCode"/>
                <dd:documentValue path="overrideCode"/>
            </dd:documentCollectionPath>
        </dd:documentValuePathGroup>
    </dd:routingType>
    <dd:routingType nodeName="SubFund">
    	<dd:routingAttributes>
    		<dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.SubFundGroup" attributeName="subFundGroupName" />
    	</dd:routingAttributes>
    	<dd:documentValuePathGroup>
    		<dd:documentCollectionPath path="sourceAccountingLines">
    			<dd:documentValue path="account.subFundGroupCode" />
    		</dd:documentCollectionPath>
    		<dd:documentCollectionPath path="targetAccountingLines">
    			<dd:documentValue path="account.subFundGroupCode" />
    		</dd:documentCollectionPath>
    	</dd:documentValuePathGroup>
    </dd:routingType>
    <dd:routingType nodeName="Award">
    	<dd:routingAttributes>
    		<dd:routingAttribute businessObjectClassName="org.kuali.kfs.coa.businessobject.Account" attributeName="contractsAndGrantsAccountResponsibilityId" />
    	</dd:routingAttributes>
    	<dd:documentValuePathGroup>
    		<dd:documentCollectionPath path="sourceAccountingLines">
    			<dd:documentValue path="account.contractsAndGrantsAccountResponsibilityId" />
    		</dd:documentCollectionPath>
    		<dd:documentCollectionPath path="targetAccountingLines">
    			<dd:documentValue path="account.contractsAndGrantsAccountResponsibilityId" />
    		</dd:documentCollectionPath>
    	</dd:documentValuePathGroup>
    </dd:routingType>
</dd:workflowAttributes> 
  
</beans>
