<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="NonCheckDisbursementDocument" parent="NonCheckDisbursementDocument-parentBean" />

  <bean id="NonCheckDisbursementDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Non-Check Disbursement" />
    <property name="shortLabel" value="Non-Check Disbursement" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The &quot;Non-Check Disbursement&quot; document is used to record charges or credits directly assessed to university bank accounts. It is used primarily by the Tax and Treasury Accounting office to record wire transfers, foreign drafts, etc." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.document.NonCheckDisbursementDocument" p:parameterName="NON_CHECK_DISBURSEMENT" />
    </property>
    <property name="documentTypeName" value="NonCheckDisbursementDocument" />
    <property name="documentClass" value="org.kuali.kfs.fp.document.NonCheckDisbursementDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.AccountingDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.fp.document.validation.impl.NonCheckDisbursementDocumentPreRules" />
    <property name="documentTypeCode" value="ND" />
    <property name="sessionDocument" value="true" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="NonCheckDisbursementDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="validationMap" ref="NonCheckDisbursementDocument-validations" />
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="NonCheckDisbursementDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>
    <property name="importedLineParserClass" value="org.kuali.kfs.sys.businessobject.AccountingLineParserBase" />     
  </bean>
  
<!-- Exported Workflow Properties -->


  <bean id="NonCheckDisbursementDocument-workflowProperties" parent="NonCheckDisbursementDocument-workflowProperties-parentBean" />

  <bean id="NonCheckDisbursementDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
  
     <!-- Validations -->
  
  <bean id="NonCheckDisbursementDocument-validations" parent="NonCheckDisbursementDocument-validations-parentBean" />
  
  <bean id="NonCheckDisbursementDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>NonCheckDisbursement-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>NonCheckDisbursement-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>NonCheckDisbursement-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>NonCheckDisbursement-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>NonCheckDisbursement-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>

  <!-- accounting line groups -->
  <bean id="NonCheckDisbursementDocument-sourceAccountingLineGroup" parent="NonCheckDisbursementDocument-sourceAccountingLineGroup-parentBean" />  
  <bean id="NonCheckDisbursementDocument-sourceAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="NonCheckDisbursementDocument-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.sys.businessobject.SourceAccountingLine" />
	  <property name="groupLabel" value="" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.FinancialProcessingAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="source" />
	  <property name="totals" ref="AccountingDocument-sourceGroupTotals" />
	  <property name="errorKey" value="document.sourceAccounting*,sourceAccountingLines,newSourceLine*" /> <!-- note people copying this: AV and JV have extra things that belong here -->
  </bean>
	
  <bean id="NonCheckDisbursementDocument-accountingLineView" parent="NonCheckDisbursementDocument-accountingLineView-parent" />
  <bean id="NonCheckDisbursementDocument-accountingLineView-parent" parent="AccountingLineView" abstract="true">
	  <property name="elements">
		<list>
			<bean parent="AccountingLineView-sequenceNumber" />
			<bean parent="AccountingLineView-lines">
				<property name="lines">
					<list>
						<ref bean="accountingInformation" />
						<bean parent="AccountingLineView-line">
							<property name="elementName" value="lineDescription" />
							<property name="fields">
								<list>
									<bean parent="AccountingLineView-field"	p:name="referenceNumber" p:required="true" />
									<bean parent="AccountingLineView-field"	p:name="financialDocumentLineDescription" p:overrideColSpan="2" />
								</list>
							</property>
						</bean>
					</list>
				</property>
			</bean>
			<bean parent="AccountingLineView-field" p:name="amount"	p:required="true" />
			<bean parent="AccountingLineView-actions" />
		</list>
	</property>
  </bean>
</beans>
