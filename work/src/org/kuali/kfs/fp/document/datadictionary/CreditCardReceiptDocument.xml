<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CreditCardReceiptDocument" parent="CreditCardReceiptDocument-parentBean" />

  <bean id="CreditCardReceiptDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Credit Card Receipt" />
    <property name="shortLabel" value="Credit Card Receipt" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="A Credit Card Receipt document is used to record credit card receipts and distribute the monetary amount received for them, into the appropriate accounts in the financial system. Once submitted, a Credit Card Receipt routes straight to FINAL and is applied to the General Ledger, since it is a form of an advance deposit." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-FP"
            p:parameterName="CREDIT_CARD_RECEIPT"
            p:parameterDetailType="CreditCardReceipt" />
    </property>
    <property name="documentTypeName" value="CreditCardReceiptDocument" />
    <property name="documentClass" value="org.kuali.module.financial.document.CreditCardReceiptDocument" />
    <property name="businessRulesClass" value="org.kuali.module.financial.rules.CreditCardReceiptDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.financial.document.authorization.CreditCardReceiptDocumentAuthorizer" />
    <property name="documentTypeCode" value="CCR" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="CreditCardReceiptDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="CreditCardReceiptDocument-totalCreditCardAmount" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="CreditCardReceiptDocument-totalCreditCardAmount" parent="CreditCardReceiptDocument-totalCreditCardAmount-parentBean" />

  <bean id="CreditCardReceiptDocument-totalCreditCardAmount-parentBean" abstract="true" parent="GenericAttributes-genericAmount">
    <property name="name" value="totalCreditCardAmount" />
    <property name="label" value="Credit Card Receipt Total" />
    <property name="shortLabel" value="Credit Card Receipt Total" />
    <property name="description" value="The sum of the entered credit card lines." />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="CreditCardReceiptDocument-workflowProperties" parent="CreditCardReceiptDocument-workflowProperties-parentBean" />

  <bean id="CreditCardReceiptDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
