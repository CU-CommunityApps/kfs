<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.financial.bo.MessageOfTheDay</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>MessageOfTheDayMaintenanceDocument</documentTypeName>
        <documentTypeCode>MOTD</documentTypeCode>

        <label>Message Of The Day</label>

        <summary>Message Of The Day maintenance document</summary>
        <description>Document used to create or update Message Of The Day objects</description>
        <help parameterNamespace="KFS-FP" parameterDetailType="MessageOfTheDay" parameterName="MESSAGE_OF_THE_DAY" />

        <lockingKeys>
            <field attributeName="financialSystemOriginationCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="financialSystemOrigination" attributeToHighlightOnFail="financialSystemOriginationCode" />
        </defaultExistenceChecks>
        
        <maintainableSections>
            <maintainableSection title="Edit Message Of The Day">
                <maintainableItems>
                    <maintainableField name="financialSystemOriginationCode" required="true" />
                    <maintainableField name="financialSystemMessageOfTheDayText" required="false" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
        
        <workflowProperties />
    </maintenanceDocument>
</dictionaryEntry>