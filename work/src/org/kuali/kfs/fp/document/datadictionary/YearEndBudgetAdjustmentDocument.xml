<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="YearEndBudgetAdjustmentDocument" parent="YearEndBudgetAdjustmentDocument-parentBean" />

  <bean id="YearEndBudgetAdjustmentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Year End Budget Adjustment" />
    <property name="shortLabel" value="Year End Budget Adjustment" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The Year End version of the Budget Adjustment document." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.document.YearEndBudgetAdjustmentDocument" p:parameterName="YEAR_END_BUDGET_ADJUSTMENT" />
    </property>
    <property name="documentTypeName" value="YearEndBudgetAdjustmentDocument" />
    <property name="documentClass" value="org.kuali.kfs.fp.document.YearEndBudgetAdjustmentDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.BudgetAdjustmentDocumentAuthorizer" />
    <property name="documentPresentationControllerClass" value="org.kuali.kfs.fp.document.authorization.YearEndBudgetAdjustmentDocumentPresentationController" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.fp.document.validation.impl.BudgetAdjustmentDocumentPreRules" />
    <property name="documentTypeCode" value="YEBA" />
    <property name="sessionDocument" value="true" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="YearEndBudgetAdjustmentDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="YearEndBudgetAdjustmentDocument-nextPositionSourceLineNumber" />
        <ref bean="YearEndBudgetAdjustmentDocument-nextPositionTargetLineNumber" />
        <ref bean="YearEndBudgetAdjustmentDocument-postingYear" />
      </list>
    </property>
    <property name="validationMap" ref="BudgetAdjustmentDocument-validations" />
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="YearEndBudgetAdjustmentDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
	    	<entry>
	    		<key><value>target</value></key>
	    		<ref bean="YearEndBudgetAdjustmentDocument-targetAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>
	</bean>
<!-- Attribute Definitions -->


  <bean id="YearEndBudgetAdjustmentDocument-nextPositionSourceLineNumber" parent="YearEndBudgetAdjustmentDocument-nextPositionSourceLineNumber-parentBean" />

  <bean id="YearEndBudgetAdjustmentDocument-nextPositionSourceLineNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="nextPositionSourceLineNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Next PS Source Line Number" />
    <property name="shortLabel" value="Next PS Source" />
    <property name="maxLength" value="7" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="&amp;nbsp;" />
  </bean>
  <bean id="YearEndBudgetAdjustmentDocument-nextPositionTargetLineNumber" parent="YearEndBudgetAdjustmentDocument-nextPositionTargetLineNumber-parentBean" />

  <bean id="YearEndBudgetAdjustmentDocument-nextPositionTargetLineNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="nextPositionTargetLineNumber" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Next PS Target Line Number" />
    <property name="shortLabel" value="Next PS Target" />
    <property name="maxLength" value="7" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="required" value="false" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="10" />
    </property>
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="&amp;nbsp;" />
  </bean>
  <bean id="YearEndBudgetAdjustmentDocument-postingYear" parent="YearEndBudgetAdjustmentDocument-postingYear-parentBean" />

  <bean id="YearEndBudgetAdjustmentDocument-postingYear-parentBean" abstract="true" parent="GenericAttributes-genericFiscalYear">
    <property name="name" value="postingYear" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.kfs.fp.businessobject.options.BudgetAdjustmentFiscalYearValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="YearEndBudgetAdjustmentDocument-workflowProperties" parent="YearEndBudgetAdjustmentDocument-workflowProperties-parentBean" />

  <bean id="YearEndBudgetAdjustmentDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
   <!-- validations -->
  
  <bean id="YearEndBudgetAdjustmentDocument-validations" parent="YearEndBudgetAdjustmentDocument-validations-parentBean" />
  
  <bean id="YearEndBudgetAdjustmentDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>YearEndBudgetAdjustment-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>YearEndBudgetAdjustment-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>YearEndBudgetAdjustment-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>YearEndBudgetAdjustment-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>YearEndBudgetAdjustment-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>YearEndBudgetAdjustment-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>YearEndBudgetAdjustment-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
  

<!-- accounting line groups -->
  <bean id="YearEndBudgetAdjustmentDocument-sourceAccountingLineGroup" parent="YearEndBudgetAdjustmentDocument-sourceAccountingLineGroup-parentBean" />
  
  <bean id="YearEndBudgetAdjustmentDocument-sourceAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="BudgetAdjustment-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.fp.businessobject.BudgetAdjustmentSourceAccountingLine" />
	  <property name="groupLabel" value="From/Decrease" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.BudgetAdjustmentAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="source" />
	  <property name="errorKey" value="document.sourceAccounting*,sourceAccountingLines,newSourceLine*" /> <!-- note people copying this: AV and JV have extra things that belong here -->
	</bean>
	
	<bean id="YearEndBudgetAdjustmentDocument-targetAccountingLineGroup" parent="YearEndBudgetAdjustmentDocument-targetAccountingLineGroup-parentBean" />
	
	<bean id="YearEndBudgetAdjustmentDocument-targetAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="BudgetAdjustment-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.fp.businessobject.BudgetAdjustmentTargetAccountingLine" />
	  <property name="groupLabel" value="To/Increase" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.BudgetAdjustmentAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="target" />
	  <property name="errorKey" value="document.targetAccounting*,targetAccountingLines,newTargetLine*" />
	</bean>
	</beans>
