<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="InternalBillingDocument" parent="InternalBillingDocument-parentBean" />

  <bean id="InternalBillingDocument-parentBean" abstract="true" parent="AccountingDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Internal Billing" />
    <property name="shortLabel" value="Internal Billing" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The Internal Billing (IB) document is used for the billing of goods or services provided by a university department to another university department, reflecting income to the provider and expense to the customer." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.document.InternalBillingDocument" p:parameterName="INTERNAL_BILLING" />
    </property>
    <property name="documentTypeName" value="InternalBillingDocument" />
    <property name="documentClass" value="org.kuali.kfs.fp.document.InternalBillingDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.AccountingDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="IB" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="InternalBillingDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="validationMap" ref="InternalBillingDocument-validations" />
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="InternalBilling-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
	    	<entry>
	    		<key><value>target</value></key>
	    		<ref bean="InternalBilling-targetAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>
    <property name="importedLineParserClass" value="org.kuali.kfs.sys.businessobject.AccountingLineParserBase" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="InternalBillingDocument-workflowProperties" parent="InternalBillingDocument-workflowProperties-parentBean" />

  <bean id="InternalBillingDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
  <!-- Validations -->
  
  <bean id="InternalBillingDocument-validations" parent="InternalBillingDocument-validations-parentBean" />
  
  <bean id="InternalBillingDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>InternalBilling-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>InternalBilling-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>InternalBilling-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>InternalBilling-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>InternalBilling-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>InternalBilling-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>InternalBilling-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
  
  <!-- accounting line groups -->
  <bean id="InternalBilling-sourceAccountingLineGroup" parent="InternalBilling-sourceAccountingLineGroup-parentBean" />
  
  <bean id="InternalBilling-sourceAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="FinancialProcessing-SalesTax-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.sys.businessobject.SourceAccountingLine" />
	  <property name="groupLabel" value="Income" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.FinancialProcessingAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="source" />
	  <property name="totals" ref="AccountingDocument-sourceGroupTotals" />
	  <property name="errorKey" value="document.sourceAccounting*,sourceAccountingLines,newSourceLine*" /> <!-- note people copying this: AV and JV have extra things that belong here -->
	</bean>
	
	<bean id="InternalBilling-targetAccountingLineGroup" parent="InternalBilling-targetAccountingLineGroup-parentBean" />
	
	<bean id="InternalBilling-targetAccountingLineGroup-parentBean" parent="AccountingLineGroup" abstract="true">
	  <property name="accountingLineView" ref="FinancialProcessing-SalesTax-accountingLineView" />
	  <property name="accountingLineClass" value="org.kuali.kfs.sys.businessobject.TargetAccountingLine" />
	  <property name="groupLabel" value="Expense" />
	  <property name="accountingLineAuthorizerClass" value="org.kuali.kfs.fp.document.authorization.FinancialProcessingAccountingLineAuthorizer" />
	  <property name="importedLinePropertyPrefix" value="target" />
	  <property name="totals" ref="AccountingDocument-targetGroupTotals" />
	  <property name="errorKey" value="document.targetAccounting*,targetAccountingLines,newTargetLine*" />
	</bean>
	
</beans>
