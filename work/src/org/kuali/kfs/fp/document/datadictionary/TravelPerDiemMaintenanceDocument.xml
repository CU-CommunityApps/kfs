<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="TravelPerDiemMaintenanceDocument" parent="TravelPerDiemMaintenanceDocument-parentBean" />

  <bean id="TravelPerDiemMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.fp.businessobject.TravelPerDiem" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>universityFiscalYear</value>
        <value>perDiemCountryName</value>
      </list>
    </property>
    <property name="label" value="Disbursement Voucher Travel Per Diem" />
    <property name="shortLabel" value="Disbursement Voucher Travel Per Diem" />
    <property name="summary" value="Travel Per Diem Maintenance Document" />
    <property name="description" value="Document used to create or update Travel Per Diem objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.businessobject.TravelPerDiem" p:parameterName="TRAVEL_PER_DIEM" />
    </property>
    <property name="documentTypeName" value="DVPD" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="workflowAttributes">
    	<ref bean="TravelPerDiemMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory" parent="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory-parentBean" />

  <bean id="TravelPerDiemMaintenanceDocument-EditTravelPerDiemCategory-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Travel Per Diem Category" />
    <property name="title" value="Edit Travel Per Diem Category" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="perDiemCountryName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="perDiemCountryText" />
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="TravelPerDiemMaintenanceDocument-workflowAttributes" parent="TravelPerDiemMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="TravelPerDiemMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
