<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="GeneralErrorCorrectionDocument" parent="GeneralErrorCorrectionDocument-parentBean" />

  <bean id="GeneralErrorCorrectionDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="General Error Correction" />
    <property name="shortLabel" value="General Error Correction" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The General Error Correction document is used to correct inappropriate or incorrect account numbers or sub-account numbers, and/or object codes or sub-object codes, on general ledger entries generated from other financial transactions." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.fp.document.GeneralErrorCorrectionDocument" p:parameterName="GENERAL_ERROR_CORRECTION" />
    </property>
    <property name="documentTypeName" value="GeneralErrorCorrectionDocument" />
    <property name="documentClass" value="org.kuali.kfs.fp.document.GeneralErrorCorrectionDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.fp.document.validation.impl.GeneralErrorCorrectionDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.AccountingDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="GEC" />
    <property name="sessionDocument" value="true" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="GeneralErrorCorrectionDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="validationMap" ref="GeneralErrorCorrectionDocument-validations" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="GeneralErrorCorrectionDocument-workflowProperties" parent="GeneralErrorCorrectionDocument-workflowProperties-parentBean" />

  <bean id="GeneralErrorCorrectionDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
   <!-- Validations -->
  
  <bean id="GeneralErrorCorrectionDocument-validations" parent="GeneralErrorCorrectionDocument-validations-parentBean" />
  
  <bean id="GeneralErrorCorrectionDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>GeneralErrorCorrection-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>GeneralErrorCorrection-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>GeneralErrorCorrection-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>GeneralErrorCorrection-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>GeneralErrorCorrection-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>GeneralErrorCorrection-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>GeneralErrorCorrection-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
  
</beans>
