<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
	<businessObject businessObjectClass="org.kuali.module.chart.bo.OffsetDefinition">
		<customAttributeEnabled>false</customAttributeEnabled>

		<inquiry>
			<title>Offset Definition Inquiry</title>

			<inquiryFields>
				<field attributeName="universityFiscalYear" />
				<field attributeName="chartOfAccountsCode" />			
				<field attributeName="financialDocumentTypeCode" noInquiry="true" />
				<field attributeName="financialBalanceTypeCode" noInquiry="true" />			
				<field attributeName="financialObjectCode" />
			</inquiryFields>
		</inquiry>

		<lookup>
			<title>Offset Definition Lookup</title>

			<menubar><![CDATA[<a href="maintenance.do?methodToCall=start&businessObjectClassName=org.kuali.module.chart.bo.OffsetDefinition">Create New</a>]]></menubar>

			<instructions>Lookup an Offset Definition</instructions>

			<defaultSort attributeName="financialDocumentTypeCode" sortAscending="true" />

			<lookupFields>
				<lookupField attributeName="universityFiscalYear" required="false" />
				<lookupField attributeName="chartOfAccountsCode" required="false" />
				<lookupField attributeName="financialObjectCode" required="false" />
				<lookupField attributeName="financialDocumentTypeCode" required="false" noLookup="true" />
				<lookupField attributeName="financialBalanceTypeCode" required="false"  noLookup="true"/>
			</lookupFields>

			<resultFields>
				<field attributeName="universityFiscalYear" />
				<field attributeName="chartOfAccountsCode" />
				<field attributeName="financialObjectCode" />
				<field attributeName="financialDocumentTypeCode" noInquiry="true" />
				<field attributeName="financialBalanceTypeCode" noInquiry="true" />
			</resultFields>
		</lookup>

		<attributes>
			<attributeReference name="universityFiscalYear" 
								sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
								sourceAttributeName="genericFiscalYear">
				<required>true</required>
			</attributeReference>
			
			<attributeReference name="chartOfAccountsCode" 
								sourceClassName="org.kuali.module.chart.bo.Chart" 
								sourceAttributeName="chartOfAccountsCode">
								
				<required>true</required>
				<control>
					<select valuesFinderClass="org.kuali.core.lookup.keyvalues.ChartValuesFinder"/>					
				</control>
			</attributeReference>

			<attributeReference name="financialObjectCode" 
								sourceClassName="org.kuali.module.chart.bo.ObjectCode" 
								sourceAttributeName="financialObjectCode">
				<required>true</required>
			</attributeReference>


			<attribute name="financialDocumentTypeCode" forceUppercase="false">
				<label>Document Type Code</label>
				<shortLabel>Type</shortLabel>

				<maxLength>4</maxLength>
				<validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
				<required>true</required>
				<control>
					<text size="4" />
				</control>

				<summary>Document Type Code, referring to what class or type of document.</summary>
				<description>
					Document Type Code, referring to what class or type of document.
				</description>
				
			</attribute>

			<attribute name="financialBalanceTypeCode" forceUppercase="true">
				<label>Balance Type Code</label>
				<shortLabel>Balance Type</shortLabel>

				<maxLength>2</maxLength>
				<validationPattern><alphaNumeric /></validationPattern>
				<required>true</required>
				<control>
					<text size="2" />
				</control>

				<summary>Balance Type Code</summary>
				<description>The type of balance this offsetting definition is relevant for.</description>
			</attribute>
			
 			<attributeReference name="versionNumber" 
 				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
 				sourceAttributeName="versionNumber" />

		</attributes>
	</businessObject>
</dictionaryEntry>

