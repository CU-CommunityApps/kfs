<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.chart.bo.OrganizationRoutingModelName">
        <inquiry>
            <title>Account Delegate Model Name Inquiry</title>

            <inquirySections>
            	<inquirySection title="Account Delegate Model Name">
            		<inquiryFields>
		                <field attributeName="chartOfAccountsCode" />
		                <field attributeName="organizationCode" />
		                <field attributeName="organizationRoutingModelName" />
            		</inquiryFields>
            	</inquirySection>
            	<inquirySection title="Account Delegate Model Delegates">
            		<inquiryFields>
            			<inquiryCollection name="organizationRoutingModel" businessObjectClass="org.kuali.module.chart.bo.OrganizationRoutingModel">
            				<field attributeName="financialDocumentTypeCode" />
            				<field attributeName="accountDelegatePrimaryRoutingIndicator" />
            				<field attributeName="approvalFromThisAmount" />
            				<field attributeName="approvalToThisAmount" />
            				<field attributeName="accountDelegate.personName" />
            			</inquiryCollection>
            		</inquiryFields>
            	</inquirySection>
            </inquirySections>
        </inquiry>

        <lookup>
        	<lookupableID>organizationRoutingModelLookupable</lookupableID>
            <title>Account Delegate Model Name Lookup</title>

            <instructions>Look up an Account Delegate Model Name</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="organizationRoutingModelName" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="chartOfAccountsCode" required="false" />
                <lookupField attributeName="organizationCode" required="false" />
                <lookupField attributeName="organizationRoutingModelName" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="organizationCode" />
                <field attributeName="organizationRoutingModelName" forceInquiry="true" />
            </resultFields>
        </lookup>
        
        <titleAttribute>organizationRoutingModelName</titleAttribute>

        <attributes>

            <attribute name="chartOfAccountsCode" forceUppercase="true">
                <label>Chart Of Accounts Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>
			</attribute>

            <attribute name="organizationCode" forceUppercase="true">
                <label>Organization Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>
			</attribute>

            <attribute name="organizationRoutingModelName" forceUppercase="true">
                <label>Account Delegate Model Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="12" />
                </control>
			</attribute>

            <attributeReference name="versionNumber" 
            					sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
            					sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Account Delegate Model Name</objectLabel>
    </businessObject>
</dictionaryEntry>
