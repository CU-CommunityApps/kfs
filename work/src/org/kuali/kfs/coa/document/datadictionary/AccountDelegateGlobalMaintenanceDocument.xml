<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AccountDelegateGlobalMaintenanceDocument" parent="AccountDelegateGlobalMaintenanceDocument-parentBean" />

  <bean id="AccountDelegateGlobalMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.coa.businessobject.AccountDelegateGlobal" />
    <property name="maintainableClass" value="org.kuali.kfs.coa.document.AccountDelegateGlobalMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AccountDelegateGlobalMaintenanceDocument-EditGlobalDelegate" />
        <ref bean="AccountDelegateGlobalMaintenanceDocument-EditListofAccounts" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentNumber</value>
      </list>
    </property>
    <property name="label" value="Account Delegate Global" />
    <property name="shortLabel" value="Account Delegate Global" />
    <property name="summary" value="Global Account Delegate Maintenance Document" />
    <property name="description" value="Document used to create or update global account delegate document." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.coa.businessobject.AccountDelegateGlobal" p:parameterName="DELEGATE_GLOBAL" />
    </property>
    <property name="documentTypeName" value="AccountDelegateGlobalMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.coa.document.validation.impl.DelegateGlobalRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.coa.document.validation.impl.DelegateGlobalPreRules" />
    <property name="documentTypeCode" value="GDLG" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/AccountService.js</value>
        <value>../scripts/chart/accountGlobal.js</value>
        <value>../scripts/kfs/objectInfo.js</value>
      </list>
    </property>
    <property name="workflowProperties" >
      <ref bean="AccountDelegateGlobalMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AccountDelegateGlobalMaintenanceDocument-EditGlobalDelegate" parent="AccountDelegateGlobalMaintenanceDocument-EditGlobalDelegate-parentBean" />

  <bean id="AccountDelegateGlobalMaintenanceDocument-EditGlobalDelegate-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Global Delegate" />
    <property name="title" value="Edit Global Delegate" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="delegateGlobals" />
          <property name="businessObjectClass" value="org.kuali.kfs.coa.businessobject.AccountDelegateGlobalDetail" />
          <property name="sourceClassName" value="org.kuali.kfs.coa.businessobject.AccountDelegate" />
          <property name="summaryTitle" value="Account Delegate" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentTypeCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegatePrimaryRoutingIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.principalName" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentTypeCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegatePrimaryRoutingIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegateStartDate"
                    p:required="true"
                    p:defaultValueFinderClass="org.kuali.kfs.sys.businessobject.defaultvalue.CurrentDateMMDDYYYYFinder" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.principalName"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.name"
                    p:unconditionallyReadOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegateUniversalId"
                    p:unconditionallyReadOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="approvalFromThisAmount"
                    p:defaultValue="0.00" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="approvalToThisAmount"
                    p:defaultValue="0.00" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="includeMultipleLookupLine" value="false" />
          <property name="duplicateIdentificationFields">
          	<list>
          		<bean parent="MaintainableFieldDefinition" p:name="accountDelegate.principalName" />
          		<bean parent="MaintainableFieldDefinition" p:name="financialDocumentTypeCode" />
          	</list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="AccountDelegateGlobalMaintenanceDocument-EditListofAccounts" parent="AccountDelegateGlobalMaintenanceDocument-EditListofAccounts-parentBean" />

  <bean id="AccountDelegateGlobalMaintenanceDocument-EditListofAccounts-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit List of Accounts" />
    <property name="title" value="Edit List of Accounts" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="accountGlobalDetails" />
          <property name="businessObjectClass" value="org.kuali.kfs.coa.businessobject.AccountGlobalDetail" />
          <property name="sourceClassName" value="org.kuali.kfs.coa.businessobject.Account" />
          <property name="summaryTitle" value="Account" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="account.accountName" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode"
                    p:required="true"
                    p:template="chartOfAccountsCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountNumber"
                    p:required="true"
                    p:template="accountNumber"
                    p:webUILeaveFieldFunction="loadAccountName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="account.accountName"
                    p:unconditionallyReadOnly="true"
                    p:template="accountName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
          <property name="duplicateIdentificationFields">
          	<list>
          		<bean parent="MaintainableFieldDefinition" p:name="chartOfAccountsCode" />
          		<bean parent="MaintainableFieldDefinition" p:name="accountNumber" />
          	</list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="AccountDelegateGlobalMaintenanceDocument-workflowProperties" parent="AccountDelegateGlobalMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="AccountDelegateGlobalMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.accountGlobalDetails" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>

