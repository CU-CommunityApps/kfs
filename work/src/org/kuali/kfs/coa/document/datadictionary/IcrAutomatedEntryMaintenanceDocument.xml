<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.IcrAutomatedEntry</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.chart.rules.IcrAutomatedEntryRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.chart.rules.IcrAutomatedEntryPreRules</preRulesCheckClass>
        <documentAuthorizerClass>org.kuali.core.document.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>

        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_MAINTENANCE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiIcrAutomatedEntryMaintenanceDocument</documentTypeName>
        <documentTypeCode>ICRE</documentTypeCode>
        <label>Indirect Cost Recovery Automated Entry Maintenance Document</label>
        <shortLabel>ICRAutotomatedEntryMaintenanceDoc</shortLabel>
        <summary>Indirect Cost Recovery Automated Entry Maintenance Document</summary>
        <description>Maintenance document which allows you to create new Indirect Cost Recovery Automated Entries, or modify existing Indirect Cost Recovery Automated Entries.</description>
        <help securityGroupName="ChartMaintenanceEDoc" parameterName="CHART_HELP_INDIRECT_COST_RECOVERY_AUTOMATED_ENTRY" />
        
        <lockingKeys>
            <field attributeName="universityFiscalYear" />
            <field attributeName="financialIcrSeriesIdentifier" />
            <field attributeName="balanceTypeCode" />
            <field attributeName="awardIndrCostRcvyEntryNbr" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="universityFiscal" attributeToHighlightOnFail="universityFiscalYear" />
            <reference attributeName="financialBalanceTyp" attributeToHighlightOnFail="balanceTypeCode" />
        
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit ICR Automated Entry">
                <maintainableItems>
                    <maintainableField name="universityFiscalYear" required="true" />
                    <maintainableField name="financialIcrSeriesIdentifier" required="true" />
                    <maintainableField name="balanceTypeCode" required="true" />
                    <maintainableField name="awardIndrCostRcvyEntryNbr" required="true" />
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="accountNumber" required="true" />
                    <maintainableField name="subAccountNumber" required="true" />
                    <maintainableField name="financialObjectCode" required="true" />
                    <maintainableField name="financialSubObjectCode" required="true" />
                    <maintainableField name="offsetBalanceSheetObjectCodeNumber" required="true" />
                    <maintainableField name="transactionDebitIndicator"  />
                    <maintainableField name="awardIndrCostRcvyRatePct" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>

</dictionaryEntry>