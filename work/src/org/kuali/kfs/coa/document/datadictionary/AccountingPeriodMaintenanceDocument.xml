<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.AccountingPeriod</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.chart.rules.AccountingPeriodRule</businessRulesClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AccountingPeriodMaintenanceDocument</documentTypeName>
        <documentTypeCode>APRD</documentTypeCode>

        <label>Accounting Period</label>

        <summary>Accounting Period maintenance document</summary>
        <description>Document used to create or update Accounting Period objects</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="AccountingPeriod" parameterName="ACCOUNTING_PERIOD" />

        <lockingKeys>
            <field attributeName="universityFiscalYear" />
            <field attributeName="universityFiscalPeriodCode" />
        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Accounting Period">
                <maintainableItems>
                    <maintainableField name="universityFiscalYear" required="true" />
                    <maintainableField name="universityFiscalPeriodCode" required="true" />
                    <maintainableField name="universityFiscalPeriodName" required="true" />
                    <maintainableField name="universityFiscalPeriodStatusCode" required="true" />
                    <maintainableField name="budgetRolloverIndicator" required="false" />
                    <maintainableField name="universityFiscalPeriodEndDate" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
