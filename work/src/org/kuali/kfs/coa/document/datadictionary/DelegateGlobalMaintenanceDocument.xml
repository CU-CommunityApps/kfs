<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.DelegateGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.chart.maintenance.DelegateGlobalMaintainableImpl</maintainableClass>

        <businessRulesClass>org.kuali.module.chart.rules.DelegateGlobalRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.chart.rules.DelegateGlobalPreRules</preRulesCheckClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>DelegateGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>GDLG</documentTypeCode>

		<webScriptFile>../dwr/interface/AccountService.js</webScriptFile>
		<webScriptFile>../scripts/chart/accountGlobal.js</webScriptFile>
		<webScriptFile>../scripts/kfs/objectInfo.js</webScriptFile>

        <label>Account Delegate Global</label>

        <summary>Global Account Delegate Maintenance Document</summary>
        <description>Document used to create or update global account delegate document.</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="DelegateGlobal" parameterName="DELEGATE_GLOBAL" />

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>

        <maintainableSections>
            <maintainableSection title="Edit Global Delegate">
                <maintainableItems>
                    <maintainableCollection name="delegateGlobals" businessObjectClass="org.kuali.module.chart.bo.DelegateGlobalDetail"  sourceClassName="org.kuali.module.chart.bo.Delegate" sourceAttributeName="delegateGlobals" includeMultipleLookupLine="false" summaryTitle="Account Delegate">
                        <maintainableField name="financialDocumentTypeCode" required="true" readOnlyAfterAdd="false" />
                        <maintainableField name="accountDelegatePrimaryRoutingIndicator" readOnlyAfterAdd="false" />
                        <maintainableField name="accountDelegateStartDate" required="true" readOnlyAfterAdd="false" >
                            <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder</defaultValueFinderClass>
                        </maintainableField>
                        <maintainableField name="accountDelegate.personUserIdentifier" required="true" readOnlyAfterAdd="false" />
                        <maintainableField name="accountDelegate.personName" required="false" readOnly="true" />
                        <maintainableField name="accountDelegateUniversalId" required="false" readOnly="true" />
                        <maintainableField name="approvalFromThisAmount">
                            <defaultValue>0.00</defaultValue>
                        </maintainableField>
                        <maintainableField name="approvalToThisAmount" readOnlyAfterAdd="false">
                            <defaultValue>0.00</defaultValue>
                        </maintainableField>
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                        <summaryFields>
                            <summaryField name="financialDocumentTypeCode" />
                            <summaryField name="accountDelegatePrimaryRoutingIndicator" />
                            <summaryField name="accountDelegate.personUserIdentifier" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="accountDelegate.personUserIdentifier"/>
                            <duplicateIdentificationField name="financialDocumentTypeCode"/>
                        </duplicateIdentificationFields>
                    </maintainableCollection>
	            </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Edit List of Accounts">
                <maintainableItems>
                    <maintainableCollection name="accountGlobalDetails" businessObjectClass="org.kuali.module.chart.bo.AccountGlobalDetail" sourceClassName="org.kuali.module.chart.bo.Account" sourceAttributeName="accountGlobalDetails" summaryTitle="Account">
                        <maintainableField name="chartOfAccountsCode" template="chartOfAccountsCode" required="true" readOnlyAfterAdd="false" />
                        <maintainableField name="accountNumber" template="accountNumber" webUILeaveFieldFunction="loadAccountName" required="true" readOnlyAfterAdd="false" />
                        <maintainableField name="account.accountName" template="accountName" readOnly="true" />
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                        <summaryFields>
                            <summaryField name="chartOfAccountsCode" />
                            <summaryField name="accountNumber" />
                            <summaryField name="account.accountName" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="chartOfAccountsCode"/>
                            <duplicateIdentificationField name="accountNumber"/>
                        </duplicateIdentificationFields>                          
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>

        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>