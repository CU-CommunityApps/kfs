<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="DelegateGlobalMaintenanceDocument" parent="DelegateGlobalMaintenanceDocument-parentBean" />

  <bean id="DelegateGlobalMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.chart.bo.DelegateGlobal" />
    <property name="maintainableClass" value="org.kuali.module.chart.maintenance.DelegateGlobalMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="DelegateGlobalMaintenanceDocument-EditGlobalDelegate" />
        <ref bean="DelegateGlobalMaintenanceDocument-EditListofAccounts" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>documentNumber</value>
      </list>
    </property>
    <property name="label" value="Account Delegate Global" />
    <property name="shortLabel" value="Account Delegate Global" />
    <property name="summary" value="Global Account Delegate Maintenance Document" />
    <property name="description" value="Document used to create or update global account delegate document." />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CA"
            p:parameterName="DELEGATE_GLOBAL"
            p:parameterDetailType="DelegateGlobal" />
    </property>
    <property name="documentTypeName" value="DelegateGlobalMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.chart.rules.DelegateGlobalRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.module.chart.rules.DelegateGlobalPreRules" />
    <property name="documentTypeCode" value="GDLG" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/AccountService.js</value>
        <value>../scripts/chart/accountGlobal.js</value>
        <value>../scripts/kfs/objectInfo.js</value>
      </list>
    </property>
    <property name="workflowProperties" >
      <ref bean="DelegateGlobalMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="DelegateGlobalMaintenanceDocument-EditGlobalDelegate" parent="DelegateGlobalMaintenanceDocument-EditGlobalDelegate-parentBean" />

  <bean id="DelegateGlobalMaintenanceDocument-EditGlobalDelegate-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Global Delegate" />
    <property name="title" value="Edit Global Delegate" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="delegateGlobals" />
          <property name="businessObjectClass" value="org.kuali.module.chart.bo.DelegateGlobalDetail" />
          <property name="summaryTitle" value="Account Delegate" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentTypeCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegatePrimaryRoutingIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.personUserIdentifier" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="financialDocumentTypeCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegatePrimaryRoutingIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegateStartDate"
                    p:required="true"
                    p:defaultValueFinderClass="org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.personUserIdentifier"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegate.personName"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountDelegateUniversalId"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="approvalFromThisAmount"
                    p:defaultValue="0.00" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="approvalToThisAmount"
                    p:defaultValue="0.00" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
          <property name="includeMultipleLookupLine" value="false" />
        </bean>
      </list>
    </property>
  </bean>
  <bean id="DelegateGlobalMaintenanceDocument-EditListofAccounts" parent="DelegateGlobalMaintenanceDocument-EditListofAccounts-parentBean" />

  <bean id="DelegateGlobalMaintenanceDocument-EditListofAccounts-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit List of Accounts" />
    <property name="title" value="Edit List of Accounts" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="accountGlobalDetails" />
          <property name="businessObjectClass" value="org.kuali.module.chart.bo.AccountGlobalDetail" />
          <property name="summaryTitle" value="Account" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="account.accountName" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode"
                    p:required="true"
                    p:template="chartOfAccountsCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="accountNumber"
                    p:required="true"
                    p:template="accountNumber"
                    p:webUILeaveFieldFunction="loadAccountName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="account.accountName"
                    p:readOnly="true"
                    p:template="accountName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="DelegateGlobalMaintenanceDocument-workflowProperties" parent="DelegateGlobalMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="DelegateGlobalMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.accountGlobalDetails" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
