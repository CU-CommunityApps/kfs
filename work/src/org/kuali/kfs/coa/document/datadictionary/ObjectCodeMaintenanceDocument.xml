<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.ObjectCode</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.chart.rules.ObjectCodeRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.chart.rules.ObjectCodePreRules</preRulesCheckClass>


        <documentAuthorizerClass>org.kuali.core.document.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_GLOBAL_OBJECT_CODE_USER</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiObjectCodeMaintenanceDocument</documentTypeName>
        <documentTypeCode>OBJT</documentTypeCode>

        <label>Object Code Maintenance Document</label>
        <shortLabel>OCMainDoc</shortLabel>

        <summary>Object Code maintenance document</summary>
        <description>Document used to create or update Object Code objects</description>

        <lockingKeys>
            <field attributeName="universityFiscalYear" />
            <field attributeName="chartOfAccountsCode" />
            <field attributeName="financialObjectCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="universityFiscal" attributeToHighlightOnFail="universityFiscalYear" />
            <reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />            
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Object Code">
                <maintainableItems>
                    <maintainableField name="universityFiscalYear" required="true">
                        <defaultValueFinderClass>org.kuali.core.lookup.valueFinder.FiscalYearFinder</defaultValueFinderClass>
                    </maintainableField>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="financialObjectCode" required="true" />
                    <maintainableField name="financialObjectCodeName" required="true" />
                    <maintainableField name="financialObjectCodeShortName" required="true" />
                    <maintainableField name="reportsToChartOfAccountsCode" required="true" readOnly="true" />
                    <maintainableField name="reportsToFinancialObjectCode" required="true" />
                    <maintainableField name="financialObjectTypeCode" required="true" />
                    <maintainableField name="financialObjectLevelCode" required="true" />
                    <maintainableField name="financialObjectSubTypeCode" required="true" />
                    <maintainableField name="historicalFinancialObjectCode" />
                    <maintainableField name="financialObjectActiveCode">
                        <defaultValue>true</defaultValue>
                    </maintainableField>
                    <maintainableField name="financialBudgetAggregationCd" required="true" />
                    <maintainableField name="finObjMandatoryTrnfrelimCd" required="true" />
                    <maintainableField name="financialFederalFundedCode" />
                    <maintainableField name="nextYearFinancialObjectCode" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
