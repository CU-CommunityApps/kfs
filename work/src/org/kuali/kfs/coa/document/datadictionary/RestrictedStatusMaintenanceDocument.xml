<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RestrictedStatusMaintenanceDocument" parent="RestrictedStatusMaintenanceDocument-parentBean" />

  <bean id="RestrictedStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.coa.businessobject.RestrictedStatus" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RestrictedStatusMaintenanceDocument-EditRestrictedStatus" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>accountRestrictedStatusCode</value>
      </list>
    </property>
    <property name="label" value="Restricted Status" />
    <property name="shortLabel" value="Restricted Status" />
    <property name="summary" value="Restricted Status Maintenance Document" />
    <property name="description" value="Document used to create or update RestrictedStatus objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-COA"
            p:parameterName="RESTRICTED_STATUS"
            p:parameterDetailType="RestrictedStatus" />
    </property>
    <property name="documentTypeName" value="RestrictedStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.web.struts.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RSTA" />
    <property name="workflowProperties" >
      <ref bean="RestrictedStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RestrictedStatusMaintenanceDocument-EditRestrictedStatus" parent="RestrictedStatusMaintenanceDocument-EditRestrictedStatus-parentBean" />

  <bean id="RestrictedStatusMaintenanceDocument-EditRestrictedStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Restricted Status" />
    <property name="title" value="Edit Restricted Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="accountRestrictedStatusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="accountRestrictedStatusName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="RestrictedStatusMaintenanceDocument-workflowProperties" parent="RestrictedStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="RestrictedStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
