<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.chart.bo.ObjLevel</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.chart.rules.ObjectLevelRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>ObjLevelMaintenanceDocument</documentTypeName>
        <documentTypeCode>OBJL</documentTypeCode>

        <label>Object Level</label>

        <summary>Object Level maintenance document</summary>
        <description>Document used to create or update Object Level objects</description>
        <help parameterNamespace="KFS-CA" parameterDetailType="ObjLevel" parameterName="OBJECT_LEVEL" />

        <lockingKeys>
            <field attributeName="chartOfAccountsCode" />
            <field attributeName="financialObjectLevelCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />
            <reference attributeName="financialConsolidationObject" attributeToHighlightOnFail="financialConsolidationObjectCode" />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Object Level">
                <maintainableItems>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="financialObjectLevelCode" required="true" />
                    <maintainableField name="financialObjectLevelName" required="true" />
                    <maintainableField name="financialObjectLevelShortNm" required="true" />
                    <maintainableField name="financialConsolidationObjectCode" required="true" />
                    <maintainableField name="financialObjectLevelActiveIndicator" >
                        <defaultValue>true</defaultValue>
                    </maintainableField>
                    <maintainableField name="financialReportingSortCode" required="true" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
