<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.VendorCustomerNumber">
	<lookup>
            <lookupableID>vendorCustomerNumberLookupable</lookupableID>
            
            <title>Vendor Customer Number Lookup</title>

            <instructions>Lookup an Vendor Customer Number</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorCustomerNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="vendorHeaderGeneratedIdentifier" required="true" />
                <lookupField attributeName="vendorDetailAssignedIdentifier" required="true" />
                <lookupField attributeName="vendorCustomerNumber" required="false" />
                <lookupField attributeName="chartOfAccountsCode" required="false" />
                <lookupField attributeName="vendorOrganizationCode" required="false" />
                <lookupField attributeName="active" required="false">
                	<defaultValue>Y</defaultValue>
                </lookupField> 
            </lookupFields>

            <resultFields>
                <field attributeName="vendorCustomerNumber" />
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="vendorOrganizationCode" />
                <field attributeName="active" />
            </resultFields>
        </lookup>	
        <attributes>
            <attribute name="vendorCustomerNumber" forceUppercase="true">
                <label>Customer Number</label>
                <shortLabel>Customer #</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" />
                </validationPattern>
                <required>true</required>

                <control>
                    <text size="32" />
                </control>

            </attribute>

            <attributeReference name="chartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <required>true</required>
                <control>
                    <select valuesFinderClass="org.kuali.module.chart.lookup.keyvalues.ChartValuesFinder" />
                </control>
            </attributeReference>

            <attributeReference name="vendorOrganizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode" >
                <required>false</required>
            </attributeReference>

            <attribute name="vendorCustomerNumberGeneratedIdentifier" forceUppercase="true">
                <label>Customer Number Id</label>
                <shortLabel>Customer # ID</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern>
                    <numeric />
                </validationPattern>

                <control>
                    <hidden />
                </control>

            </attribute>
            
            <attributeReference name="newCollectionRecord" 
                                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                                sourceAttributeName="newCollectionRecord" />

            <attributeReference name="vendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier" />
            <attributeReference name="vendorDetailAssignedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorDetailAssignedIdentifier" />
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator"/>
        </attributes>
    </businessObject>
</dictionaryEntry>
