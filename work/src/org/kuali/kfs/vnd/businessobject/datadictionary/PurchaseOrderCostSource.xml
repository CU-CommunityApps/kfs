<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.PurchaseOrderCostSource">

        <inquiry>
            <title>Purchase Order Cost Source Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="purchaseOrderCostSourceCode" />
                <field attributeName="purchaseOrderCostSourceDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Purchase Order Cost Source Lookup</title>

            <instructions>Lookup an Purchase Order Cost Source</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="purchaseOrderCostSourceDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="purchaseOrderCostSourceCode" required="false" />
                <lookupField attributeName="purchaseOrderCostSourceDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="purchaseOrderCostSourceCode" />
                <field attributeName="purchaseOrderCostSourceDescription" />
                <field attributeName="active" />
			</resultFields>
        </lookup>

        <titleAttribute>purchaseOrderCostSourceCode</titleAttribute>

        <attributes>

            <attribute name="purchaseOrderCostSourceCode" forceUppercase="true">
                <label>Purchase Order Cost Source Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="purchaseOrderCostSourceDescription" forceUppercase="true">
                <label>Purchase Order Cost Source Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Purchase Order Cost Source</objectLabel>
    </businessObject>
</dictionaryEntry>
