<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.OwnershipType">

        <inquiry>
            <title>Ownership Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorOwnershipCode" />
                <field attributeName="vendorOwnershipDescription" />
                <field attributeName="vendorOwnershipCategoryAllowedIndicator" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Ownership Type Lookup</title>

            <instructions>Lookup an Ownership Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorOwnershipDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="vendorOwnershipCode" required="false" />
                <lookupField attributeName="vendorOwnershipDescription" required="false" />
                <lookupField attributeName="vendorOwnershipCategoryAllowedIndicator" required="false" />               
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="vendorOwnershipCode" />
                <field attributeName="vendorOwnershipDescription" />
                <field attributeName="vendorOwnershipCategoryAllowedIndicator" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorOwnershipCode</titleAttribute>

        <attributes>

           <attribute name="vendorOwnershipCode" forceUppercase="true">
                <label>Vendor Ownership Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>
                <required>true</required>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="vendorOwnershipDescription" forceUppercase="true">
                <label>Vendor Ownership Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>
                <required>true</required>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attribute name="vendorOwnershipCategoryAllowedIndicator" forceUppercase="true">
                <label>Vendor Ownership Category Allowed Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
