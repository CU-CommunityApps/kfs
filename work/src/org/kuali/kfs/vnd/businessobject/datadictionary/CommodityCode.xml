<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.CommodityCode">

        <inquiry>
            <title>Commodity Code Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="purchasingCommodityCode" />
                <field attributeName="commodityDescription" />
                <field attributeName="salesTaxIndicator" />
                <field attributeName="restrictedItemsIndicator" />
                <field attributeName="restrictedMaterialCode" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Commodity Code Lookup</title>

            <instructions>Lookup a Commodity Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="purchasingCommodityCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="purchasingCommodityCode" required="false" />
                <lookupField attributeName="commodityDescription" required="false" />
                <lookupField attributeName="salesTaxIndicator" required="false" />
                <lookupField attributeName="restrictedItemsIndicator" required="false" />
                <lookupField attributeName="restrictedMaterialCode" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="purchasingCommodityCode" />
                <field attributeName="commodityDescription" />
 				<field attributeName="salesTaxIndicator" />
				<field attributeName="restrictedItemsIndicator" />
				<field attributeName="restrictedMaterial.restrictedMaterialDescription" />               
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>purchasingCommodityCode</titleAttribute>

        <attributes>
        	<attribute name="purchasingCommodityCode" forceUppercase="true">
        		<label>Commodity Code</label>
        		<shortLabel>Comm Code</shortLabel>
        		
        		<maxLength>40</maxLength>
        		<validationPattern><anyCharacter/></validationPattern>
        		
        		<control>
        			<text size="42"/>
        		</control>       		
        	</attribute>
        	
        	<attribute name="commodityDescription">
        		<label>Commodity Description</label>
        		<shortLabel>Comm Desc</shortLabel>
        		
        		<maxLength>45</maxLength>
        		<validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
        		
        		<control>
        			<text size="47"/>
        		</control>       		
        	</attribute>
        	
            <attribute name="salesTaxIndicator" forceUppercase="true">
                <label>Sales Tax Indicator</label>
                <shortLabel>Sales Tax</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>
            </attribute>
            
            <attribute name="restrictedItemsIndicator" forceUppercase="true">
                <label>Restricted Items Indicator</label>
                <shortLabel>Restricted Items</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>
            </attribute>
            
            <attribute name="restrictedMaterialCode" forceUppercase="true">
                <label>Restricted Material</label>
                <shortLabel>Restricted Material</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <select valuesFinderClass="org.kuali.module.vendor.lookup.keyvalues.RestrictedMaterialValuesFinder"/>
                </control>
            </attribute>
            
            <attributeReference name="restrictedMaterial.restrictedMaterialDescription" sourceClassName="org.kuali.module.purap.bo.RestrictedMaterial" sourceAttributeName="restrictedMaterialDescription">
            	<label>Restricted Material</label>
            </attributeReference>                            	
        	
        	<attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        	
        </attributes>
        
        <objectLabel>Commodity Code</objectLabel>
    </businessObject>
</dictionaryEntry>        