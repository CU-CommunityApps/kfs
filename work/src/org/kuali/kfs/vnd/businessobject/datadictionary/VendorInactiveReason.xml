<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.vendor.bo.VendorInactiveReason">

        <inquiry>
            <title>Vendor Inactive Reason Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="vendorInactiveReasonCode" />
                <field attributeName="vendorInactiveReasonDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Vendor Inactive Reason Lookup</title>

            <instructions>Look up a Vendor Inactive Reason</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="vendorInactiveReasonDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="vendorInactiveReasonCode" required="false" />
                <lookupField attributeName="vendorInactiveReasonDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="vendorInactiveReasonCode" />
                <field attributeName="vendorInactiveReasonDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>vendorInactiveReasonCode</titleAttribute>

        <attributes>

            <attribute name="vendorInactiveReasonCode" forceUppercase="true">
                <label>Vendor Inactive Reason Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="vendorInactiveReasonDescription" forceUppercase="true">
                <label>Vendor Inactive Reason Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

        </attributes>
        <objectLabel>Vendor Inactive Reason</objectLabel>
    </businessObject>
</dictionaryEntry>
