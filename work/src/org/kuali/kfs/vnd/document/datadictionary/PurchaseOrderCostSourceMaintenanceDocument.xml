<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderCostSourceMaintenanceDocument" parent="PurchaseOrderCostSourceMaintenanceDocument-parentBean" />

  <bean id="PurchaseOrderCostSourceMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.vnd.businessobject.PurchaseOrderCostSource" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PurchaseOrderCostSourceMaintenanceDocument-EditCostSource" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>purchaseOrderCostSourceCode</value>
      </list>
    </property>
    <property name="label" value="Cost Source" />
    <property name="shortLabel" value="Cost Source" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.vnd.businessobject.PurchaseOrderCostSource" p:parameterName="PURCHASE_ORDER_COST_SOURCE" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderCostSourceMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMCS" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderCostSourceMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PurchaseOrderCostSourceMaintenanceDocument-EditCostSource" parent="PurchaseOrderCostSourceMaintenanceDocument-EditCostSource-parentBean" />

  <bean id="PurchaseOrderCostSourceMaintenanceDocument-EditCostSource-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Cost Source" />
    <property name="title" value="Edit Cost Source" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="purchaseOrderCostSourceCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="purchaseOrderCostSourceDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemUnitPriceLowerVariancePercent"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemUnitPriceUpperVariancePercent"
              p:required="true" />            
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderCostSourceMaintenanceDocument-workflowProperties" parent="PurchaseOrderCostSourceMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderCostSourceMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
