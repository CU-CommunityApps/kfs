<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CommodityCodeMaintenanceDocument" parent="CommodityCodeMaintenanceDocument-parentBean" />

  <bean id="CommodityCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.vendor.bo.CommodityCode" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CommodityCodeMaintenanceDocument-CommodityCode" />
        <ref bean="CommodityCodeMaintenanceDocument-ContractManagers" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>purchasingCommodityCode</value>
      </list>
    </property>
    <property name="label" value="Commodity Code" />
    <property name="shortLabel" value="Commodity Code" />
    <property name="documentTypeName" value="CommodityCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMCC" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_CONTRACT_MANAGERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CommodityCodeMaintenanceDocument-CommodityCode" parent="CommodityCodeMaintenanceDocument-CommodityCode-parentBean" />

  <bean id="CommodityCodeMaintenanceDocument-CommodityCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Commodity Code" />
    <property name="title" value="Commodity Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="purchasingCommodityCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="commodityDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="salesTaxIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedItemsIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="restrictedMaterialCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
  <bean id="CommodityCodeMaintenanceDocument-ContractManagers" parent="CommodityCodeMaintenanceDocument-ContractManagers-parentBean" />

  <bean id="CommodityCodeMaintenanceDocument-ContractManagers-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Contract Managers" />
    <property name="title" value="Contract Managers" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="commodityContractManagers" />
          <property name="businessObjectClass" value="org.kuali.module.vendor.bo.CommodityContractManager" />
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="purchasingCommodityCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="contractManagerCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
