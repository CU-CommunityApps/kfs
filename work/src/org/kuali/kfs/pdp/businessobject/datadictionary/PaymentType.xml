<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://rice.kuali.org/dd http://rice.kuali.org/dd/dd.xsd">

  <bean id="PaymentType" parent="PaymentType-parentBean" />

  <bean id="PaymentType-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.pdp.businessobject.PaymentType" />
    <property name="inquiryDefinition" >
      <ref bean="PaymentType-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="PaymentType-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Payment Type" />
    <property name="attributes" >
      <list>
        <ref bean="PaymentType-paymentTypeCode" />
        <ref bean="PaymentType-description" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="PaymentType-paymentTypeCode" parent="PaymentType-paymentTypeCode-parentBean" />

  <bean id="PaymentType-paymentTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="paymentTypeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Payment Type Code" />
    <property name="shortLabel" value="Payment Type Code" />
    <property name="maxLength" value="1" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="1" />
    </property>
    <property name="summary" value="Payment Type Code" />
    <property name="description" value="Payment Type Code" />
  </bean>
  
  <bean id="PaymentType-description" parent="PaymentType-description-parentBean" />

  <bean id="PaymentType-description-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="description" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Payment Type Description" />
    <property name="shortLabel" value="Payment Type Description" />
    <property name="maxLength" value="40" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="40" />
    </property>
    <property name="summary" value="Payment Type Description" />
    <property name="description" value="Payment Type Description" />
  </bean>
  
<!-- Business Object Inquiry Definition -->


  <bean id="PaymentType-inquiryDefinition" parent="PaymentType-inquiryDefinition-parentBean" />

  <bean id="PaymentType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="PaymentType Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="paymentTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="description" />
              
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="PaymentType-lookupDefinition" parent="PaymentType-lookupDefinition-parentBean" />

  <bean id="PaymentType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Payment Type Lookup" />
    <property name="instructions" value="Lookup a Payment Type" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>paymentTypeCode</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="paymentTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
        
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="paymentTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="description" />
      </list>
    </property>
  </bean>
</beans>
