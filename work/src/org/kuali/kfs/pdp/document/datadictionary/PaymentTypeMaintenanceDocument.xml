<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PaymentTypeMaintenanceDocument" parent="PaymentTypeMaintenanceDocument-parentBean" />

  <bean id="PaymentTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.pdp.businessobject.PaymentType" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PaymentTypeMaintenanceDocument-EditPaymentType" />
      </list>
    </property>
    
    <property name="lockingKeys" >
      <list>
        <value>paymentTypeCode</value>
      </list>
    </property>
    <property name="label" value="Payment Type" />
    <property name="shortLabel" value="Payment Type" />
    <property name="summary" value="Payment Type Maintenance Document" />
    <property name="description" value="Document used to create or update Payment Type Descriptions" />
    <property name="documentTypeName" value="PaymentTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMTP" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="allowsNewOrCopy" value="false" />
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PaymentTypeMaintenanceDocument-EditPaymentType" parent="PaymentTypeMaintenanceDocument-EditPaymentType-parentBean" />

  <bean id="PaymentTypeMaintenanceDocument-EditPaymentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Payment Type" />
    <property name="title" value="Edit Payment Type" />
    <property name="maintainableItems" >
      <list>
       <bean parent="MaintainableFieldDefinition"
              p:name="paymentTypeCode"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="description"
              p:required="true" />
      </list>
    </property>
  </bean>
  
  
</beans>
