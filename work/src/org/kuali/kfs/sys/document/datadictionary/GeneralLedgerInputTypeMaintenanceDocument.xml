<!-- Maintenance Section Definitions -->

  <bean id="GeneralLedgerInputTypeMaintenanceDocument-EditGeneralLedgerInputType" parent="GeneralLedgerInputTypeMaintenanceDocument-EditGeneralLedgerInputType-parentBean" />

  <bean id="GeneralLedgerInputTypeMaintenanceDocument-EditGeneralLedgerInputType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit General Ledger Input Type" />
    <property name="title" value="Edit General Ledger Input Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="inputTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTypeName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTypeActiveIndicator" 
              p:defaultValue="true"/>
        <bean parent="MaintainableFieldDefinition"
              p:name="transactionScrubberOffsetGenerationIndicator" 
              p:defaultValue="false"/>
      </list>
    </property>
  </bean>
