<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RoomMaintenanceDocument" parent="RoomMaintenanceDocument-parentBean" />

  <bean id="RoomMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.bo.Room" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RoomMaintenanceDocument-EditRoom" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="campus"
              p:attributeToHighlightOnFail="campusCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="building"
              p:attributeToHighlightOnFail="buildingCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>campusCode</value>
        <value>buildingCode</value>
        <value>buildingRoomNumber</value>
      </list>
    </property>
    <property name="label" value="Room" />
    <property name="shortLabel" value="Room" />
    <property name="summary" value="Room maintenance document" />
    <property name="description" value="Document used to create or update Room objects" />
    <property name="documentTypeName" value="RoomMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ROOM" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RoomMaintenanceDocument-EditRoom" parent="RoomMaintenanceDocument-EditRoom-parentBean" />

  <bean id="RoomMaintenanceDocument-EditRoom-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Room" />
    <property name="title" value="Edit Room" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="campusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingRoomNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingRoomDepartment" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingRoomType" />
        <bean parent="MaintainableFieldDefinition"
              p:name="buildingRoomDescription" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
