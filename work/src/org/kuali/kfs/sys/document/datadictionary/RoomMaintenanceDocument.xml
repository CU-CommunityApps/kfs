<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.kfs.bo.Room</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_MAINTENANCE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>RoomMaintenanceDocument</documentTypeName>
        <documentTypeCode>ROOM</documentTypeCode>

        <label>Room</label>

        <summary>Room maintenance document</summary>
        <description>Document used to create or update Room objects</description>
        <help parameterNamespace="KFS-SY" parameterDetailType="Room" parameterName="ROOM" />

        <lockingKeys>
            <field attributeName="campusCode" />
            <field attributeName="buildingCode" />
            <field attributeName="buildingRoomNumber" />
        </lockingKeys>

		<defaultExistenceChecks>
			<reference attributeName="campus" attributeToHighlightOnFail="campusCode" />
			<reference attributeName="building" attributeToHighlightOnFail="buildingCode" />
		</defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Room">
                <maintainableItems>
                    <maintainableField name="campusCode" required="true" />
                    <maintainableField name="buildingCode" required="true" />
                    <maintainableField name="buildingRoomNumber" required="true" />
                    <maintainableField name="buildingRoomDepartment" required="false" />
                    <maintainableField name="buildingRoomType" required="false" />
                    <maintainableField name="buildingRoomDescription" required="false" />
					<maintainableField name="active" />
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>