<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.kfs.bo.UnitOfMeasure">
 
        <inquiry>
            <title>Unit Of Measure Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="itemUnitOfMeasureCode" />
                        <field attributeName="itemUnitOfMeasureDescription" />
                        <field attributeName="active" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Unit Of Measure Lookup</title>

            <instructions>Look up a Unit Of Measure</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="itemUnitOfMeasureCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="itemUnitOfMeasureCode" required="false" />
                <lookupField attributeName="itemUnitOfMeasureDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="itemUnitOfMeasureCode" />
                <field attributeName="itemUnitOfMeasureDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="active" forceUppercase="true">
                <label>Active</label>
                <shortLabel>Active</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

			</attribute>

            <attribute name="itemUnitOfMeasureCode" forceUppercase="true">
                <label>Item Unit Of Measure Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="itemUnitOfMeasureDescription" forceUppercase="true">
                <label>Item Unit Of Measure Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Unit Of Measure</objectLabel>
    </businessObject>
</dictionaryEntry>
