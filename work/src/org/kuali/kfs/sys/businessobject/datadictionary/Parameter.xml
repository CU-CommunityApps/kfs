<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Parameter" parent="Parameter-parentBean" />

  <bean id="Parameter-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kns.bo.Parameter" />
    <property name="inquiryDefinition" >
      <ref bean="Parameter-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Parameter-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="parameterName" />
    <property name="objectLabel" value="Parameter" />
    <property name="attributes" >
      <list>
        <ref bean="Parameter-parameterNamespaceCode" />
        <ref bean="Parameter-parameterDetailTypeCode" />
        <ref bean="Parameter-parameterName" />
        <ref bean="Parameter-parameterValue" />
        <ref bean="Parameter-parameterDescription" />
        <ref bean="Parameter-parameterConstraintCode" />
        <ref bean="Parameter-parameterTypeCode" />
        <ref bean="Parameter-parameterType.name" />
        <ref bean="Parameter-parameterDetailType.parameterDetailTypeName" />
        <ref bean="Parameter-parameterNamespace.codeAndDescription" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Parameter-parameterNamespaceCode" parent="Parameter-parameterNamespaceCode-parentBean" />

  <bean id="Parameter-parameterNamespaceCode-parentBean" abstract="true" parent="Namespace-code">
    <property name="name" value="parameterNamespaceCode" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.rice.kns.lookup.keyvalues.NamespaceValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
    <property name="summary" value="The namespace that the parameter is associated with." />
    <property name="description" value="This value is used to categorize parameters by namespace." />
  </bean>
  <bean id="Parameter-parameterDetailTypeCode" parent="Parameter-parameterDetailTypeCode-parentBean" />

  <bean id="Parameter-parameterDetailTypeCode-parentBean" abstract="true" parent="ParameterDetailType-parameterDetailTypeCode">
  </bean>
  <bean id="Parameter-parameterName" parent="Parameter-parameterName-parentBean" />

  <bean id="Parameter-parameterName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="parameterName" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Parameter Name" />
    <property name="shortLabel" value="Parm Nm" />
    <property name="maxLength" value="100" />
    <property name="validationPattern" >
      <bean parent="AlphaNumericValidationPattern"
            p:allowUnderscore="true" />
    </property>
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="50" />
    </property>
    <property name="summary" value="The name of the parameter." />
    <property name="description" value="This will be used as the identifier for the parameter. Parameter
                    values will be accessed using this field and the namespace as the key." />
  </bean>
  <bean id="Parameter-parameterValue" parent="Parameter-parameterValue-parentBean" />

  <bean id="Parameter-parameterValue-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="parameterValue" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Parameter Value" />
    <property name="shortLabel" value="Parm Val" />
    <property name="maxLength" value="4000" />
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="3"
            p:cols="40" />
    </property>
    <property name="summary" value="The text associated with this parameter." />
    <property name="description" value="This field houses the actual value associated with the parameter. This
                    is what&apos;s returned by the KualiConfigurationService." />
  </bean>
  <bean id="Parameter-parameterDescription" parent="Parameter-parameterDescription-parentBean" />

  <bean id="Parameter-parameterDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="parameterDescription" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Parameter Description" />
    <property name="shortLabel" value="Desc" />
    <property name="maxLength" value="4000" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="3"
            p:cols="40" />
    </property>
    <property name="summary" value="The description of this parameter." />
    <property name="description" value="This field houses the purpose of this parameter." />
  </bean>
  <bean id="Parameter-parameterConstraintCode" parent="Parameter-parameterConstraintCode-parentBean" />

  <bean id="Parameter-parameterConstraintCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="parameterConstraintCode" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Parameter Constraint Code" />
    <property name="shortLabel" value="Cons. Code" />
    <property name="maxLength" value="1" />
    <property name="required" value="true" />
    <property name="control" >
      <bean parent="RadioControlDefinition"
            p:valuesFinderClass="org.kuali.rice.kns.lookup.keyvalues.ParameterOperatorValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
    <property name="summary" value="parameterConstraintCode" />
    <property name="description" value="parameterConstraintCode description..." />
  </bean>
  <bean id="Parameter-parameterTypeCode" parent="Parameter-parameterTypeCode-parentBean" />

  <bean id="Parameter-parameterTypeCode-parentBean" abstract="true" parent="ParameterType-code">
    <property name="name" value="parameterTypeCode" />
    <property name="control" >
      <bean parent="SelectControlDefinition"
            p:valuesFinderClass="org.kuali.rice.kns.lookup.keyvalues.ParameterTypeValuesFinder"
            p:includeKeyInLabel="false" />
    </property>
  </bean>
  <bean id="Parameter-parameterType.name" parent="Parameter-parameterType.name-parentBean" />

  <bean id="Parameter-parameterType.name-parentBean" abstract="true" parent="ParameterType-name">
    <property name="name" value="parameterType.name" />
    <property name="label" value="Parameter Type" />
    <property name="required" value="false" />
  </bean>
  <bean id="Parameter-parameterDetailType.parameterDetailTypeName" parent="Parameter-parameterDetailType.parameterDetailTypeName-parentBean" />

  <bean id="Parameter-parameterDetailType.parameterDetailTypeName-parentBean" abstract="true" parent="ParameterDetailType-parameterDetailTypeName">
    <property name="name" value="parameterDetailType.parameterDetailTypeName" />
    <property name="label" value="Component" />
    <property name="required" value="false" />
  </bean>
 
  <bean id="Parameter-parameterNamespace.codeAndDescription" parent="Parameter-parameterNamespace.codeAndDescription-parentBean" />

  <bean id="Parameter-parameterNamespace.codeAndDescription-parentBean" abstract="true" parent="Namespace-codeAndDescription">
    <property name="name" value="parameterNamespace.codeAndDescription" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Parameter-inquiryDefinition" parent="Parameter-inquiryDefinition-parentBean" />

  <bean id="Parameter-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Parameter Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Parameter Information" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="parameterNamespace.codeAndDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterDetailType.parameterDetailTypeName"
                    p:noInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterName"
                    p:noInquiry="true" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterValue" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterConstraintCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="parameterType.name" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Parameter-lookupDefinition" parent="Parameter-lookupDefinition-parentBean" />

  <bean id="Parameter-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Parameter Lookup" />
    <property name="lookupableID" value="parameterLookupable" />
    <property name="instructions" value="Look up a system parameter." />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
        <property name="attributeNames" >
          <list>
            <value>parameterName</value>
          </list>
        </property>
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="parameterNamespaceCode" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterDetailType.parameterDetailTypeName"
              p:noLookup="true" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterName"
              p:noLookup="true" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterValue" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterTypeCode" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="parameterNamespaceCode"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterDetailType.parameterDetailTypeName"
              p:maxLength="40"
              p:noInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterName"
              p:maxLength="40"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterDescription"
              p:maxLength="40" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterValue"
              p:maxLength="40" />
        <bean parent="FieldDefinition"
              p:attributeName="parameterConstraintCode" />
      </list>
    </property>
  </bean>
</beans>
