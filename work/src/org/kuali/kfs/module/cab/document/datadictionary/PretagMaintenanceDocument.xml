<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PretagMaintenanceDocument" parent="PretagMaintenanceDocument-parentBean" />

  <bean id="PretagMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cab.businessobject.Pretag" />
    <property name="maintainableClass" value="org.kuali.kfs.module.cab.document.PreTagMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PretagMaintenanceDocument-EditPreAssetTagging" />
        <ref bean="PretagMaintenanceDocument-EditListofPreAssetTaggingDetails" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="capitalAssetType"
              p:attributeToHighlightOnFail="capitalAssetTypeCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:attributeToHighlightOnFail="organizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="personUniversal"
              p:attributeToHighlightOnFail="personUniversal.personUserIdentifier"
              p:displayFieldName="Representative Universal Identifier" />
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>purchaseOrderNumber</value>
        <value>itemLineNumber</value>
      </list>
    </property>
    <property name="label" value="Pre-Asset Tagging" />
    <property name="shortLabel" value="Pre-Asset Tagging" />
    <property name="summary" value="Pre-Asset Tagging maintenance document" />
    <property name="description" value="Document used to create or update Pre-Asset Tagging" />
    <property name="documentTypeName" value="PretagMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.cab.document.validation.impl.PretagRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PTAG" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PretagMaintenanceDocument-EditPreAssetTagging" parent="PretagMaintenanceDocument-EditPreAssetTagging-parentBean" />

  <bean id="PretagMaintenanceDocument-EditPreAssetTagging-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Pre-Asset Tagging" />
    <property name="title" value="Edit Pre-Asset Tagging" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="purchaseOrderNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemLineNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="quantityInvoiced"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="manufacturerName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="manufacturerModelNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="vendorName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationInventoryName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personUniversal.personUserIdentifier" 
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personUniversal.personName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="assetTopsDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="pretagCreateDate"
              p:defaultValueFinderClass="org.kuali.kfs.sys.businessobject.defaultvalue.CurrentDateMMDDYYYYFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  <bean id="PretagMaintenanceDocument-EditListofPreAssetTaggingDetails" parent="PretagMaintenanceDocument-EditListofPreAssetTaggingDetails-parentBean" />

  <bean id="PretagMaintenanceDocument-EditListofPreAssetTaggingDetails-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit List of Pre-Asset Tagging Details" />
    <property name="title" value="Edit List of Pre-Asset Tagging Details" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="pretagDetails" />
          <property name="businessObjectClass" value="org.kuali.kfs.module.cab.businessobject.PretagDetail" />
          <property name="summaryTitle" value="Detail" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusTagNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="serialNumber" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="purchaseOrderNumber"
                    p:readOnlyAfterAdd="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="itemLineNumber"
                    p:readOnlyAfterAdd="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusTagNumber"
                    p:required="true"
                    p:readOnlyAfterAdd="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="serialNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="organizationTagNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="governmentTagNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="nationalStockNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="campusCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingCode"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingRoomNumber"
                    p:required="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="buildingSubRoomNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="pretagTagCreateDate"
                    p:defaultValueFinderClass="org.kuali.kfs.sys.businessobject.defaultvalue.CurrentDateMMDDYYYYFinder" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="active"
                    p:defaultValue="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
