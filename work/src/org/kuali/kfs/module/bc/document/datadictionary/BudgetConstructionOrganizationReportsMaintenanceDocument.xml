<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.budget.bo.BudgetConstructionOrganizationReports</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.budget.rules.BudgetConstructionOrganizationReportsRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>SY_MAINTAINENANCE_USERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>OrganizationReportsMaintenanceDocument</documentTypeName>
        <documentTypeCode>BCOR</documentTypeCode>

        <label>Organization Reports</label>
        <shortLabel>BC - Org Rpts Maint Doc</shortLabel>

        <summary>Budget Construction Organization Reports Maintenance Document</summary>
        <description>Document used to create or update Budget Construction Organization Reports Maintenance Document objects</description>

        <lockingKeys>
            <field attributeName="chartOfAccountsCode" />
            <field attributeName="organizationCode" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="chartOfAccounts" activeIndicatorAttributeName="finChartOfAccountActiveIndicator" activeIndicatorReversed="false" attributeToHighlightOnFail="chartOfAccountsCode" displayFieldName="Chart Of Accounts Code" />
            <reference attributeName="organization" activeIndicatorAttributeName="organizationActiveIndicator" activeIndicatorReversed="false" attributeToHighlightOnFail="organizationCode" displayFieldName="Organization Code" />
            <reference attributeName="reportsToChartOfAccounts" activeIndicatorAttributeName="finChartOfAccountActiveIndicator" activeIndicatorReversed="false" attributeToHighlightOnFail="reportsToChartOfAccountsCode" displayFieldName="Reports To Chart Of Accounts Code" />
            <reference attributeName="reportsToOrganization" activeIndicatorAttributeName="organizationActiveIndicator" activeIndicatorReversed="false" attributeToHighlightOnFail="reportsToOrganizationCode" displayFieldName="Reports To Organization Code" />
            <reference attributeName="responsibilityCenter" activeIndicatorAttributeName="responsibilityCenterActiveIndicator" activeIndicatorReversed="false" attributeToHighlightOnFail="responsibilityCenterCode" displayFieldName="Responsibility Center Code" />
 
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit BC Organization Reports">
                <maintainableItems>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="organizationCode" required="true" />
                    <maintainableField name="reportsToChartOfAccountsCode" required="true" />
                    <maintainableField name="reportsToOrganizationCode" required="true" />
                    <maintainableField name="responsibilityCenterCode" required="true" />               
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
