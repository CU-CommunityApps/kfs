<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.budget.bo.BudgetConstructionOrganizationReports">


        <inquiry>
            <title>Budget Construction Organization Reports Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="chartOfAccounts.codeAndDescription" />
                <field attributeName="organizationCode" />
                <field attributeName="reportsToChartOfAccounts.codeAndDescription" />
                <field attributeName="reportsToOrganizationCode" />
                <field attributeName="responsibilityCenterCode" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Construction Organization Reports Lookup</title>

            <instructions>Look up Budget Construction Organization Reports</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="chartOfAccountsCode" />
                    <sortAttribute attributeName="organizationCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="chartOfAccountsCode" required="false" />
                <lookupField attributeName="organizationCode" required="false" />
                <lookupField attributeName="reportsToChartOfAccountsCode" required="false" />
                <lookupField attributeName="reportsToOrganizationCode" required="false" />
                <lookupField attributeName="responsibilityCenterCode" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="organizationCode" />
                <field attributeName="reportsToChartOfAccountsCode" />
                <field attributeName="reportsToOrganizationCode" />
                <field attributeName="responsibilityCenterCode" />
            </resultFields>
        </lookup>

        <attributes>

             <attributeReference name="chartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <control>
                    <select valuesFinderClass="org.kuali.module.chart.lookup.keyvalues.ChartValuesFinder" />
                </control>
            </attributeReference>
            
           <attributeReference name="chartOfAccounts.codeAndDescription" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="codeAndDescription">
                <label>Chart Code</label>
                <shortLabel>Chart Code</shortLabel>
                <required>false</required>
                <control>
                    <hidden />
                </control>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Chart Code and Description</description>
            </attributeReference>
            
            <!-- pointOfView selection control is used in Organization Tree Selection screens -->
            <attributeReference name="organizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode">
                <required>true</required>
				<control>
					<select valuesFinderClass="org.kuali.module.budget.lookup.keyvalues.PointOfViewOrgValuesFinder" />
				</control>
            </attributeReference>

            <attributeReference name="reportsToChartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <label>Reports To Chart</label>
                <shortLabel>Repts to Cht</shortLabel>
                <required>true</required>
				<control>
					<select valuesFinderClass="org.kuali.module.chart.lookup.keyvalues.ChartValuesFinder" />
				</control>
                <description>The Chart for the Reports To organization.</description>
            </attributeReference>


           <attributeReference name="reportsToChartOfAccounts.codeAndDescription" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="codeAndDescription">
                <label>Reports To Chart</label>
                <shortLabel>Repts to Cht</shortLabel>
                <required>false</required>
                <control>
                    <hidden />
                </control>
                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The Chart for the Reports To organization.</description>
            </attributeReference>

 
            <attributeReference name="reportsToOrganizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode">
                <label>Reports To Organization</label>
                <shortLabel>Rpts To Org</shortLabel>
                <required>true</required>
                <description>The Reports To organization for the account.</description>
            </attributeReference>

            <attribute name="responsibilityCenterCode" forceUppercase="true">
                <label>Responsibility Center Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Responsibility Center Code</summary>
                <description>The code uniquely identifying a particular Responsibility Center.</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
