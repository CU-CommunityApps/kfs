<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.budget.bo.BudgetConstructionDuration">


        <inquiry>
            <title>Budget Construction Duration Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="appointmentDurationCode" />
                <field attributeName="appointmentDurationDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Construction Duration Lookup</title>

            <instructions>Look up a Budget Construction Duration</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="appointmentDurationCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="appointmentDurationCode" required="false" />
                <lookupField attributeName="appointmentDurationDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="appointmentDurationCode" forceInquiry="true"  />
                <field attributeName="appointmentDurationDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>


        <titleAttribute>appointmentDurationCode</titleAttribute>
  
        <attributes>

            <attribute name="appointmentDurationCode" forceUppercase="true">
                <label>Appointment Duration Code</label>
                <shortLabel>Duration Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

                <summary>Appointment Duration Code</summary>
                <description>Leave of absence duration code for an appointment.</description>
			</attribute>

            <attribute name="appointmentDurationDescription" forceUppercase="true">
                <label>Appointment Duration Description</label>
                <shortLabel>Duration Desc</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>Appointment Duration Description</summary>
                <description>Appointment Duration Description</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="true">
                <label>Duration Code active indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Duration Code active indicator</summary>
                <description>Appointment Duration Code active indicator.</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
