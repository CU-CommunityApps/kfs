<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.budget.bo.BudgetConstructionAppointmentFundingReasonCode">


        <inquiry>
            <title>Budget Construction Appointment Funding Reason Code Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="appointmentFundingReasonCode" />
                <field attributeName="appointmentFundingReasonDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Budget Construction Appointment Funding Reason Code Lookup</title>

            <instructions>Look up a Budget Construction Appointment Funding Reason Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="appointmentFundingReasonCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="appointmentFundingReasonCode" required="false" />
                <lookupField attributeName="appointmentFundingReasonDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="appointmentFundingReasonCode"  forceInquiry="true" />
                <field attributeName="appointmentFundingReasonDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <titleAttribute>appointmentFundingReasonCode</titleAttribute>
  
        <attributes>

            <attribute name="appointmentFundingReasonCode" forceUppercase="true">
                <label>Appointment Funding Reason Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="5" />
                </control>

                <summary>Appointment Funding Reason Code</summary>
                <description>Reason Code for a request salary.</description>
			</attribute>

            <attribute name="appointmentFundingReasonDescription" forceUppercase="true">
                <label>Appointment Funding Reason Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>Appointment Funding Reason Description</summary>
                <description>Description of Reason Code</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="true">
                <label>Row Active Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>Reason Code Active Indicator</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
