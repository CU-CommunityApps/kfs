<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.effort.document.EffortCertificationDocument</documentClass> 
        <businessRulesClass>org.kuali.module.effort.rules.EffortCertificationDocumentRules</businessRulesClass>

		<documentAuthorizerClass>org.kuali.module.effort.document.authorization.EffortCertificationDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>EffortCertificationDocument</documentTypeName>
        <documentTypeCode>A21</documentTypeCode>

        <label>Effort Certification Document</label>
        
        <attributes>
            <attribute name="effortCertificationDocumentCode" forceUppercase="true">
                <label>Effort Certification Document Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>Effort Certification DocumentCode</summary>
                <description>Effort Certification LaborDocumentCode description...</description>
			</attribute>
			
            <attributeReference name="emplid" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personPayrollIdentifier"/>
            <attributeReference name="documentNumber" sourceClassName="org.kuali.core.bo.DocumentHeader" sourceAttributeName="documentNumber"/>
            <attributeReference name="universityFiscalYear" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericFiscalYear"/>
			<attributeReference name="employee.personName" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personName" >
				<label>Employee Name</label>
			</attributeReference>
            <attributeReference name="employee.personUserIdentifier" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personUserIdentifier" />
            <attributeReference name="effortCertificationReportNumber" sourceClassName="org.kuali.module.effort.bo.EffortCertificationReportDefinition" sourceAttributeName="effortCertificationReportNumber"  >
				<label>Report Number</label>
			</attributeReference>
			<attributeReference name="effortCertificationReportDefinition.effortCertificationReportBeginFiscalYear" sourceClassName="org.kuali.module.effort.bo.EffortCertificationReportDefinition" sourceAttributeName="effortCertificationReportBeginFiscalYear"  >
				<label>Report Start Date:</label>
			</attributeReference>
			<attributeReference name="effortCertificationReportDefinition.effortCertificationReportEndFiscalYear" sourceClassName="org.kuali.module.effort.bo.EffortCertificationReportDefinition" sourceAttributeName="effortCertificationReportEndFiscalYear"  >
				<label>Report End Date:</label>
			</attributeReference>
			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
        </attributes>       

        <summary>Effort Certification Document</summary>
        <description>Document for the efffort certification creation.</description>

        <allowsCopy>false</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
          
    </transactionalDocument>
    
</dictionaryEntry>