<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="YearEndSalaryExpenseTransferDocument" parent="YearEndSalaryExpenseTransferDocument-parentBean" />

  <bean id="YearEndSalaryExpenseTransferDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Year End Salary Expense Transfer" />
    <property name="shortLabel" value="Year End Salary Expense Transfer" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The Year End Salary Expense Transfer document is used to move salaries and staff benefit
        	charges for a given employee for a particular accounting period (or set of periods)
        	from one or more accounts to another account (or accounts). This document is used in
        	the case where an employee&apos;s payroll expense was charged to an incorrect account or object code." />
    <property name="documentTypeName" value="YearEndSalaryExpenseTransferDocument" />
    <property name="documentClass" value="org.kuali.kfs.module.ld.document.YearEndSalaryExpenseTransferDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.ld.document.validation.impl.YearEndSalaryExpenseTransferDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.ld.document.authorization.LaborExpenseDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="YEST" />
    <property name="sessionDocument" value="true" />    
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="YearEndSalaryExpenseTransferDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
       
    <property name="validationMap" ref="YearEndSalaryExpenseTransferDocument-validations" /> 
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
    			<ref bean="YearEndSalaryExpenseTransferDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
    		</entry>
    		<entry>
    			<key><value>target</value></key>
    			<ref bean="YearEndSalaryExpenseTransferDocument-targetAccountingLineGroup" parent="AccountingLineGroup" />
    		</entry>    		
    	</map>
    </property>  
    
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="YearEndSalaryExpenseTransferDocument-workflowProperties" parent="YearEndSalaryExpenseTransferDocument-workflowProperties-parentBean" />

  <bean id="YearEndSalaryExpenseTransferDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>   
        
  </bean>
  
  <!-- Validations -->
  
  <bean id="YearEndSalaryExpenseTransferDocument-validations" parent="YearEndSalaryExpenseTransferDocument-validations-parentBean" />
  
  <bean id="YearEndSalaryExpenseTransferDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>SalaryExpenseTransferDocument-validAmountTransferredByObjectCodeValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedSaveDocumentEvent</value></key>
				<value>SalaryExpenseTransferDocument-saveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>SalaryExpenseTransferDocument-addAccountingLineValidation</value>
			</entry>
						
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>SalaryExpenseTransferDocument-routeDocumentValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
      
  <!-- accounting line groups -->
  <bean id="YearEndSalaryExpenseTransferDocument-sourceAccountingLineGroup" parent="SalaryExpenseTransferDocument-sourceAccountingLineGroup-parentBean" />   
  <bean id="YearEndSalaryExpenseTransferDocument-targetAccountingLineGroup" parent="SalaryExpenseTransferDocument-targetAccountingLineGroup-parentBean" />
    
</beans>
