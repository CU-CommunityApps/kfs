<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="SalaryExpenseTransferDocument" parent="SalaryExpenseTransferDocument-parentBean" />

  <bean id="SalaryExpenseTransferDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="allowsErrorCorrection" value="true" />
    <property name="label" value="Salary Expense Transfer" />
    <property name="shortLabel" value="Salary Expense Transfer" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="The Salary Expense Transfer document is used to move salaries and staff benefit
        	charges for a given employee for a particular accounting period (or set of periods)
        	from one or more accounts to another account (or accounts). This document is used in
        	the case where an employee&apos;s payroll expense was charged to an incorrect account or object code." />
    <property name="documentTypeName" value="SalaryExpenseTransferDocument" />
    <property name="documentClass" value="org.kuali.module.labor.document.SalaryExpenseTransferDocument" />
    <property name="businessRulesClass" value="org.kuali.module.labor.rules.SalaryExpenseTransferDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.labor.document.authorization.LaborExpenseDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ST" />
    <property name="allowsCopy" value="true" />
    <property name="workflowProperties" >
      <ref bean="SalaryExpenseTransferDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="SalaryExpenseTransferDocument-workflowProperties" parent="SalaryExpenseTransferDocument-workflowProperties-parentBean" />

  <bean id="SalaryExpenseTransferDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines" />
              <bean parent="WorkflowProperty"
                    p:path="sourceAccountingLines.account" />
              <bean parent="WorkflowProperty"
                    p:path="targetAccountingLines.account" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
