<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.labor.bo.BenefitsCalculation">


        <inquiry>
            <title>Labor Benefits Calculation Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="universityFiscalYear" />
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="positionBenefitTypeCode" />
                <field attributeName="positionFringeBenefitObjectCode" />
                <field attributeName="positionFringeBenefitPercent" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Labor Benefits Calculation Lookup</title>

            <instructions>Lookup an Benefits Calculation</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="universityFiscalYear" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="universityFiscalYear" required="false" />
                <lookupField attributeName="chartOfAccountsCode" required="false" />
                <lookupField attributeName="positionBenefitTypeCode" required="false" />
                <lookupField attributeName="positionFringeBenefitObjectCode" required="false" />
                <lookupField attributeName="positionFringeBenefitPercent" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="universityFiscalYear" />
                <field attributeName="chartOfAccountsCode" />
                <field attributeName="positionBenefitTypeCode" />
                <field attributeName="positionFringeBenefitObjectCode" />
                <field attributeName="positionFringeBenefitPercent" />
            </resultFields>
        </lookup>

        <attributes>
        
			<attributeReference name="universityFiscalYear" 
								sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
								sourceAttributeName="genericFiscalYear">
                <required>true</required>
            </attributeReference>

            <attributeReference name="chartOfAccountsCode"
                      sourceClassName="org.kuali.module.chart.bo.Chart"
                      sourceAttributeName="chartOfAccountsCode">
                <required>true</required>
                <control>
                    <text size="2" />
                </control>
            </attributeReference>

            <attributeReference name="positionFringeBenefitObjectCode"
                      sourceClassName="org.kuali.module.chart.bo.ObjectCode"
                      sourceAttributeName="financialObjectCode">
                <required>true</required>
            </attributeReference>
            
            <attributeReference name="positionBenefitTypeCode" 
                            sourceClassName="org.kuali.module.labor.bo.BenefitsType" 
                            sourceAttributeName="positionBenefitTypeCode" />

            <attribute name="positionFringeBenefitPercent" forceUppercase="true">
                <label>Position Fringe Benefit Percent</label>
                <shortLabel>Percent</shortLabel>

                <maxLength>22</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="24" />
                </control>
			</attribute>

          <attributeReference name="versionNumber" 
                            sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" 
                            sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
