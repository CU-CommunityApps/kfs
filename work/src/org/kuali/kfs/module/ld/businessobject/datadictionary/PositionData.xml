<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.labor.bo.PositionData">
 
        <inquiry>
            <title>Position Data Inquiry</title>
            <inquirableClass>org.kuali.module.labor.web.inquirable.PositionDataDetailsInquirableImpl</inquirableClass> 
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="budgetedPosition" />
                        <field attributeName="businessUnit" />
                        <field attributeName="departmentId" />
                        <field attributeName="description" />
                        <field attributeName="effectiveDate" />
                        <field attributeName="jobCode" />
                        <field attributeName="positionEffectiveStatus" />
                        <field attributeName="positionFullTimeEquivalency" />
                        <field attributeName="positionGradeDefault" />
                        <field attributeName="positionNumber" />
                        <field attributeName="positionRegularTemporary" />
                        <field attributeName="positionSalaryPlanDefault" />
                        <field attributeName="positionStatus" />
                        <field attributeName="shortDescription" />
                        <field attributeName="standardHoursDefault" />
                        <field attributeName="standardHoursFrequency" />
                        <field attributeName="statusDate" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>
        </inquiry>

        <lookup>
            <lookupableID>laborPositionDataLookupable</lookupableID>	        
            <title>Position Inquiry</title>
            <instructions>Look up Position Data</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="positionNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="positionNumber" required="false" />
                <lookupField attributeName="effectiveDate" required="false" />
                <lookupField attributeName="businessUnit" required="false" />
                <lookupField attributeName="departmentId" required="false" />
                
                <lookupField attributeName="jobCode" required="false" />
                <lookupField attributeName="positionStatus" required="false" />
                <lookupField attributeName="description" required="false" />
                
                <lookupField attributeName="positionSalaryPlanDefault" required="false" />
                <lookupField attributeName="positionGradeDefault" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="positionNumber"/>
                <field attributeName="effectiveDate"/>
                <field attributeName="description"/>
                
                <field attributeName="businessUnit"/>
                <field attributeName="departmentId"/>             
                <field attributeName="positionSalaryPlanDefault"/>
                <field attributeName="positionGradeDefault"/>
                <field attributeName="positionFullTimeEquivalency" />
                
                <field attributeName="jobCode"/>
                <field attributeName="positionStatus"/>
                <field attributeName="dummyBusinessObject.linkButtonOption" />
                
                <!-- 
                <field attributeName="positionEffectiveStatus" />
                <field attributeName="positionRegularTemporary" />

                <field attributeName="shortDescription" />
                <field attributeName="standardHoursDefault" />
                <field attributeName="standardHoursFrequency" />
                <field attributeName="statusDate" />
                 -->
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="budgetedPosition" forceUppercase="true">
                <label>Budgeted Position</label>
                <shortLabel>Position</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>
			</attribute>

            <attribute name="businessUnit" forceUppercase="true">
                <label>Business Unit</label>
                <shortLabel>Unit</shortLabel>

                <maxLength>5</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="7" />
                </control>
			</attribute>

            <attribute name="departmentId" forceUppercase="true">
                <label>Department Id</label>
                <shortLabel>Id</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="12" />
                </control>
			</attribute>

            <attribute name="description" forceUppercase="true">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="32" />
                </control>
			</attribute>

            <attribute name="effectiveDate" forceUppercase="true">
                <label>Effective Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>
			</attribute>

            <attribute name="jobCode" forceUppercase="true">
                <label>Job Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>6</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="8" />
                </control>
			</attribute>

            <attribute name="positionEffectiveStatus" forceUppercase="true">
                <label>Position Effective Status</label>
                <shortLabel>Status</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>
			</attribute>

            <attribute name="positionFullTimeEquivalency" forceUppercase="true">
                <label>Full Time Equivalency</label>
                <shortLabel>Equivalency</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="5" />
                </control>
			</attribute>

            <attribute name="positionGradeDefault" forceUppercase="true">
                <label>Position Grade Default</label>
                <shortLabel>Default</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="5" />
                </control>
			</attribute>

            <attribute name="positionNumber" forceUppercase="true">
                <label>Position Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="10" />
                </control>
			</attribute>

            <attribute name="positionRegularTemporary" forceUppercase="true">
                <label>Position Regular Temporary</label>
                <shortLabel>Temporary</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>
			</attribute>

            <attribute name="positionSalaryPlanDefault" forceUppercase="true">
                <label>Position Salary Plan Default</label>
                <shortLabel>Default</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>
			</attribute>

            <attribute name="positionStatus" forceUppercase="true">
                <label>Position Status</label>
                <shortLabel>Status</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>
			</attribute>

            <attribute name="shortDescription" forceUppercase="true">
                <label>Short Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="12" />
                </control>
			</attribute>

            <attribute name="standardHoursDefault" forceUppercase="true">
                <label>Standard Hours Default</label>
                <shortLabel>Default</shortLabel>

                <maxLength>6</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="8" />
                </control>
			</attribute>

            <attribute name="standardHoursFrequency" forceUppercase="true">
                <label>Standard Hours Frequency</label>
                <shortLabel>Frequency</shortLabel>

                <maxLength>5</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="7" />
                </control>
			</attribute>

            <attribute name="statusDate" forceUppercase="true">
                <label>Status Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>
			</attribute>
			
			<attributeReference name="dummyBusinessObject.linkButtonOption" sourceClassName="org.kuali.module.gl.bo.TransientBalanceInquiryAttributes" sourceAttributeName="linkButtonOption">
                <label>Position Funding</label>
                <shortLabel>Position Funding</shortLabel>
            </attributeReference>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>