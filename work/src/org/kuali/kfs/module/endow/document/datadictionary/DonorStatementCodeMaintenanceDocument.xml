<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:p="http://www.springframework.org/schema/p" 
	xmlns:dd="http://rice.kuali.org/dd" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans         
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd         
		http://rice.kuali.org/dd         
		http://rice.kuali.org/dd/dd.xsd">

	<bean id="DonorStatementCodeMaintenanceDocument" parent="DonorStatementCodeMaintenanceDocument-parentBean"/>

	<bean id="DonorStatementCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    	<property name="businessObjectClass" value="org.kuali.kfs.module.endow.businessobject.DonorStatementCode"/>
    	<property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl"/>
    	<property name="maintainableSections">
      		<list>
        		<ref bean="DonorStatementCodeMaintenanceDocument-EditDonorStatementCode"/>
      		</list>
    	</property>
    	<property name="lockingKeys">
      		<list>
        		<value>code</value>
      		</list>
    	</property>
    
    	<property name="documentTypeName" value="DonorStatementCodeMaintenanceDocument"/>
    	<property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase"/>
    	<property name="workflowAttributes">
    		<ref bean="DonorStatementCodeMaintenanceDocument-workflowAttributes"/>
    	</property>
  	</bean>

<!-- Maintenance Section Definitions -->

  	<bean id="DonorStatementCodeMaintenanceDocument-EditDonorStatementCode" parent="DonorStatementCodeMaintenanceDocument-EditDonorStatementCode-parentBean"/>

  	<bean id="DonorStatementCodeMaintenanceDocument-EditDonorStatementCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    	<property name="id" value="Edit Donor Statement Code"/>
    	<property name="title" value="Edit Donor Statement Code"/>
    	<property name="maintainableItems">
      		<list>
        		<bean parent="MaintainableFieldDefinition" p:name="code" p:required="true"/>
        		<bean parent="MaintainableFieldDefinition" p:name="name" p:required="true"/>
        		<bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true"/>
      		</list>
    	</property>
  	</bean>
  
  <!-- workflow attributes -->
  <bean id="DonorStatementCodeMaintenanceDocument-workflowAttributes" parent="DonorStatementCodeMaintenanceDocument-workflowAttributes-parentBean"/>
  
  <bean id="DonorStatementCodeMaintenanceDocument-workflowAttributes-parentBean" abstract="true" parent="WorkflowAttributes" />
</beans>