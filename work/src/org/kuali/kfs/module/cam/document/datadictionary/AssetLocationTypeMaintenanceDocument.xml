<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetLocationTypeMaintenanceDocument" parent="AssetLocationTypeMaintenanceDocument-parentBean" />

  <bean id="AssetLocationTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cams.bo.AssetLocationType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetLocationTypeMaintenanceDocument-EditAssetLocationType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>assetLocationTypeCode</value>
      </list>
    </property>
    <property name="label" value="Asset Location Type" />
    <property name="shortLabel" value="Asset Location Type" />
    <property name="summary" value="Asset Location Type maintenance document" />
    <property name="description" value="Document used to create or update Asset Location Type objects" />
    <property name="documentTypeName" value="AssetLocationTypeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ASLT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>CM_ADMINISTRATORS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetLocationTypeMaintenanceDocument-EditAssetLocationType" parent="AssetLocationTypeMaintenanceDocument-EditAssetLocationType-parentBean" />

  <bean id="AssetLocationTypeMaintenanceDocument-EditAssetLocationType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Location Type" />
    <property name="title" value="Edit Asset Location Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="assetLocationTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="assetLocationTypeName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
</beans>
