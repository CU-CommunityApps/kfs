<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetPaymentDocument" parent="AssetPaymentDocument-parentBean" />

  <bean id="AssetPaymentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Asset Payments" />
    <property name="shortLabel" value="Asset Payments" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="Asset Payment Document" />
    <property name="documentTypeName" value="AssetPaymentDocument" />
    <property name="documentClass" value="org.kuali.kfs.module.cam.document.AssetPaymentDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.sys.document.validation.impl.AccountingRuleEngineRuleBase" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.module.cam.document.validation.impl.AssetPaymentDocumentPreRules" />    
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.cam.document.authorization.AssetPaymentDocumentAuthorizer" />
    <property name="documentTypeCode" value="MPAY" />
    <property name="workflowProperties" >
      <ref bean="AssetPaymentDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="AssetPaymentDocument-versionNumber" />
        <ref bean="AssetPaymentDocument-capitalAssetBuilderOriginIndicator" />
      </list>
    </property>
    <property name="validationMap" ref="AssetPaymentDocument-validations" />
  </bean>

<!-- Attribute Definitions -->
  <bean id="AssetPaymentDocument-versionNumber" parent="AssetPaymentDocument-versionNumber-parentBean" />
  <bean id="AssetPaymentDocument-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>

  <bean id="AssetPaymentDocument-capitalAssetBuilderOriginIndicator" parent="AssetPaymentDocument-capitalAssetBuilderOriginIndicator-parentBean" />
  <bean id="AssetPaymentDocument-capitalAssetBuilderOriginIndicator-parentBean" abstract="true" parent="GenericAttributes-genericBoolean" >
	<property name="name" value="capitalAssetBuilderOriginIndicator" />
	<property name="label" value="Capital Asset Builder Origin Indicator" />
	<property name="shortLabel" value="Origin Indicator" />
  </bean>
  <!-- Validations -->
  
  <bean id="AssetPaymentDocument-validations" parent="AssetPaymentDocument-validations-parentBean" />
  
  <bean id="AssetPaymentDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedSaveDocumentEvent</value></key>
				<value>AssetPayment-saveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
				<value>AssetPayment-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
				<value>AssetPayment-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>AssetPayment-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
				<value>AssetPayment-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>AssetPayment-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>AssetPayment-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
				<value>AssetPayment-reviewAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.module.cam.document.validation.event.AssetPaymentAddAssetEvent</value></key>
				<value>AssetPayment-addAssetPaymentAssetValidation</value>
			</entry>			
    	</map>
    </property>
  </bean>
  
  <bean id="AssetPaymentDocument-workflowProperties" parent="AssetPaymentDocument-workflowProperties-parentBean" />

  <bean id="AssetPaymentDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
</beans>
