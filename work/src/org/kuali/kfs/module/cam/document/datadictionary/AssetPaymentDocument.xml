<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetPaymentDocument" parent="AssetPaymentDocument-parentBean" />

  <bean id="AssetPaymentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Asset Payments" />
    <property name="shortLabel" value="Asset Payments" />
    <property name="summary" value="&amp;nbsp;" />
    <property name="description" value="Asset Payment Document" />
    <property name="documentTypeName" value="AssetPaymentDocument" />
    <property name="documentClass" value="org.kuali.module.cams.document.AssetPaymentDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.rules.AccountingRuleEngineRuleBase" />
    <property name="preRulesCheckClass" value="org.kuali.module.cams.rules.AssetPaymentDocumentPreRules" />    
    <property name="documentAuthorizerClass" value="org.kuali.module.cams.document.authorization.AssetPaymentDocumentAuthorizer" />
    <property name="documentTypeCode" value="MPAY" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="AssetPaymentDocument-capitalAssetNumber" />
        <ref bean="AssetPaymentDocument-organizationOwnerAccountNumber" />
        <ref bean="AssetPaymentDocument-organizationOwnerChartOfAccountsCode" />
        <ref bean="AssetPaymentDocument-versionNumber" />
        <ref bean="AssetPaymentDocument-agencyNumber" />
        <ref bean="AssetPaymentDocument-campusCode" />
        <ref bean="AssetPaymentDocument-buildingCode" />
      </list>
    </property>
    <property name="validationMap" ref="AssetPaymentDocument-validations" />
  </bean>

<!-- Attribute Definitions -->


  <bean id="AssetPaymentDocument-capitalAssetNumber" parent="AssetPaymentDocument-capitalAssetNumber-parentBean" />

  <bean id="AssetPaymentDocument-capitalAssetNumber-parentBean" abstract="true" parent="Asset-capitalAssetNumber">
  </bean>
  <bean id="AssetPaymentDocument-organizationOwnerAccountNumber" parent="AssetPaymentDocument-organizationOwnerAccountNumber-parentBean" />

  <bean id="AssetPaymentDocument-organizationOwnerAccountNumber-parentBean" abstract="true" parent="Asset-organizationOwnerAccountNumber">
  </bean>
  <bean id="AssetPaymentDocument-organizationOwnerChartOfAccountsCode" parent="AssetPaymentDocument-organizationOwnerChartOfAccountsCode-parentBean" />

  <bean id="AssetPaymentDocument-organizationOwnerChartOfAccountsCode-parentBean" abstract="true" parent="Asset-organizationOwnerChartOfAccountsCode">
  </bean>
  <bean id="AssetPaymentDocument-versionNumber" parent="AssetPaymentDocument-versionNumber-parentBean" />

  <bean id="AssetPaymentDocument-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>
  <bean id="AssetPaymentDocument-agencyNumber" parent="AssetPaymentDocument-agencyNumber-parentBean" />

  <bean id="AssetPaymentDocument-agencyNumber-parentBean" abstract="true" parent="Asset-agencyNumber">
  </bean>
  <bean id="AssetPaymentDocument-campusCode" parent="AssetPaymentDocument-campusCode-parentBean" />

  <bean id="AssetPaymentDocument-campusCode-parentBean" abstract="true" parent="Campus-campusCode">
  </bean>
  <bean id="AssetPaymentDocument-buildingCode" parent="AssetPaymentDocument-buildingCode-parentBean" />

  <bean id="AssetPaymentDocument-buildingCode-parentBean" abstract="true" parent="Asset-buildingCode">
  </bean>
  <!-- Validations -->
  
  <bean id="AssetPaymentDocument-validations" parent="AssetPaymentDocument-validations-parentBean" />
  
  <bean id="AssetPaymentDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
  	<property name="sourceMap">
		<map>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedSaveDocumentEvent</value></key>
				<value>AssetPayment-saveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedRouteDocumentEvent</value></key>
				<value>AssetPayment-routeDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedApproveDocumentEvent</value></key>
				<value>AssetPayment-approveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedBlanketApproveDocumentEvent</value></key>
				<value>AssetPayment-blanketApproveDocumentValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedAddAccountingLineEvent</value></key>
				<value>AssetPayment-addAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedDeleteAccountingLineEvent</value></key>
				<value>AssetPayment-deleteAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedUpdateAccountingLineEvent</value></key>
				<value>AssetPayment-updateAccountingLineValidation</value>
			</entry>
			<entry>
				<key><value>org.kuali.kfs.rule.event.AttributedReviewAccountingLineEvent</value></key>
				<value>AssetPayment-reviewAccountingLineValidation</value>
			</entry>
    	</map>
    </property>
  </bean>
</beans>
