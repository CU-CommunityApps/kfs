<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="AssetTypeMaintenanceDocument" parent="AssetTypeMaintenanceDocument-parentBean" />

  <bean id="AssetTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cam.businessobject.AssetType" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AssetTypeMaintenanceDocument-EditAssetTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>capitalAssetTypeCode</value>
      </list>
    </property>
    <property name="label" value="Asset Type Code" />
    <property name="shortLabel" value="Asset Type Code" />
    <property name="summary" value="Asset type code maintenance document" />
    <property name="description" value="Document used to create or update asset type code objects" />
    <property name="documentTypeName" value="AssetTypeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.rice.kns.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ASST" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="AssetTypeMaintenanceDocument-EditAssetTypeCode" parent="AssetTypeMaintenanceDocument-EditAssetTypeCode-parentBean" />

  <bean id="AssetTypeMaintenanceDocument-EditAssetTypeCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Asset Type Code" />
    <property name="title" value="Edit Asset Type Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="capitalAssetTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="depreciableLifeLimit" />
        <bean parent="MaintainableFieldDefinition"
              p:name="movingIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="requiredBuildingIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
      </list>
    </property>
  </bean>
</beans>
