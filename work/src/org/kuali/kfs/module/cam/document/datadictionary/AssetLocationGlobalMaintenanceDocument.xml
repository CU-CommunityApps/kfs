<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cams.bo.AssetLocationGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.cams.maintenance.AssetLocationGlobalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.cams.rules.AssetLocationGlobalRule</businessRulesClass> 
        <!-- <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass> -->
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>

        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>CM_ADMINISTRATORS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AssetLocationGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>ALOC</documentTypeCode>

        <label>Asset Location Global</label>

        <summary>Location Global Asset Maintenance Document</summary>
        <description>Document used to create or update global location asset document.</description>

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>
        
        <defaultExistenceChecks>
            <reference collection="assetLocationGlobalDetails" attributeName="asset" attributeToHighlightOnFail="capitalAssetNumber" />
        </defaultExistenceChecks>
        
        <maintainableSections>

            <maintainableSection title="Edit List of Assets">
                <maintainableItems>
                    <maintainableCollection name="assetLocationGlobalDetails" businessObjectClass="org.kuali.module.cams.bo.AssetLocationGlobalDetail" sourceClassName="org.kuali.module.cams.bo.Asset" sourceAttributeName="assetLocationGlobalDetails" summaryTitle="Asset">

                        <maintainableField name="capitalAssetNumber" template="capitalAssetNumber" required="true" readOnlyAfterAdd="true" />
                        <maintainableField name="campusCode" template="campusCode" required="false" />
                        <maintainableField name="buildingCode" template="buildingCode" required="false" />
                        <maintainableField name="buildingRoomNumber" template="buildingRoomNumber" required="false" />
                        <maintainableField name="buildingSubRoomNumber" template="buildingSubRoomNumber" required="false" />
                        <maintainableField name="campusTagNumber" template="campusTagNumber" required="false" />
                        <maintainableField name="versionNumber" required="false" />
                        <summaryFields>
                            <summaryField name="capitalAssetNumber" />
                        </summaryFields>
                        <duplicateIdentificationFields>
                            <duplicateIdentificationField name="capitalAssetNumber"/>
                        </duplicateIdentificationFields>       
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>

        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>