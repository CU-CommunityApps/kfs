<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cams.bo.AssetGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.cams.maintenance.AssetGlobalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>

        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>CM_ADMINISTRATORS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AssetGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>GAA</documentTypeCode>

        <label>Asset Global</label>

        <summary>Global Asset Maintenance Document</summary>
        <description>Document used to create or update global asset document.</description>

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>
 
         <defaultExistenceChecks>
            <reference attributeName="organizationOwnerChartOfAccountsCodeObject" attributeToHighlightOnFail="organizationOwnerChartOfAccountsCode" />
            <reference attributeName="organizationOwnerAccountNumberObject" attributeToHighlightOnFail="organizationOwnerAccountNumber" />
            <!-- <reference attributeName="organizationOwnerAccountObject" attributeToHighlightOnFail="organizationOwnerAccount" /> -->
            <reference attributeName="agencyNumberObject" attributeToHighlightOnFail="agencyNumber" />
            <reference attributeName="acquisitionTypeCodeObject" attributeToHighlightOnFail="acquisitionTypeCode" />
        </defaultExistenceChecks>
 
        <maintainableSections>
            <maintainableSection title="Global Asset Maintenance">
                <maintainableItems>
	                <maintainableField name="capitalAssetDescription" required="true" />
	                <maintainableField name="capitalAssetTypeCode" required="true" />
	                <maintainableField name="conditionCode" required="true" />
	                <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Asset Detail Information">
                <maintainableItems>
					<maintainableField name="organizationOwnerChartOfAccountsCode" required="true" />
					<maintainableField name="organizationOwnerAccountNumber" required="true" />
					<maintainableField name="needMoreInfo" readOnly="true"/> <!-- organizationOwnerAccount.organizationCode -->
					<maintainableField name="agencyNumber" />
					<maintainableField name="acquisitionTypeCode" required="true" />
					<maintainableField name="inventoryStatusCode" required="true" />
					
					
					
				</maintainableItems>
            </maintainableSection>

            <maintainableSection title="Asset Location">
                <maintainableItems>
                    <maintainableCollection name="assetGlobalDetails" businessObjectClass="org.kuali.module.cams.bo.AssetGlobalDetail" sourceClassName="org.kuali.module.cams.bo.Asset" sourceAttributeName="assetGlobalDetails" summaryTitle="Location">
						<!-- <subSectionHeader name="On Campus" /> -->
						<maintainableField name="capitalAssetNumber" readOnly="true"/>
                        <maintainableField name="campusCode" required="true" />
                        <maintainableField name="buildingCode" required="true" />
                        <maintainableField name="buildingRoomNumber" required="true" />
                        <maintainableField name="buildingSubRoomNumber" />
						<!-- <subSectionHeader name="Off Campus" /> -->
						<maintainableField name="offCampusName" required="true" />
                        <maintainableField name="offCampusAddress" required="true" />
                        <maintainableField name="offCampusCityName" required="true" />
                        <maintainableField name="offCampusStateCode" required="true" />
                        <maintainableField name="offCampusZipCode" required="true" />
                        <maintainableField name="offCampusCountryCode" />
                        <maintainableField name="locationQuantity" required="true" />
                        <!-- <maintainableField name="newCollectionRecord" /> -->
                        <summaryFields>
                        	<summaryField name="campusCode" />
                            <summaryField name="capitalAssetNumber" />
                        </summaryFields>
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Land Information">
                <maintainableItems>
				    <maintainableField name="landCountyName" />
				    <maintainableField name="landAcreageSize" />
				    <maintainableField name="landParcelNumber" />
				</maintainableItems>
            </maintainableSection>

        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>