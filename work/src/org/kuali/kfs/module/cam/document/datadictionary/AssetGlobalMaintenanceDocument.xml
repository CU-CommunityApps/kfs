<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cams.bo.AssetGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.cams.maintenance.AssetGlobalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>

        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>CM_ADMINISTRATORS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AssetGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>GAA</documentTypeCode>

        <label>Asset Global</label>

        <summary>Global Asset Maintenance Document</summary>
        <description>Document used to create or update global asset document.</description>

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>

         <defaultExistenceChecks>
            <reference attributeName="organizationOwnerChartOfAccounts" attributeToHighlightOnFail="organizationOwnerChartOfAccountsCode" />
            <reference attributeName="organizationOwnerAccount" attributeToHighlightOnFail="organizationOwnerAccountNumber" />
            <!-- org owner -->
            <reference attributeName="agency" attributeToHighlightOnFail="agencyNumber" />
            <reference attributeName="acquisitionType" attributeToHighlightOnFail="acquisitionTypeCode" />
            <reference attributeName="inventoryStatus" attributeToHighlightOnFail="inventoryStatusCode" />
            <reference attributeName="condition" attributeToHighlightOnFail="conditionCode" />
            <reference attributeName="capitalAssetType" attributeToHighlightOnFail="capitalAssetTypeCode" />
            <!-- asset rep. -->
			<reference attributeName="lastInventory" attributeToHighlightOnFail="lastInventoryDate" />
			<reference attributeName="create" attributeToHighlightOnFail="createDate" />
			<reference attributeName="financialDocumentPostingYr" attributeToHighlightOnFail="financialDocumentPostingYear" />
			<reference attributeName="financialDocumentPostingPeriod" attributeToHighlightOnFail="financialDocumentPostingPeriodCode" />
			<reference attributeName="capitalAssetInService" attributeToHighlightOnFail="capitalAssetInServiceDate" />
            <!-- deprec. date -->  
        </defaultExistenceChecks>
 
        <maintainableSections>
        
            <maintainableSection title="Asset Detail Information">
                <maintainableItems>
					<maintainableField name="organizationOwnerChartOfAccountsCode" required="true" />
					<maintainableField name="organizationOwnerAccountNumber" required="true" />
					<!-- org. owner -->
					<maintainableField name="leoOrganizationOwner" readOnly="true"/>
					<maintainableField name="agencyNumber" />
					<maintainableField name="acquisitionTypeCode" required="true" />
					<maintainableField name="inventoryStatusCode" required="true" />
					<maintainableField name="conditionCode" required="true" />
					<maintainableField name="capitalAssetDescription" required="true" />
					<maintainableField name="capitalAssetTypeCode" required="true" />
					<maintainableField name="vendorName" required="true" />
					<maintainableField name="manufacturerName" required="true" />
					<maintainableField name="manufacturerModelNumber" />
					<maintainableField name="organizationText" />
					<!-- asset rep. -->
					<maintainableField name="leoAssetRepresentitive" readOnly="true"/>
					<maintainableField name="lastInventoryDate" required="true">
                        <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder</defaultValueFinderClass>
                    </maintainableField>
					<maintainableField name="createDate" required="true">
                        <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder</defaultValueFinderClass>
                    </maintainableField>
					<maintainableField name="financialDocumentPostingYear" required="true" />
					<maintainableField name="financialDocumentPostingPeriodCode" required="true" />
					<maintainableField name="capitalAssetInServiceDate">
                        <defaultValueFinderClass>org.kuali.kfs.lookup.valuefinder.CurrentDateMMDDYYYYFinder</defaultValueFinderClass>
                    </maintainableField>
					<!-- deprec. date -->
					<maintainableField name="leoDeprecationDate" readOnly="true"/>
	                <maintainableField name="versionNumber" />					
				</maintainableItems>
            </maintainableSection>

            <maintainableSection title="Unique Asset Information">
                <maintainableItems>
                    <!-- nbr of assets to create -->
                	<maintainableField name="leoAssetsToCreate" readOnly="true" />
					<maintainableField name="capitalAssetNumber" />
					<maintainableField name="campusTagNumber" />
					<maintainableField name="serialNumber" />
					<!-- government tag -->
					<maintainableField name="leoGovernmentTag" readOnly="true" />
					<!-- national stock number -->
					<maintainableField name="leoNationalStockNbr" readOnly="true" />
                	<maintainableField name="organizationInventoryName" />
                	<maintainableField name="organizationAssetTypeIdentifier" />
				</maintainableItems>
            </maintainableSection>

            <maintainableSection title="Campus Location">
                <maintainableItems>
                	<!-- <subSectionHeader name="Campus Location" /> -->
                    <maintainableCollection name="assetGlobalDetails" businessObjectClass="org.kuali.module.cams.bo.AssetGlobalDetail" sourceClassName="org.kuali.module.cams.bo.Asset" sourceAttributeName="assetGlobalDetails" summaryTitle="Location">
						<!-- <subSectionHeader name="On Campus" /> -->
						<maintainableField name="capitalAssetNumber" readOnly="true"/>
                        <maintainableField name="campusCode" required="true" />
                        <maintainableField name="buildingCode" required="true" />
                        <maintainableField name="buildingRoomNumber" required="true" />
                        <maintainableField name="buildingSubRoomNumber" />
						<!-- <subSectionHeader name="Off Campus" /> -->
						<maintainableField name="offCampusName" required="true" />
                        <maintainableField name="offCampusAddress" required="true" />
                        <maintainableField name="offCampusCityName" required="true" />
                        <maintainableField name="offCampusStateCode" required="true" />
                        <maintainableField name="offCampusZipCode" required="true" />
                        <maintainableField name="offCampusCountryCode" />
                        <maintainableField name="locationQuantity" required="true" />
                        <!-- <maintainableField name="newCollectionRecord" /> -->
                        <summaryFields>
                        	<summaryField name="campusCode" />
                            <summaryField name="capitalAssetNumber" />
                        </summaryFields>
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Land Information">
                <maintainableItems>
				    <maintainableField name="landCountyName" />
				    <maintainableField name="landAcreageSize" />
				    <maintainableField name="landParcelNumber" />
				</maintainableItems>
            </maintainableSection>

            <maintainableSection title="Add Payments">
                <maintainableItems>
				    <maintainableField name="chartOfAccountsCode" required="true" />
				    <maintainableField name="accountNumber" required="true" />
				    	<!-- display acct name & org. code -->
				    <maintainableField name="subAccountNumber" />
				    <maintainableField name="financialObjectCode" required="true" />
				    	<!-- display object code name -->
				    <maintainableField name="financialSubObjectCode" />
				    <maintainableField name="projectCode" />
				    <maintainableField name="organizationReferenceId" />
				    <maintainableField name="documentNumber" required="true" />
				    <maintainableField name="financialDocumentTypeCode" required="true" />
				    <maintainableField name="purchaseOrderNumber" />
				    <maintainableField name="requisitionNumber" />
				    <maintainableField name="financialDocumentPostingDate" required="true" />
				    <maintainableField name="financialDocumentPostingYear" required="true" />
				    <maintainableField name="financialDocumentPostingPeriodCode" required="true" />
				    <maintainableField name="accountChargeAmount" required="true" />
				    <maintainableField name="leoAddPaymentsTotalCost">
                        <defaultValue>0.00</defaultValue>
                    </maintainableField>
				</maintainableItems>
            </maintainableSection>

        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>