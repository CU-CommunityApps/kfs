<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cams.bo.AssetRetirementGlobal</businessObjectClass>
        <maintainableClass>org.kuali.module.cams.maintenance.AssetRetirementGlobalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.core.maintenance.rules.MaintenanceDocumentRuleBase</businessRulesClass>
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>

        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>CM_ADMINISTRATORS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AssetRetirementGlobalMaintenanceDocument</documentTypeName>
        <documentTypeCode>AR</documentTypeCode>

        <label>Asset Retirement Global</label>

        <summary>Retirement Global Asset Maintenance Document</summary>
        <description>Document used to create or update global retirement asset document.</description>

        <lockingKeys>
            <field attributeName="documentNumber" />
        </lockingKeys>
 
        <maintainableSections>
            <maintainableSection title="Retirement Information">
                <maintainableItems>
	                <subSectionHeader name="Retirement Reason" />
                	<maintainableField name="retirementReasonCode" required="true" />
                </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Asset Detail Information">
            	<maintainableItems>
            		<maintainableCollection name="assetRetirementGlobalDetails" businessObjectClass="org.kuali.module.cams.bo.AssetRetirementGlobalDetail" sourceClassName="org.kuali.module.cams.bo.Asset" sourceAttributeName="assetRetirementGlobalDetails" summaryTitle="Asset Retired">
	                <subSectionHeader name="Asset" />
                	<maintainableField name="capitalAssetNumber" template="capitalAssetNumber" readOnlyAfterAdd="true" />
                	<maintainableField name="versionNumber" />
                	<summaryFields>
                        <summaryField name="capitalAssetNumber" />
                    </summaryFields>
                    <duplicateIdentificationFields>
                        <duplicateIdentificationField name="capitalAssetNumber"/>
                    </duplicateIdentificationFields> 
	                <!--subSectionHeader name="Asset Detail Information" />
            		<maintainableField name="asset.organizationOwnerChartOfAccountsCode" /-->
            		</maintainableCollection>
            	</maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>