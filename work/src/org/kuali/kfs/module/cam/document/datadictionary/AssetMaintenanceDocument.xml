    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cams.bo.Asset</businessObjectClass>
        <maintainableClass>org.kuali.module.cams.maintenance.AssetMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.cams.rules.AssetRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.cams.document.authorization.AssetAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_ROLE_MAINTENANCE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>AssetMaintenanceDocument</documentTypeName>
        <documentTypeCode>AA</documentTypeCode>

        <label>Asset</label>

        <summary>Asset maintenance document</summary>
        <description>Document used to create or update Asset objects</description>

        <lockingKeys>
            <field attributeName="capitalAssetNumber" />
        </lockingKeys>
        
        <allowsNewOrCopy>false</allowsNewOrCopy>
        
        <maintainableSections>
            <maintainableSection title="Asset Detail Information">
                <maintainableItems> 
                	<subSectionHeader name="Asset Detail Info" />
                	
                    <!-- where to get these information? Owner, Org, Federal Contribution,  Aquisition Type -->
					<maintainableField name="capitalAssetNumber"  />
                    <maintainableField name="organizationOwnerChartOfAccountsCode" readOnly="true" />
                    <maintainableField name="organizationOwnerAccountNumber" />
                    <maintainableField name="organizationOwnerAccount.organizationCode" readOnly="true" />
                    <maintainableField name="agencyNumber" />
                    <maintainableField name="acquisitionTypeCode" readOnly="true"/>
                    <maintainableField name="inventoryStatusCode" required="true"/>
                    <maintainableField name="conditionCode" required="true" />
                    <maintainableField name="capitalAssetDescription" required="true" />
                    <maintainableField name="capitalAssetTypeCode" required="true" />
                    <maintainableField name="vendorName" />
                    <maintainableField name="manufacturerName" required="true" />
                    <maintainableField name="manufacturerModelNumber" />
					<maintainableField name="serialNumber" />
                    <maintainableField name="campusTagNumber" />
                    <maintainableField name="oldTagNumber" />
                    <maintainableField name="governmentTagNumber" />
                    <maintainableField name="nationalStockNumber" />
                    <maintainableField name="lastInventoryDate" readOnly="true" />
                    <maintainableField name="createDate" readOnly="true" />
                    <maintainableField name="financialDocumentPostingYear" readOnly="true" />
                    <maintainableField name="financialDocumentPostingPeriodCode" readOnly="true" />
                    <maintainableField name="capitalAssetInServiceDate" />
                    <maintainableField name="totalCostAmount" readOnly="true" />
                    <maintainableField name="versionNumber" />
					
					<subSectionHeader name="Asset Location - On Campus" />
					<maintainableField name="campusCode" required="true" />
					<maintainableField name="buildingCode" required="true" />
					<maintainableField name="buildingRoomNumber" required="true" />
					<maintainableField name="buildingSubRoomNumber" />
					
					<!--  subSectionHeader name="Location - Off Campus - Where to get the ifo for this From? Name, Address, City, State, Zip?" /-->
					
					
					</maintainableItems>
            </maintainableSection>
            
            <maintainableSection title="Organization Information">
                <maintainableItems>
                	<!-- Organization Tag, Asset Representative, Org Asset Type, Organization Text, Receive Date -->
                	<maintainableField name="organizationInventoryName" />
                	<maintainableField name="assetRepresentative.personName" />
                	<maintainableField name="assetOrganization.organizationText" />
                	<maintainableField name="assetOrganization.organizationTagNumber" />
                	<maintainableField name="assetOrganization.organizationAssetTypeIdentifier" />
                	<maintainableField name="receiveDate" />
                	<maintainableField name="replacementAmount" />
                	<maintainableField name="estimatedSellingPrice" />
                 </maintainableItems>
            </maintainableSection>

			<maintainableSection title="Payment Information">
                <maintainableItems>
                    <maintainableCollection name="assetPayments" businessObjectClass="org.kuali.module.cams.bo.AssetPayment" sourceAttributeName="assetPayments" includeAddLine="false" summaryTitle="Payment Information">
                        <maintainableField name="chartOfAccountsCode" readOnly="true" />
                        <maintainableField name="accountNumber" readOnly="true" />
                        <maintainableField name="subAccountNumber" readOnly="true" />
                        <maintainableField name="financialObjectCode" readOnly="true" />
                         <maintainableField name="projectCode" readOnly="true" /> 
                        <maintainableField name="organizationReferenceId" readOnly="true" />
                        <maintainableField name="documentNumber" readOnly="true" />
                        <maintainableField name="financialDocumentTypeCode" readOnly="true" />
                        <maintainableField name="purchaseOrderNumber" readOnly="true" />
                        <maintainableField name="requisitionNumber" readOnly="true" />
                        <maintainableField name="financialDocumentPostingDate" readOnly="true" />
                        <maintainableField name="financialDocumentPostingYear" readOnly="true" />
                        <maintainableField name="financialDocumentPostingPeriodCode" readOnly="true" />
                        <maintainableField name="transferPaymentCode" readOnly="true" />
                        <maintainableField name="accountChargeAmount" readOnly="true" />
                        <maintainableField name="accumulatedPrimaryDepreciationAmount" readOnly="true" />
                        <maintainableField name="previousYearPrimaryDepreciationAmount" readOnly="true" />
                        <maintainableField name="period1Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period2Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period3Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period4Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period5Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period6Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period7Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period8Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period9Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period10Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period11Depreciation1Amount" readOnly="true" />
                        <maintainableField name="period12Depreciation1Amount" readOnly="true" />
   		            </maintainableCollection>
                        <maintainableField name="paymentTotalCost" readOnly="true" />
		        </maintainableItems>
		    </maintainableSection>
		
            <maintainableSection title="Asset Depreciation Information">
				 <maintainableItems>
					<maintainableField name="primaryDepreciationMethodCode" required="true" />
					<maintainableField name="capitalAssetType.depreciableLifeLimit" readOnly="true"/>
					<maintainableField name="baseAmount"  readOnly="true" />
					<maintainableField name="salvageAmount" />					
					<maintainableField name="accumulatedDepreciation" readOnly="true" />
					<maintainableField name="bookValue"  readOnly="true" />
					<maintainableField name="yearToDateDepreciation"  readOnly="true" />
					<maintainableField name="currentMonthDepreciation"  readOnly="true" />
					<maintainableField name="prevYearDepreciation"  readOnly="true" />
				</maintainableItems>
			</maintainableSection>
          
          <!-- need more work -->
          <!--   
            <maintainableSection title="View Asset History">
            	<maintainableItems>
                	<subSectionHeader name="View Related Documents" />
                	<subSectionHeader name="View Merge History" />
                	<subSectionHeader name="View Separate History" />
                	<subSectionHeader name="View Retirement Information" />
                	<subSectionHeader name="View Equipment Loan Information " />
            	</maintainableItems>
            </maintainableSection>
           --> 
            <maintainableSection title="View Retirement Information">
                <maintainableItems>
					<maintainableField name="retirementReasonCode" readOnly="true" />
					<maintainableField name="salePrice" readOnly="true" />
					<maintainableField name="estimatedSellingPrice" readOnly="true" />
					<maintainableField name="cashReceiptFinancialDocumentNumber" readOnly="true" />
					<maintainableField name="retirementChartOfAccountsCode" readOnly="true" />
					<maintainableField name="retirementAccountNumber" readOnly="true" />
					<maintainableField name="campusPoliceDepartmentCaseNumber" readOnly="true" />
				</maintainableItems>
			</maintainableSection>
            
            <maintainableSection title="View Equipment Loan Information   ">
              	
              	<maintainableItems>
            		<maintainableField name="loanDate" />	
					<maintainableField name="expectedReturnDate" />
					<maintainableField name="loanReturnDate" />
					
                </maintainableItems>
            </maintainableSection>
            
            <!-- need more work -->
          <!--   
            <maintainableSection title="Warranty and Repair History ">
            	<maintainableItems>
                	<subSectionHeader name="Warranty" />
                	<subSectionHeader name="Repair History" />
                	<subSectionHeader name="Component" />
            	</maintainableItems>
            </maintainableSection>
           --> 
        </maintainableSections>
    </maintenanceDocument>
