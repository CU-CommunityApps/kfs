<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cams.bo.AssetType">
 
        <inquiry>
            <title>Asset Type Code Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="capitalAssetTypeCode" />
                        <field attributeName="capitalAssetTypeDescription" />
                        <field attributeName="depreciableLifeLimit" />
                        <field attributeName="movingIndicator" />
                        <field attributeName="requiredBuildingIndicator" />
                        <field attributeName="active" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Asset Type Code Lookup</title>

            <instructions>Look up an Asset Type Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="capitalAssetTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="capitalAssetTypeCode" required="false" />
                <lookupField attributeName="capitalAssetTypeDescription" required="false" />
                <lookupField attributeName="depreciableLifeLimit" required="false" />
                <lookupField attributeName="movingIndicator" required="false" />
                <lookupField attributeName="requiredBuildingIndicator" required="false" />
                <lookupField attributeName="active" required="false">
                	<defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="capitalAssetTypeCode" />
                <field attributeName="capitalAssetTypeDescription" />
                <field attributeName="depreciableLifeLimit" />
                <field attributeName="movingIndicator" />
                <field attributeName="requiredBuildingIndicator" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="capitalAssetTypeCode" forceUppercase="true">
                <label>Capital Asset Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="9" />
                </control>

                <summary>capitalAssetTypeCode</summary>
                <description>Capital asset type code</description>
			</attribute>

            <attribute name="capitalAssetTypeDescription" forceUppercase="false">
                <label>Capital Asset Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>70</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="72" />
                </control>

                <summary>capitalAssetTypeDescription</summary>
                <description>Capital asset type description.</description>
			</attribute>

            <attribute name="depreciableLifeLimit" forceUppercase="true">
                <label>Depreciable Life Limit</label>
                <shortLabel>Limit</shortLabel>

                <maxLength>5</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="7" />
                </control>

                <summary>depreciableLifeLimit</summary>
                <description>Depreciable life limit description.</description>
			</attribute>

            <attribute name="movingIndicator" forceUppercase="true">
                <label>Moving Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>movingIndicator</summary>
                <description>Moving indicator description.</description>
			</attribute>

            <attribute name="requiredBuildingIndicator" forceUppercase="true">
                <label>Required Building Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>requiredBuildingIndicator</summary>
                <description>Required building indicator description.</description>
			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
