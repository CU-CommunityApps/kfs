<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cams.bo.AssetDepreciationMethod">
 
        <inquiry>
            <title>Asset Depreciation Method Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="depreciationMethodCode" />
                        <field attributeName="depreciationMethodName" />
                        <field attributeName="active" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Asset Depreciation Method Lookup</title>

            <instructions>Look up an Asset Depreciation Method</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="depreciationMethodCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="depreciationMethodCode" required="false" />
                <lookupField attributeName="depreciationMethodName" required="false" />
                <lookupField attributeName="active" required="false">
                	<defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="depreciationMethodCode" />
                <field attributeName="depreciationMethodName" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="depreciationMethodCode" forceUppercase="true">
                <label>Depreciation Method Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="5" />
                </control>

                <summary>depreciationMethodCode</summary>
                <description>depreciationMethodCode description...</description>
			</attribute>

            <attribute name="depreciationMethodName" forceUppercase="true">
                <label>Depreciation Method Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>depreciationMethodName</summary>
                <description>depreciationMethodName description...</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            
            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

        </attributes>
    </businessObject>
</dictionaryEntry>
