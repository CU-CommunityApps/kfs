<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
	<maintenanceDocument>
	
		<businessObjectClass>
			org.kuali.module.ar.bo.OrganizationOptions
		</businessObjectClass>
		<maintainableClass>
			org.kuali.module.ar.maintenance.OrganizationOptionsMaintainableImpl
		</maintainableClass>
		<businessRulesClass>
			org.kuali.module.ar.rules.OrganizationOptionsRule
		</businessRulesClass>
		<preRulesCheckClass>
			org.kuali.module.ar.rules.OrganizationOptionsPreRules
		</preRulesCheckClass>
		<documentAuthorizerClass>
			org.kuali.module.ar.document.authorization.OrganizationOptionsAuthorizer 
		</documentAuthorizerClass>
		<authorizations>
			<authorization action="initiate">
				<workgroups>
					<workgroup>SY_MAINTAINENANCE_USERS</workgroup>
				</workgroups>
			</authorization>
		</authorizations>

		<documentTypeName>
			OrganizationOptionsMaintenanceDocument
		</documentTypeName>
		<documentTypeCode>OOPT</documentTypeCode>

		<label>Organization Options Maintenance Document</label>
		<shortLabel>OrgOptionsMaintDoc</shortLabel>

		<summary>Organization Options maintenance document</summary>
		<description>
			Document used to create or update Organization Options
			objects
		</description>

		<lockingKeys>
			<field attributeName="chartOfAccountsCode" />
			<field attributeName="organizationCode" />
		</lockingKeys>

		<defaultExistenceChecks>
			<reference attributeName="chartOfAccounts"
				attributeToHighlightOnFail="chartOfAccountsCode" />
			<reference attributeName="organization"
				attributeToHighlightOnFail="organizationCode" />
			<reference attributeName="processingChartOfAccount"
				attributeToHighlightOnFail="processingChartOfAccountCode" />
			<reference attributeName="processingOrganization"
				attributeToHighlightOnFail="processingOrganizationCode" />
		</defaultExistenceChecks>

		<maintainableSections>
			<maintainableSection title="Edit Organization Options">
				<maintainableItems>
					<maintainableField name="chartOfAccountsCode"
						required="true">
						<defaultValueFinderClass>
							org.kuali.module.chart.lookup.valuefinder.CurrentUserChartValueFinder
						</defaultValueFinderClass>
					</maintainableField>
					<maintainableField name="organizationCode"
						required="true">
						<defaultValueFinderClass>
							org.kuali.module.chart.lookup.valuefinder.CurrentUserOrgValueFinder
						</defaultValueFinderClass>
					</maintainableField>
					<maintainableField
						name="processingChartOfAccountCode" required="true">
						<defaultValueFinderClass>
							org.kuali.module.chart.lookup.valuefinder.CurrentUserChartValueFinder
						</defaultValueFinderClass>
					</maintainableField>
					<maintainableField name="processingOrganizationCode"
						required="true">
						<defaultValueFinderClass>
							org.kuali.module.chart.lookup.valuefinder.CurrentUserOrgValueFinder
						</defaultValueFinderClass>
					</maintainableField>


					<!--                    <maintainableField name="universityName" required="false" >-->
					<!--                    	<defaultValueFinderClass>org.kuali.module.ar.lookup.valuefinder.InstitutionNameValueFinder</defaultValueFinderClass>-->
					<!--                    </maintainableField>      -->
					                  


					<maintainableField name="versionNumber" />
				</maintainableItems>
			</maintainableSection>

			<maintainableSection title="Edit Organization Invoice Information">
				<maintainableItems>

					<maintainableField name="organizationCheckPayableToName" required="false">
						<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.InstitutionNameValueFinder
						</defaultValueFinderClass>
					</maintainableField>

					<maintainableField name="organizationPaymentTermsText" required="false">
						<defaultValue>NET 30 DAYS</defaultValue>
					</maintainableField>

					<maintainableField name="organizationMessageText" required="false" />
	

				<maintainableField name="printInvoiceIndicator">
					<defaultValue>Y</defaultValue>
				</maintainableField>

				</maintainableItems>
			</maintainableSection>

            <maintainableSection title="Edit Organization Remit To Address">
                <maintainableItems>
                    <maintainableField name="organizationRemitToAddressName" required="true">
                   		<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToAddressNameValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                    <maintainableField name="organizationRemitToLine1StreetAddress" required="true">
                    	<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToLine1AddressValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                    <maintainableField name="organizationRemitToLine2StreetAddress" required="false">
                    	<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToLine2AddressValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                    <maintainableField name="organizationRemitToCityName" required="true">
                    	<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToCityNameValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                    <maintainableField name="organizationRemitToStateCode" required="true">
                    	<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToStateCodeValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                    <maintainableField name="organizationRemitToZipCode" required="true">
                    	<defaultValueFinderClass>
							org.kuali.module.ar.lookup.valuefinder.OrganizationRemitToZipCodeValueFinder
						</defaultValueFinderClass>
					</maintainableField>
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Edit Organization Phone">
                <maintainableItems>
                    <maintainableField name="organizationPhoneNumber" required="true"/>
                    <maintainableField name="organizationFaxNumber" required="false"/>
                    <maintainableField name="organization800PhoneNumber" required="false"/>
                </maintainableItems>
            </maintainableSection>

        </maintainableSections>
	</maintenanceDocument>
</dictionaryEntry>
