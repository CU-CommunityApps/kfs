<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OrganizationOptionsMaintenanceDocument" parent="OrganizationOptionsMaintenanceDocument-parentBean" />

  <bean id="OrganizationOptionsMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.ar.businessobject.OrganizationOptions" />
    <property name="maintainableClass" value="org.kuali.kfs.module.ar.document.OrganizationOptionsMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="OrganizationOptionsMaintenanceDocument-EditOrganizationOptions" />
        <ref bean="OrganizationOptionsMaintenanceDocument-EditOrganizationInvoiceInformation" />
        <ref bean="OrganizationOptionsMaintenanceDocument-EditOrganizationRemitToAddress" />
        <ref bean="OrganizationOptionsMaintenanceDocument-EditOrganizationPhone" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:attributeToHighlightOnFail="organizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="processingChartOfAccount"
              p:attributeToHighlightOnFail="processingChartOfAccountCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="processingOrganization"
              p:attributeToHighlightOnFail="processingOrganizationCode" />
        <bean parent="ReferenceDefinition"
        	  p:attributeName="orgPostalZipCode" 
        	  p:attributeToHighlightOnFail="organizationPostalZipCode" />
        <bean parent="ReferenceDefinition"
        	  p:attributeName="orgRemitToZipCode" 
        	  p:attributeToHighlightOnFail="organizationRemitToZipCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>organizationCode</value>
      </list>
    </property>
    <property name="label" value="Organization Options" />
    <property name="shortLabel" value="OrgOptionsMaintDoc" />
    <property name="summary" value="Organization Options maintenance document" />
    <property name="description" value="Document used to create or update Organization Options objects" />
    <property name="documentTypeName" value="OrganizationOptionsMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.ar.document.validation.impl.OrganizationOptionsRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.ar.document.authorization.OrganizationOptionsAuthorizer" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.module.ar.document.validation.impl.OrganizationOptionsPreRules" />
    <property name="documentTypeCode" value="OOPT" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationOptions" parent="OrganizationOptionsMaintenanceDocument-EditOrganizationOptions-parentBean" />

  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationOptions-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Options" />
    <property name="title" value="Edit Organization Options" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="processingChartOfAccountCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="processingOrganizationCode"
              p:required="true" />
      </list>
    </property>
  </bean>
  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationInvoiceInformation" parent="OrganizationOptionsMaintenanceDocument-EditOrganizationInvoiceInformation-parentBean" />

  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationInvoiceInformation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Invoice Information" />
    <property name="title" value="Edit Organization Invoice Information" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationPostalZipCode"/>      
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCheckPayableToName"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.InstitutionNameValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationPaymentTermsText"
              p:defaultValue="NET 30 DAYS" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationMessageText" />
        <bean parent="MaintainableFieldDefinition"
              p:name="printInvoiceIndicator"
              p:defaultValue="Y" />
      </list>
    </property>
  </bean>
  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationRemitToAddress" parent="OrganizationOptionsMaintenanceDocument-EditOrganizationRemitToAddress-parentBean" />

  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationRemitToAddress-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Remit To Address" />
    <property name="title" value="Edit Organization Remit To Address" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToAddressName"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToAddressNameValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToLine1StreetAddress"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToLine1AddressValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToLine2StreetAddress"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToLine2AddressValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToCityName"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToCityNameValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToStateCode"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToStateCodeValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToZipCode"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.ar.businessobject.defaultvalue.OrganizationRemitToZipCodeValueFinder" />
      </list>
    </property>
  </bean>
  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationPhone" parent="OrganizationOptionsMaintenanceDocument-EditOrganizationPhone-parentBean" />

  <bean id="OrganizationOptionsMaintenanceDocument-EditOrganizationPhone-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Phone" />
    <property name="title" value="Edit Organization Phone" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationPhoneNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationFaxNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organization800PhoneNumber" />
      </list>
    </property>
  </bean>
</beans>
