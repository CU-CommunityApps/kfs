<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CustomerCreditMemoDocument" parent="CustomerCreditMemoDocument-parentBean" />

  <bean id="CustomerCreditMemoDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Customer Credit Memo" />
    <property name="shortLabel" value="Customer Credit Memo" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-AR"
            p:parameterName="CRM"
            p:parameterDetailType="CustomerCreditMemo" />
    </property>
    <property name="documentTypeName" value="CustomerCreditMemoDocument" />
    <property name="documentClass" value="org.kuali.module.ar.document.CustomerCreditMemoDocument" />
    <property name="businessRulesClass" value="org.kuali.module.ar.rules.CustomerCreditMemoDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.ar.document.authorization.CustomerCreditMemoDocumentAuthorizer" />
    <property name="documentTypeCode" value="CRM" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
