<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.ar.document.CashControlDocument</documentClass>
        <businessRulesClass>org.kuali.module.ar.rules.CashControlDocumentRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.ar.document.authorization.CashControlDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>CashControlDocument</documentTypeName>
        <documentTypeCode>CTRL</documentTypeCode>

        <label>Cash Control</label>

        <attributes>
            
           <attributeReference name="referenceFinancialDocumentNumber" sourceClassName="org.kuali.core.bo.DocumentHeader" sourceAttributeName="documentNumber" >
               <label>Reference Document Number</label>
               <shortLabel>Reference Document Number</shortLabel>
           </attributeReference>

           <attribute name="customerPaymentMediumCode" forceUppercase="true" >
                <label>Payment Medium Code</label>
                <shortLabel>Medium Code</shortLabel>
                 
               <maxLength>2</maxLength>
                
                <required>true</required>

                <control>
                    <select valuesFinderClass="org.kuali.module.ar.lookup.keyvalues.PaymentMediumValuesFinder" />
                </control>

                <summary>customerPaymentMediumCode</summary>
                <description>customerPaymentMediumCode description...</description>
            </attribute>
            
        </attributes>
  
        <allowsCopy>false</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
    </transactionalDocument>
</dictionaryEntry>
