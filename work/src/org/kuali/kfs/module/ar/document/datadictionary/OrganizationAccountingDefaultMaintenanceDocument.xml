<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.ar.bo.OrganizationAccountingDefault</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.ar.rules.OrganizationAccountingDefaultRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.ar.document.authorization.OrganizationAccountingDefaultAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>AR_ROLE_MAINTAINERS</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>OrganizationAccountingDefaultMaintenanceDocument</documentTypeName>
        <documentTypeCode>OADF</documentTypeCode>

        <label>Organization Accounting Default Maintenance Document</label>
        <shortLabel>OrgAcctgDefaultMaintDoc</shortLabel>

        <summary>Organization Accounting Default maintenance document</summary>
        <description>Document used to create or update Organization Accounting Default objects</description>

        <lockingKeys>
            <field attributeName="chartOfAccountsCode" />
            <field attributeName="organizationCode" />
            <field attributeName="universityFiscalYear" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />
            <reference attributeName="organization" attributeToHighlightOnFail="organizationCode" />
            <reference attributeName="defaultInvoiceChartOfAccounts" attributeToHighlightOnFail="defaultInvoiceChartOfAccountsCode" />
            <reference attributeName="defaultInvoiceAccount" attributeToHighlightOnFail="defaultInvoiceAccountNumber" />
            <reference attributeName="defaultInvoiceSubAccount" attributeToHighlightOnFail="defaultInvoiceSubAccountNumber" />
            <reference attributeName="defaultInvoiceFinancialObject" attributeToHighlightOnFail="defaultInvoiceFinancialObjectCode" />
            <reference attributeName="defaultInvoiceFinancialSubObject" attributeToHighlightOnFail="defaultInvoiceFinancialSubObjectCode" />
            <reference attributeName="defaultInvoiceProject" attributeToHighlightOnFail="defaultInvoiceProjectCode" />
            <reference attributeName="defaultPaymentChartOfAccounts" attributeToHighlightOnFail="defaultPaymentChartOfAccountsCode" />
            <reference attributeName="defaultPaymentAccount" attributeToHighlightOnFail="defaultPaymentAccountNumber" />
            <reference attributeName="defaultPaymentSubAccount" attributeToHighlightOnFail="defaultPaymentSubAccountNumber" />
            <reference attributeName="defaultPaymentProject" attributeToHighlightOnFail="defaultPaymentProjectCode" />
            <reference attributeName="universityFiscal" attributeToHighlightOnFail="universityFiscalYear" />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Organization Accounting Defaults">
                <maintainableItems>
                    <maintainableField name="universityFiscalYear" required="true" />
                    <maintainableField name="chartOfAccountsCode" required="true"/>
                    <maintainableField name="organizationCode" required="true"/>
					<maintainableField name="writeoffObjectCode" required="true"/>
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Edit Organization Income Account Defaults">
                <maintainableItems>
                	<maintainableField name="defaultInvoiceChartOfAccountsCode" required="false"/>
                    <maintainableField name="defaultInvoiceAccountNumber" required="false" />
                    <maintainableField name="defaultInvoiceSubAccountNumber" required="false" />
                    <maintainableField name="defaultInvoiceFinancialObjectCode" required="false" />
                    <maintainableField name="defaultInvoiceFinancialSubObjectCode" required="false" />
                    <maintainableField name="defaultInvoiceProjectCode" required="false"/>
                    <maintainableField name="defaultInvoiceOrganizationReferenceIdentifier" required="false" />
                </maintainableItems>
            </maintainableSection>
            <maintainableSection title="Edit Organization Accounting Payment Defaults">
                <maintainableItems>
                	<maintainableField name="defaultPaymentChartOfAccountsCode" required="false"/>
                    <maintainableField name="defaultPaymentAccountNumber" required="false" />
                    <maintainableField name="defaultPaymentSubAccountNumber" required="false" />
                    <maintainableField name="defaultInvoiceProjectCode" required="false"/>
 					<!--  2 fields are missing here -->
                    <maintainableField name="defaultPaymentOrganizationReferenceIdentifier" required="false" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
