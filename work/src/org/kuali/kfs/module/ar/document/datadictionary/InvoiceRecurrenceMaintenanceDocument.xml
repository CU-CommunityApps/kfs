<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="InvoiceRecurrenceMaintenanceDocument" parent="InvoiceRecurrenceMaintenanceDocument-parentBean" />

  <bean id="InvoiceRecurrenceMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.ar.businessobject.InvoiceRecurrence" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="InvoiceRecurrenceMaintenanceDocument-EditInvoiceRecurrence" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>invoiceNumber</value>
      </list>
    </property>
    <property name="label" value="Invoice Recurrence" />
    <property name="shortLabel" value="InvRcurrnc" />
    <property name="summary" value="Invoice Recurrence maintenance document" />
    <property name="description" value="Document used to create or update Invoice Recurrence objects" />
    <property name="documentTypeName" value="InvoiceRecurrenceMaintenanceDocument" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.module.ar.document.validation.impl.InvoiceRecurrencePreRules" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.ar.document.validation.impl.InvoiceRecurrenceRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="INVR" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/CustomerInvoiceDocumentService.js</value>
        <value>../scripts/ar/customerInvoiceObjectInfo.js</value>
      </list>
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="InvoiceRecurrenceMaintenanceDocument-EditInvoiceRecurrence" parent="InvoiceRecurrenceMaintenanceDocument-EditInvoiceRecurrence-parentBean" />

  <bean id="InvoiceRecurrenceMaintenanceDocument-EditInvoiceRecurrence-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Invoice Recurrence" />
    <property name="title" value="Edit Invoice Recurrence" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="invoiceNumber"
              p:required="true"
              p:webUILeaveFieldFunction="loadCustomerNumberAndName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="customerNumber"
              p:readOnly="true"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="customer.customerName"
              p:readOnly="true"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentRecurrenceBeginDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentRecurrenceEndDate"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentTotalRecurrenceNumber"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentRecurrenceIntervalCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="workgroupName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentInitiatorUserIdentifier"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentInitiatorUser.principalName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="documentInitiatorUser.name" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
</beans>

