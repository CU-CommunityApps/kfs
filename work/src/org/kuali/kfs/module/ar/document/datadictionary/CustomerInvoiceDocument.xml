<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.ar.document.CustomerInvoiceDocument</documentClass>
        <businessRulesClass>org.kuali.module.ar.rules.CustomerInvoiceDocumentRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.ar.document.authorization.CustomerInvoiceDocumentAuthorizer</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>CustomerInvoiceDocument</documentTypeName>
        <documentTypeCode>INV</documentTypeCode>

        <label>Customer Invoice</label>

        <!--  help parameterNamespace="KFS-AR" parameterDetailType="Invoice" parameterName="?" /-->
  		<attributes>
           <attributeReference name="documentHeader.financialDocumentDescription" sourceClassName="org.kuali.core.bo.DocumentHeader" sourceAttributeName="financialDocumentDescription" />

            <attribute name="invoiceHeaderText">
                <label>Header Text</label>
                <shortLabel>Header</shortLabel>

                <maxLength>50</maxLength>

                <required>false</required>

                <control>
                    <text size="50" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Header Text of Invoice</description>
            </attribute>

            <attribute name="invoiceAttentionLineText">
                <label>Attention Line Text</label>
                <shortLabel>Attention Line</shortLabel>

                <maxLength>80</maxLength>

                <required>false</required>

                <control>
                    <text size="11" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The attention line for this invoice</description>
            </attribute>
			<attributeReference name="invoiceDueDate"
                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                sourceAttributeName="genericDate" >
                <label>Due Date</label>
                <shortLabel>Due Date</shortLabel>
                <required>true</required>

                <summary><![CDATA[&nbsp;]]> </summary>
                <description>The date that this invoice is due</description>
            </attributeReference>
			<attributeReference name="billingDate"
                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                sourceAttributeName="genericDate" >
                <label>Billing Date</label>
                <shortLabel>Billing Date</shortLabel>
                <required>false</required>

                <summary><![CDATA[&nbsp;]]> </summary>
                <description>The date that this invoice was billed</description>
            </attributeReference>
            
			<attributeReference name="printDate"
                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                sourceAttributeName="genericDate" >
                <label>Print Date</label>
                <shortLabel>Print Date</shortLabel>
                <required>false</required>

                <summary><![CDATA[&nbsp;]]> </summary>
                <description>The date that this invoice was printed</description>
            </attributeReference>
                        
            <attribute name="invoiceTermsText">
                <label>Terms</label>
                <shortLabel>Terms</shortLabel>

                <maxLength>40</maxLength>

                <required>false</required>

                <control>
                    <text size="40" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    The terms for this invoice.
                </description>
            </attribute>

            <attribute name="organizationInvoiceNumber">
                <label>Organization Invoice Number</label>
                <shortLabel>Invoice Number</shortLabel>

                <maxLength>9</maxLength>

                <required>false</required>

                <control>
                    <text size="9" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The invoice number for this invoice</description>
            </attribute>

            <attribute name="writeoffIndicator">
                <label>Write off Indicator</label>
                <shortLabel>Write-off</shortLabel>

                <maxLength>1</maxLength>

                <required>false</required>

                <control>
                    <checkbox />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    <![CDATA[&nbsp;]]>
                </description>
            </attribute>

            <attribute name="customerPurchaseOrderNumber">
                <label>Customer Purchase Order Number</label>
                <shortLabel>P.O. Number</shortLabel>

                <maxLength>25</maxLength>

                <required>false</required>

                <control>
                    <text size="25" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>
                    <![CDATA[&nbsp;]]>
                </description>
            </attribute>

            <attribute name="printInvoiceIndicator">
                <label>Print Invoice Indicator</label>
                <shortLabel>Print Inv Ind</shortLabel>

                <maxLength>1</maxLength>

                <required>false</required>

                <control>
                    <select valuesFinderClass="org.kuali.module.ar.lookup.keyvalues.PrintInvoiceOptionsValuesFinder" />
                </control>

                <summary>Print Invoice Indicator</summary>
                <description>...</description>
            </attribute>

            <attribute name="invoiceWriteoffAmount">
                <label>Write Off Amount</label>
                <shortLabel>Write-off Amt</shortLabel>

                <maxLength>19</maxLength>

                <validationPattern>
                    <fixedPoint allowNegative="false" precision="19" scale="2" />
                </validationPattern>
                <required>false</required>

                <control>
                    <text size="8" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The dollar amount that this invoice can be written off for.</description>
            </attribute>
			<attribute name="invoiceDescription">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>50</maxLength>

                <required>false</required>

                <control>
                    <text size="50" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Description of Invoice</description>
            </attribute>
            <attributeReference name="customerPurchaseOrderDate"
                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                sourceAttributeName="genericDate" >
                <label>Customer Purchase Order Date</label>
                <shortLabel>P.O. Date</shortLabel>
                <required>false</required>

                <summary><![CDATA[&nbsp;]]> </summary>
                <description>The date that this P.O. for this invoice was created</description>
            </attributeReference>
            
			<attributeReference name="billByChartOfAccountCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <label>Billed By Chart of Accounts Code</label>
                <shortLabel>Billed By Chart</shortLabel>
                <control>
                    <select valuesFinderClass="org.kuali.module.chart.lookup.keyvalues.ChartValuesFinder" />
                </control>
            </attributeReference>
            
			<attributeReference name="billedByOrganizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode">
                <label>Billed By Organization Object Code</label>
                <shortLabel>Billed By Org Code</shortLabel>
                <maxLength>4</maxLength>
                <control>
                    <text size="4" />
                </control>
            </attributeReference>

            <attribute name="customerShipToAddressIdentifier">
                <label>Ship To Address Identifier</label>
                <shortLabel>Ship To Add Id</shortLabel>

                <maxLength>5</maxLength>

                <control>
                    <text size="7" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The Ship To address Identifier to use for this customer</description>
            </attribute>
            <attribute name="customerBillToAddressIdentifier">
                <label>Bill To Address Identifier</label>
                <shortLabel>Bill To Add Id</shortLabel>

                <maxLength>5</maxLength>

                <required>false</required>

                <control>
                    <text size="7" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>The Bill To address Identifier to use for this customer</description>
            </attribute>
            <attribute name="customerSpecialProcessingCode">
                <label>Special Processing Code</label>
                <shortLabel>Special Processing</shortLabel>

                <maxLength>2</maxLength>

                <required>false</required>

                <control>
                    <text size="2" />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Special Processing Instructions</description>
            </attribute>
            
            <attribute name="customerRecordAttachmentIndicator">
                <label>Record Attachment Indicator</label>
                <shortLabel>Attachment</shortLabel>

                <maxLength>1</maxLength>

                <required>false</required>

                <control>
                    <checkbox />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Is there an attachment for the customer</description>
            </attribute>

			<attribute name="openInvoiceIndicator">
                <label>Open Invoice Indicator</label>
                <shortLabel>Open Invoice</shortLabel>

                <maxLength>1</maxLength>

                <required>false</required>

                <control>
                    <checkbox />
                </control>

                <summary>
                    <![CDATA[&nbsp;]]>
                </summary>
                <description>Indicates if there is already an open invoice for this customer</description>
            </attribute>
			
			<attributeReference name="sourceTotal"
				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
				sourceAttributeName="genericAmount">
			    <label>Invoice Total Amount</label> 
			    <shortLabel>Invoice Total Amount</shortLabel> 
			</attributeReference>
			
			<attributeReference name="paymentChartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode">
                <required>false</required>
                <control>
                    <select valuesFinderClass="org.kuali.module.chart.lookup.keyvalues.SimpleChartValuesFinder" />
                </control>
            </attributeReference>		
                       
            
			<attributeReference name="paymentFinancialObjectCode" sourceClassName="org.kuali.module.chart.bo.ObjectCode" sourceAttributeName="financialObjectCode">
			    <required>false</required>
			    <description>The code that identifies the "object" of accounting for a transaction, expressed as a 4-digit numeric text, including leading zeros. For Search Criteria, select the Help for the Object Code search.</description>
			</attributeReference>

			<attributeReference name="paymentAccountNumber" sourceClassName="org.kuali.module.chart.bo.Account" sourceAttributeName="accountNumber">
			    <required>false</required>
			</attributeReference>

			<attribute name="paymentOrganizationReferenceIdentifier" forceUppercase="true">
			    <label>Organization Reference Id</label>
			    <shortLabel>Org Ref Id</shortLabel>
			
			    <maxLength>8</maxLength>
			
			    <validationPattern>
			        <anyCharacter />
			    </validationPattern>
			    <required>false</required>
			    <control>
			        <text size="10" />
			    </control>
			
			    <summary>
			        <![CDATA[&nbsp;]]>
			    </summary>
			    <description>The identifier of an Organization which has been associated with the Account Line.</description>
			</attribute>
            
			<attributeReference name="paymentSubAccountNumber" sourceClassName="org.kuali.module.chart.bo.SubAccount" sourceAttributeName="subAccountNumber">
			    <label>Sub-Account Code</label>
			    <shortLabel>Sub-Account</shortLabel>
			    <required>false</required>
			    <summary>
			        <![CDATA[&nbsp;]]>
			    </summary>
			    <description>The identifier to further partition the financial activity of an Account, expressed as a 5-character code</description>
			</attributeReference>


			<attributeReference name="paymentProjectCode" sourceClassName="org.kuali.module.chart.bo.ProjectCode" sourceAttributeName="code">
			    <label>Project Code</label>
			    <shortLabel>Project</shortLabel>			
			    <required>false</required>
			    <summary>
			        <![CDATA[&nbsp;]]>
			    </summary>
			    <description>The title of the project.</description>
			
			</attributeReference>

			<attributeReference name="paymentFinancialSubObjectCode" sourceClassName="org.kuali.module.chart.bo.SubObjCd" sourceAttributeName="financialSubObjectCode">
			    <label>Sub Object Code</label>
			    <shortLabel>Sub-Object</shortLabel>					
			    <required>false</required>
			    <description>The code that partitions the Object Code into a greater amount of detail. Sub-Object Code acquire most of the attributes of the official Object Code to which they report, including Object Type and Object SubType.</description>
			</attributeReference>            
			
			<attributeReference name="billingDateForDisplay"
                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                sourceAttributeName="genericDate" >
                <label>Billing Date</label>
                <shortLabel>Billing Date</shortLabel>
                <required>false</required>

                <summary><![CDATA[&nbsp;]]> </summary>
                <description>The date that this invoice was billed</description>
            </attributeReference>			
			 			
            
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            
        </attributes>
  		
        <allowsCopy>true</allowsCopy>
        <allowsErrorCorrection>true</allowsErrorCorrection>
    </transactionalDocument>
</dictionaryEntry>