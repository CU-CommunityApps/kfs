<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="SystemInformationMaintenanceDocument" parent="SystemInformationMaintenanceDocument-parentBean" />

  <bean id="SystemInformationMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.ar.bo.SystemInformation" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="SystemInformationMaintenanceDocument-EditSystemInformation" />
        <ref bean="SystemInformationMaintenanceDocument-EditObjectCodes" />
        <ref bean="SystemInformationMaintenanceDocument-EditUniversityClearingAccount" />
        <ref bean="SystemInformationMaintenanceDocument-EditRemitToInformation" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="adjustmentFinancialObject"
              p:attributeToHighlightOnFail="adjustmentObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="salesTaxFinancialObject"
              p:attributeToHighlightOnFail="salesTaxFinancialObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="creditCardFinancialObject"
              p:attributeToHighlightOnFail="creditCardObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityClearingSubObject"
              p:attributeToHighlightOnFail="universityClearingSubObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityClearingObject"
              p:attributeToHighlightOnFail="universityClearingObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="discountFinancialObject"
              p:attributeToHighlightOnFail="discountObjectCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="processingOrganization"
              p:attributeToHighlightOnFail="processingOrganizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="processingChartOfAccount"
              p:attributeToHighlightOnFail="processingChartOfAccountCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="salesTaxAccount"
              p:attributeToHighlightOnFail="salesTaxAccountNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityClearingAccount"
              p:attributeToHighlightOnFail="universityClearingAccountNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityClearingChartOfAccounts"
              p:attributeToHighlightOnFail="universityClearingChartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityClearingSubAccount"
              p:attributeToHighlightOnFail="universityClearingSubAccountNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="universityFiscalYearObject"
              p:attributeToHighlightOnFail="universityFiscalYear" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>universityFiscalYear</value>
        <value>processingChartOfAccountCode</value>
        <value>processingOrganizationCode</value>
      </list>
    </property>
    <property name="label" value="System Information" />
    <property name="shortLabel" value="SystemInformationMaintDoc" />
    <property name="summary" value="System Information maintenance document" />
    <property name="description" value="Document used to create or update System Information" />
    <property name="documentTypeName" value="SystemInformationMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.module.ar.rules.SystemInformationRule" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="ARSI" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTAINENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="SystemInformationMaintenanceDocument-EditSystemInformation" parent="SystemInformationMaintenanceDocument-EditSystemInformation-parentBean" />

  <bean id="SystemInformationMaintenanceDocument-EditSystemInformation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit System Information" />
    <property name="title" value="Edit System Information" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityFiscalYear"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityName"
              p:required="false" />
        <bean parent="MaintainableFieldDefinition"
              p:name="processingChartOfAccountCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="processingOrganizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="financialDocumentInitiatorIdentifier"
              p:defaultValueFinderClass="org.kuali.module.cg.lookup.valuefinder.CurrentSessionUserValueFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="lockboxNumber" />
<!--        <bean parent="MaintainableFieldDefinition"-->
<!--              p:name="salesTaxAccountNumber" />-->
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />	
      </list>
    </property>
  </bean>
  <bean id="SystemInformationMaintenanceDocument-EditObjectCodes" parent="SystemInformationMaintenanceDocument-EditObjectCodes-parentBean" />

  <bean id="SystemInformationMaintenanceDocument-EditObjectCodes-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Object Codes" />
    <property name="title" value="Edit Object Codes" />
    <property name="maintainableItems" >
      <list>
<!--        <bean parent="MaintainableFieldDefinition"-->
<!--              p:name="salesTaxFinancialObjectCode" />-->
        <bean parent="MaintainableFieldDefinition"
              p:name="adjustmentObjectCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="creditCardObjectCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="discountObjectCode" />
      </list>
    </property>
  </bean>
  <bean id="SystemInformationMaintenanceDocument-EditUniversityClearingAccount" parent="SystemInformationMaintenanceDocument-EditUniversityClearingAccount-parentBean" />

  <bean id="SystemInformationMaintenanceDocument-EditUniversityClearingAccount-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit University Clearing Account" />
    <property name="title" value="Edit University Clearing Account" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="universityClearingChartOfAccountsCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityClearingAccountNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityClearingSubAccountNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityClearingObjectCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="universityClearingSubObjectCode" />
      </list>
    </property>
  </bean>
  <bean id="SystemInformationMaintenanceDocument-EditRemitToInformation" parent="SystemInformationMaintenanceDocument-EditRemitToInformation-parentBean" />

  <bean id="SystemInformationMaintenanceDocument-EditRemitToInformation-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Remit To Information" />
    <property name="title" value="Edit Remit To Information" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCheckPayableToName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToAddressName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToLine1StreetAddress" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToLine2StreetAddress" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToCityName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToStateCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationRemitToZipCode" />
      </list>
    </property>
  </bean>
</beans>
