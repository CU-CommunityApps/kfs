<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.ar.bo.CustomerAddressType">
 
        <inquiry>
            <title>Customer Address Type Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="customerAddressTypeCode" />
                        <field attributeName="customerAddressTypeDescription" />
                        <field attributeName="active" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Customer Address Type Lookup</title>

            <instructions>Look up a Customer Address Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="customerAddressTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="customerAddressTypeCode" required="false" />
                <lookupField attributeName="customerAddressTypeDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="customerAddressTypeCode" />
                <field attributeName="customerAddressTypeDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>customerAddressTypeCode</titleAttribute>

        <attributes>

            <attribute name="customerAddressTypeCode" forceUppercase="true">
                <label>Customer Address Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>
                <required>true</required>

                <control>
                    <text size="4" />
                </control>

                <summary>customerAddressTypeCode</summary>
                <description>customerAddressTypeCode description...</description>
			</attribute>

            <attribute name="customerAddressTypeDescription" forceUppercase="true">
                <label>Customer Address Type Description</label>
                <shortLabel>Addr Typ Desc</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern><anyCharacter  allowWhitespace="true" /></validationPattern>
                <required>true</required>

                <control>
                    <text size="32" />
                </control>

                <summary>customerAddressTypeDescription</summary>
                <description>customerAddressTypeDescription description...</description>
			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
