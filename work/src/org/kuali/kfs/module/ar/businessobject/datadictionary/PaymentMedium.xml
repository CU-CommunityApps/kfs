<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.ar.bo.PaymentMedium">
 
        <inquiry>
            <title>Payment Medium Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="customerPaymentMediumCode" />
                        <field attributeName="customerPaymentMediumDescription" />
                        <field attributeName="active" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Payment Medium Lookup</title>

            <instructions>Look up a Payment Medium</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="customerPaymentMediumCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="customerPaymentMediumCode" required="false" />
                <lookupField attributeName="customerPaymentMediumDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="customerPaymentMediumCode" />
                <field attributeName="customerPaymentMediumDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="customerPaymentMediumCode" forceUppercase="true">
                <label>Customer Payment Medium Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>customerPaymentMediumCode</summary>
                <description>customerPaymentMediumCode description...</description>
			</attribute>

            <attribute name="customerPaymentMediumDescription" forceUppercase="true">
                <label>Customer Payment Medium Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>customerPaymentMediumDescription</summary>
                <description>customerPaymentMediumDescription description...</description>
			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
