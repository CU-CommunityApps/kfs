<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.ar.bo.CashControlDetail">
 
        <inquiry>
            <title>Cash Control Detail Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="customerNumber" />
                        <field attributeName="customerPaymentDate" />
                        <field attributeName="customerPaymentDescription" />
                        <field attributeName="customerPaymentMediumIdentifier" />
                        <field attributeName="documentNumber" />
                        <field attributeName="financialDocumentLineAmount" />
                        <field attributeName="referenceFinancialDocumentNumber" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Cash Control Detail Lookup</title>

            <instructions>Look up a Cash Control Detail</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="documentNumber" />
                    <sortAttribute attributeName="referenceFinancialDocumentNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="customerNumber" required="false" />
                <lookupField attributeName="customerPaymentDate" required="false" />
                <lookupField attributeName="customerPaymentDescription" required="false" />
                <lookupField attributeName="customerPaymentMediumIdentifier" required="false" />
                <lookupField attributeName="documentNumber" required="false" />
                <lookupField attributeName="financialDocumentLineAmount" required="false" />
                <lookupField attributeName="referenceFinancialDocumentNumber" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="customerNumber" />
                <field attributeName="customerPaymentDate" />
                <field attributeName="customerPaymentDescription" />
                <field attributeName="customerPaymentMediumIdentifier" />
                <field attributeName="documentNumber" />
                <field attributeName="financialDocumentLineAmount" />
                <field attributeName="referenceFinancialDocumentNumber" />
            </resultFields>
        </lookup>

        <attributes>

		    <attributeReference name="customerNumber" sourceClassName="org.kuali.module.ar.bo.Customer" sourceAttributeName="customerNumber">
                <label>Customer Number</label>
                <shortLabel>Customer #</shortLabel>
            </attributeReference>

            <attributeReference name="customerPaymentDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate">
                <label>Customer Payment Date</label>
                <shortLabel>Date</shortLabel>
            </attributeReference>

            <attribute name="customerPaymentDescription" forceUppercase="true">
                <label>Customer Payment Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>60</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="62" />
                </control>

                <summary>customerPaymentDescription</summary>
                <description>customerPaymentDescription description...</description>
			</attribute>

            <attribute name="customerPaymentMediumIdentifier" forceUppercase="true">
                <label>Customer Payment Medium Identifier</label>
                <shortLabel>Medium ID</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="32" />
                </control>

                <summary>customerPaymentMediumIdentifier</summary>
                <description>customerPaymentMediumIdentifier description...</description>
			</attribute>

            <attributeReference name="documentNumber" sourceClassName="org.kuali.core.bo.DocumentHeader" sourceAttributeName="documentNumber">
                <label>Document Number</label>
                <shortLabel>Application Doc #</shortLabel>
            </attributeReference>
			
            <attributeReference name="financialDocumentLineAmount" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericAmount">
                <label>Line Amount</label>
                <shortLabel>Amount</shortLabel>
                <required>true</required>
            </attributeReference>

            <attribute name="referenceFinancialDocumentNumber" forceUppercase="true">
                <label>Reference Financial Document Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>14</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="16" />
                </control>

                <summary>referenceFinancialDocumentNumber</summary>
                <description>referenceFinancialDocumentNumber description...</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
