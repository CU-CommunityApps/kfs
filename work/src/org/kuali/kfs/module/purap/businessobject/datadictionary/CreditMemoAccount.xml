<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd"[
<!ENTITY accountingLineBaseAttributes SYSTEM "../../../kfs/entities/AccountingLineBaseAttributes.xml">
<!ENTITY purApAccountingLineBaseAttributes SYSTEM "../dictionary/entity/PurApAccountingLineBaseAttributes.xml">
]>

<dictionaryEntry>
	<businessObject businessObjectClass="org.kuali.module.purap.bo.CreditMemoAccount">


		<inquiry>
			<title>Credit Memo Account Inquiry</title>

			<inquirySections>
				<inquirySection title="Header Text">
					<inquiryFields>
						<field attributeName="accountLinePercent" />
						<field attributeName="accountNumber" />
						<field attributeName="chartOfAccountsCode" />
						<field attributeName="creditMemoAccountIdentifier" />
						<field attributeName="creditMemoItemIdentifier" />
						<field attributeName="financialObjectCode" />
						<field attributeName="financialSubObjectCode" />
						<field attributeName="itemAccountTotalAmount" />
						<field attributeName="organizationReferenceId" />
						<field attributeName="projectCode" />
						<field attributeName="subAccountNumber" />
					</inquiryFields>
				</inquirySection>
			</inquirySections>
		</inquiry>

		<lookup>
			<title>Credit Memo Account Lookup</title>

			<instructions>Lookup a Credit Memo Account</instructions>

			<defaultSort sortAscending="true">
				<sortAttributes>
					<sortAttribute attributeName="accountLinePercent" />
				</sortAttributes>
			</defaultSort>

			<lookupFields>
				<lookupField attributeName="accountLinePercent" required="false" />
				<lookupField attributeName="accountNumber" required="false" />
				<lookupField attributeName="chartOfAccountsCode" required="false" />
				<lookupField attributeName="creditMemoAccountIdentifier" required="false" />
				<lookupField attributeName="creditMemoItemIdentifier" required="false" />
				<lookupField attributeName="financialObjectCode" required="false" />
				<lookupField attributeName="financialSubObjectCode" required="false" />
				<lookupField attributeName="itemAccountTotalAmount" required="false" />
				<lookupField attributeName="organizationReferenceId" required="false" />
				<lookupField attributeName="projectCode" required="false" />
				<lookupField attributeName="subAccountNumber" required="false" />
			</lookupFields>

			<resultFields>
				<field attributeName="accountLinePercent" />
				<field attributeName="accountNumber" />
				<field attributeName="chartOfAccountsCode" />
				<field attributeName="creditMemoAccountIdentifier" />
				<field attributeName="creditMemoItemIdentifier" />
				<field attributeName="financialObjectCode" />
				<field attributeName="financialSubObjectCode" />
				<field attributeName="itemAccountTotalAmount" />
				<field attributeName="organizationReferenceId" />
				<field attributeName="projectCode" />
				<field attributeName="subAccountNumber" />
			</resultFields>
		</lookup>

		<attributes>
			&accountingLineBaseAttributes;
			&purApAccountingLineBaseAttributes;

			<attribute name="creditMemoAccountIdentifier" forceUppercase="true">
				<label>Credit Memo Account Identifier</label>
				<shortLabel>Identifier</shortLabel>

				<maxLength>10</maxLength>
				<validationPattern>
					<numeric />
				</validationPattern>

				<control>
					<text size="12" />
				</control>

				<summary>creditMemoAccountIdentifier</summary>
				<description>creditMemoAccountIdentifier description...</description>
			</attribute>

			<attributeReference name="creditMemoItemIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemIdentifier">
				<label>Credit Memo Item Identifier</label>
				<shortLabel>Item Identifier</shortLabel>
				<summary>creditMemoItemIdentifier</summary>
				<description>creditMemoItemIdentifier description...</description>
			</attributeReference>

			<attributeReference name="itemAccountTotalAmount" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Item Account Total Amount</label>
				<shortLabel>Amount</shortLabel>
				<summary>itemAccountTotalAmount</summary>
				<description>itemAccountTotalAmountdescription...</description>
			</attributeReference>

		</attributes>
	</businessObject>
</dictionaryEntry>
