            <attributeReference name="quantityBasedGeneralLedgerIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" > 
                <label>Quantity Based General Ledger Indicator</label>
                <shortLabel>Quantity Based</shortLabel>
                <summary>Quantity Based General Ledger Indicator indicates whether an item has quantity or not.</summary>
                <description>This attribute is used to describe whether the associated item has quantity or not.</description>
            </attributeReference>

            <attributeReference name="itemTypeAboveTheLineIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" >           
                <label>Item Type Above The Line Indicator</label>
                <shortLabel>Above Line</shortLabel>
                <summary>Item Type Above The Line Indicator indicates whether an item is above the line or not.</summary>
                <description>This attribute is used to describe whether the associated item is above the line or not.</description>
            </attributeReference>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
