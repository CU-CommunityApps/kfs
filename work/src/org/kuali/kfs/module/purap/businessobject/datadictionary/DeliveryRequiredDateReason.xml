<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.DeliveryRequiredDateReason">

        <inquiry>
            <title>Delivery Required Date Reason Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="active" />
                <field attributeName="deliveryRequiredDateReasonCode" />
                <field attributeName="deliveryRequiredDateReasonDescription" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Delivery Required Date Reason Lookup</title>

            <instructions>Lookup an Delivery Required Date Reason</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="deliveryRequiredDateReasonDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="deliveryRequiredDateReasonCode" required="false" />
                <lookupField attributeName="deliveryRequiredDateReasonDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="deliveryRequiredDateReasonCode" />
                <field attributeName="deliveryRequiredDateReasonDescription" />
                <field attributeName="active" />
             </resultFields>
        </lookup>

        <titleAttribute>deliveryRequiredDateReasonCode</titleAttribute>

        <attributes>

            <attribute name="deliveryRequiredDateReasonCode" forceUppercase="true">
                <label>Delivery Required Date Reason Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
        			<text size="6" />
    			</control>

			</attribute>

            <attribute name="deliveryRequiredDateReasonDescription" forceUppercase="true">
                <label>Delivery Required Date Reason Description</label>
                <shortLabel>Delivery Required Date Reason Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

           <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
