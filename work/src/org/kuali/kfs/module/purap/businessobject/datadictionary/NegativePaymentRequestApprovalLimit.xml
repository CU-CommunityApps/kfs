<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.NegativePaymentRequestApprovalLimit">

        <inquiry>
            <title>Negative Payment Request Approval Limit Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
            	<field attributeName="chartOfAccountsCode" />
            	<field attributeName="organizationCode" />
                <field attributeName="accountNumber" />
                <field attributeName="negativePaymentRequestApprovalLimitAmount" />        
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Negative Payment Request Approval Limit Lookup</title>

            <instructions>Lookup a Negative Payment Request Approval Limit</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="accountNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
            	<lookupField attributeName="chartOfAccountsCode" required="false" />
            	<lookupField attributeName="organizationCode" required="false" />
                <lookupField attributeName="accountNumber" required="false" />                            
                <lookupField attributeName="negativePaymentRequestApprovalLimitAmount" required="false" />   
            </lookupFields>

            <resultFields>
            	<field attributeName="chartOfAccountsCode" />
            	<field attributeName="organizationCode" />
                <field attributeName="accountNumber" />              
                <field attributeName="negativePaymentRequestApprovalLimitAmount" />              
            </resultFields>
        </lookup>

        <attributes>			
        
            <attribute name="negativePaymentRequestApprovalLimitAmount" forceUppercase="true">
                <label>Negative Payment Request Approval Limit Amount</label>
                <shortLabel>Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="21" />
                </control>

			</attribute>

            <attribute name="negativePaymentRequestApprovalLimitIdentifier" forceUppercase="true">
                <label>Negative Payment Request Approval Limit Identifier</label>
                <shortLabel>Identifier</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="12" />
                </control>

			</attribute>

            <attributeReference name="chartOfAccountsCode" sourceClassName="org.kuali.module.chart.bo.Chart" sourceAttributeName="chartOfAccountsCode"/>

            <attributeReference name="accountNumber" sourceClassName="org.kuali.module.chart.bo.Account" sourceAttributeName="accountNumber">
                <required>false</required>
            </attributeReference>
            
            <attributeReference name="organizationCode" sourceClassName="org.kuali.module.chart.bo.Org" sourceAttributeName="organizationCode">
                <required>false</required>
            </attributeReference>

			<attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Negative Payment Request Approval Limit</objectLabel>
    </businessObject>
</dictionaryEntry>
