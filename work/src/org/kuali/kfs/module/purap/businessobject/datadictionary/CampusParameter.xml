<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.CampusParameter">

        <inquiry>
            <title>Campus Parameter Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="campusCode" />
                <field attributeName="campusPurchasingDirectorName" />
                <field attributeName="campusPurchasingDirectorTitle" />
                <field attributeName="campusAccountsPayableEmailAddress" />
                <field attributeName="purchasingInstitutionName" />
                <field attributeName="purchasingDepartmentName" />
                <field attributeName="purchasingDepartmentLine1Address" />
                <field attributeName="purchasingDepartmentLine2Address" />
                <field attributeName="purchasingDepartmentCityName" />
                <field attributeName="purchasingDepartmentStateCode" />
                <field attributeName="purchasingDepartmentZipCode" />
                <field attributeName="purchasingDepartmentCountryCode" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Campus Parameter Lookup</title>

            <instructions>Look up a Campus Parameter</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="campusCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="campusCode" required="false" />
                <lookupField attributeName="campusPurchasingDirectorName" required="false" />
                <lookupField attributeName="campusPurchasingDirectorTitle" required="false" />
                <lookupField attributeName="campusAccountsPayableEmailAddress" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="campusCode" />
                <field attributeName="campusPurchasingDirectorName" />
                <field attributeName="campusPurchasingDirectorTitle" />
                <field attributeName="campusAccountsPayableEmailAddress" />
            </resultFields>
        </lookup>

        <titleAttribute>campusCode</titleAttribute>

        <attributes>

            <attribute name="campusAccountsPayableEmailAddress" forceUppercase="true">
                <label>Campus Accounts Payable Email Address</label>
                <shortLabel>Address</shortLabel>

                <maxLength>100</maxLength>
                <validationPattern><emailAddress/></validationPattern>

                <control>
                    <text size="45" />
                </control>

			</attribute>

			<attributeReference name="campusCode"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" 
				sourceAttributeName="campusCode">
			</attributeReference>

            <attribute name="campusPurchasingDirectorName" forceUppercase="true">
                <label>Campus Purchasing Director Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

			</attribute>

            <attribute name="campusPurchasingDirectorTitle" forceUppercase="true">
                <label>Campus Purchasing Director Title</label>
                <shortLabel>Title</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter  allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

			</attribute>

            <attribute name="purchasingInstitutionName" forceUppercase="true">
                <label>Purchasing Institution Name</label>
                <shortLabel>Institution Name</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

			</attribute>

            <attribute name="purchasingDepartmentName" forceUppercase="true">
                <label>Purchasing Department Name</label>
                <shortLabel>Dept Name</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter  allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

			</attribute>

			<attributeReference name="purchasingDepartmentLine1Address" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="line1Address" >
                <required>false</required>
            </attributeReference>
            	
			<attributeReference name="purchasingDepartmentLine2Address" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="line2Address" >
                <required>false</required>
            </attributeReference>
                        		
			<attributeReference name="purchasingDepartmentCityName" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="cityName" >
                <required>false</required>
            </attributeReference>

			<attributeReference name="purchasingDepartmentStateCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="stateCode" >
                <required>false</required>
            </attributeReference>

			<attributeReference name="purchasingDepartmentZipCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="zipCode" >
                <required>false</required>
            </attributeReference>
            																		
			<attributeReference name="purchasingDepartmentCountryCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="countryCode" >
                <required>false</required>
            </attributeReference>
            
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Campus Parameter</objectLabel>
    </businessObject>
</dictionaryEntry>
