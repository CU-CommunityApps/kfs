<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.BillingAddress">

        <inquiry>
            <title>Billing Address Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="billingCampusCode" />
                <field attributeName="billingName" />
                <field attributeName="billingLine1Address" />
                <field attributeName="billingLine2Address" />
                <field attributeName="billingCityName" />
                <field attributeName="billingStateCode" />
                <field attributeName="billingPostalCode" />
                <field attributeName="billingCountryCode" />
                <field attributeName="billingPhoneNumber" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Billing Address Lookup</title>

            <instructions>Lookup a Billing Address</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="billingCampusCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="billingCampusCode" required="false" />
                <lookupField attributeName="billingName" required="false" />
                <lookupField attributeName="billingLine1Address" required="false" />
                <lookupField attributeName="billingLine2Address" required="false" />
                <lookupField attributeName="billingCityName" required="false" />
                <lookupField attributeName="billingStateCode" required="false" />
                <lookupField attributeName="billingPostalCode" required="false" />
                <lookupField attributeName="billingCountryCode" required="false" />
                <lookupField attributeName="billingPhoneNumber" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="billingCampusCode" />
                <field attributeName="billingName" />
                <field attributeName="billingLine1Address" />
                <field attributeName="billingLine2Address" />
                <field attributeName="billingCityName" />
                <field attributeName="billingStateCode" />
                <field attributeName="billingPostalCode" />
                <field attributeName="billingCountryCode" />
                <field attributeName="billingPhoneNumber" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>billingCampusCode</titleAttribute>

        <attributes>

			<attributeReference name="billingCampusCode"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" 
				sourceAttributeName="campusCode">
				<label>Billing Campus Code</label>
			</attributeReference>
			
			<attributeReference name="billingCityName"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" 
				sourceAttributeName="cityName">
				<label>Billing City Name</label>
			</attributeReference>

			<attributeReference name="billingCountryCode"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="countryCode">
				<label>Billing Country Code</label>
			</attributeReference>

			<attributeReference name="billingLine1Address"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="line1Address">
				<label>Billing Line 1 Address</label>
			</attributeReference>
			
			<attributeReference name="billingLine2Address"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="line2Address">
				<label>Billing Line 2 Address</label>
			</attributeReference>			

            <attribute name="billingName" forceUppercase="true">
                <label>Billing Name</label>
                <shortLabel>Name</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>
			
			<attributeReference name="billingPhoneNumber"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="phoneNumberWithValidation">
				<label>Billing Phone Number</label>
			</attributeReference>
			
			<attributeReference name="billingPostalCode"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="zipCode">
				<label>Billing Postal Code</label>
			</attributeReference>						

			<attributeReference name="billingStateCode"
				sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy"
				sourceAttributeName="stateCode">
				<label>Billing State Code</label>
			</attributeReference>				

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
