<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.PurchaseOrderVendorChoice">

        <inquiry>
            <title>Purchase Order Vendor Choice Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="purchaseOrderVendorChoiceCode" />
                <field attributeName="purchaseOrderVendorChoiceDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Purchase Order Vendor Choice Lookup</title>

            <instructions>Lookup a Purchase Order Vendor Choice</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="purchaseOrderVendorChoiceDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="purchaseOrderVendorChoiceCode" required="false" />
                <lookupField attributeName="purchaseOrderVendorChoiceDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="purchaseOrderVendorChoiceCode" />
                <field attributeName="purchaseOrderVendorChoiceDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>purchaseOrderVendorChoiceCode</titleAttribute>

        <attributes>

            <attribute name="purchaseOrderVendorChoiceCode" forceUppercase="true">
                <label>Purchase Order Vendor Choice Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="purchaseOrderVendorChoiceDescription">
                <label>Purchase Order Vendor Choice Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />
            
        </attributes>
    </businessObject>
</dictionaryEntry>
