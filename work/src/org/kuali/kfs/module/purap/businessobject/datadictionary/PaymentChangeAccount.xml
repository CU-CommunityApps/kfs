<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.PaymentChangeAccount">

        <inquiry>
            <title>Payment Change Account Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="paymentChangeIdentifier" />
                <field attributeName="generalLedgerPendingEntryIdentifier" />
                <field attributeName="itemAccountTotalAmount" />
                <field attributeName="itemLineNumber" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Payment Change Account Lookup</title>

            <instructions>Lookup a Payment Change Account</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="paymentChangeIdentifier" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="paymentChangeIdentifier" required="false" />
                <lookupField attributeName="generalLedgerPendingEntryIdentifier" required="false" />
                <lookupField attributeName="itemAccountTotalAmount" required="false" />
                <lookupField attributeName="itemLineNumber" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="paymentChangeIdentifier" />
                <field attributeName="generalLedgerPendingEntryIdentifier" />
                <field attributeName="itemAccountTotalAmount" />
                <field attributeName="itemLineNumber" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="paymentChangeIdentifier" forceUppercase="true">
                <label>Payment Change Identifier</label>
                <shortLabel>Identifier</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="12" />
                </control>

			</attribute>

            <attribute name="generalLedgerPendingEntryIdentifier" forceUppercase="true">
                <label>General Ledger Pending Entry Identifier</label>
                <shortLabel>Identifier</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

			</attribute>

            <attribute name="itemAccountTotalAmount" forceUppercase="true">
                <label>Item Account Total Amount</label>
                <shortLabel>Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="21" />
                </control>

			</attribute>

            <attribute name="itemLineNumber" forceUppercase="true">
                <label>Item Line Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="5" />
                </control>

			</attribute>

            <attribute name="versionNumber" forceUppercase="true">
                <label>Version Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

			</attribute>

        </attributes>
    </businessObject>
</dictionaryEntry>
