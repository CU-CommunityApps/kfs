<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="PurchaseOrderStatus" parent="PurchaseOrderStatus-parentBean" />

  <bean id="PurchaseOrderStatus-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.PurchaseOrderStatus" />
    <property name="inquiryDefinition" >
      <ref bean="PurchaseOrderStatus-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="PurchaseOrderStatus-lookupDefinition" />
    </property>
    <property name="titleAttribute" value="statusCode" />
    <property name="objectLabel" value="Purchase Order Status" />
    <property name="attributes" >
      <list>
        <ref bean="PurchaseOrderStatus-statusCode" />
        <ref bean="PurchaseOrderStatus-statusDescription" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="PurchaseOrderStatus-statusCode" parent="PurchaseOrderStatus-statusCode-parentBean" />

  <bean id="PurchaseOrderStatus-statusCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="statusCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Purchase Order Status Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="4" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="6" />
    </property>
  </bean>
  <bean id="PurchaseOrderStatus-statusDescription" parent="PurchaseOrderStatus-statusDescription-parentBean" />

  <bean id="PurchaseOrderStatus-statusDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="statusDescription" />
    <property name="label" value="Purchase Order Status Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="45" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="47" />
    </property>
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="PurchaseOrderStatus-inquiryDefinition" parent="PurchaseOrderStatus-inquiryDefinition-parentBean" />

  <bean id="PurchaseOrderStatus-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Purchase Order Status Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="statusCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="statusDescription" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="PurchaseOrderStatus-lookupDefinition" parent="PurchaseOrderStatus-lookupDefinition-parentBean" />

  <bean id="PurchaseOrderStatus-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Purchase Order Status Lookup" />
    <property name="instructions" value="Lookup a Purchase Order Status" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="statusCode" />
        <bean parent="FieldDefinition"
              p:attributeName="statusDescription" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="statusCode" />
        <bean parent="FieldDefinition"
              p:attributeName="statusDescription" />
      </list>
    </property>
  </bean>
</beans>
