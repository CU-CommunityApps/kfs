<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.ElectronicInvoiceRejectTypeCode">

        <inquiry>
            <title>Electronic Invoice Reject Type Code Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
                <field attributeName="invoiceRejectReasonTypeCode" />
                <field attributeName="invoiceRejectReasonTypeDescription" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Electronic Invoice Reject Type Code Lookup</title>

            <instructions>Lookup an Electronic Invoice Reject Type Code</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="invoiceRejectReasonTypeDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="dataObjectMaintenanceCodeActiveIndicator" required="false" />
                <lookupField attributeName="invoiceRejectReasonTypeCode" required="false" />
                <lookupField attributeName="invoiceRejectReasonTypeDescription" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
                <field attributeName="invoiceRejectReasonTypeCode" />
                <field attributeName="invoiceRejectReasonTypeDescription" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="dataObjectMaintenanceCodeActiveIndicator" forceUppercase="true">
                <label>Data Object Maintenance Code Active Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

			</attribute>

            <attribute name="invoiceRejectReasonTypeCode" forceUppercase="true">
                <label>Invoice Reject Reason Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="invoiceRejectReasonTypeDescription" forceUppercase="true">
                <label>Invoice Reject Reason Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>60</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="62" />
                </control>

			</attribute>

            <attribute name="versionNumber" forceUppercase="true">
                <label>Version Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>8</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="10" />
                </control>

			</attribute>

        </attributes>
    </businessObject>
</dictionaryEntry>
