<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.purap.bo.RecurringPaymentType">

        <inquiry>
            <title>Recurring Payment Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="recurringPaymentTypeCode" />
                <field attributeName="recurringPaymentTypeDescription" />
                <field attributeName="active" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Recurring Payment Type Lookup</title>

            <instructions>Lookup a Recurring Payment Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="recurringPaymentTypeDescription" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="recurringPaymentTypeCode" required="false" />
                <lookupField attributeName="recurringPaymentTypeDescription" required="false" />
                <lookupField attributeName="active" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="recurringPaymentTypeCode" />
                <field attributeName="recurringPaymentTypeDescription" />
                <field attributeName="active" />
            </resultFields>
        </lookup>

        <titleAttribute>recurringPaymentTypeCode</titleAttribute>

        <attributes>

            <attribute name="recurringPaymentTypeCode" forceUppercase="true">
                <label>Recurring Payment Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="6" />
                </control>

			</attribute>

            <attribute name="recurringPaymentTypeDescription" forceUppercase="true">
                <label>Recurring Payment Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>45</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="47" />
                </control>

			</attribute>

            <attributeReference name="active" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
