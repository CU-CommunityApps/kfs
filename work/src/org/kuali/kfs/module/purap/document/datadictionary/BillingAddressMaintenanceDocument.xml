<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="BillingAddressMaintenanceDocument" parent="BillingAddressMaintenanceDocument-parentBean" />

  <bean id="BillingAddressMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.BillingAddress" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="BillingAddressMaintenanceDocument-EditBillingAddress" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>billingCampusCode</value>
      </list>
    </property>
    <property name="label" value="Billing Address" />
    <property name="shortLabel" value="Billing Address" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.purap.businessobject.BillingAddress" p:parameterName="BILLING_ADDRESS" />
    </property>
    <property name="documentTypeName" value="BillingAddressMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMBA" />
    <property name="workflowAttributes">
    	<ref bean="BillingAddressMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="BillingAddressMaintenanceDocument-EditBillingAddress" parent="BillingAddressMaintenanceDocument-EditBillingAddress-parentBean" />

  <bean id="BillingAddressMaintenanceDocument-EditBillingAddress-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Billing Address" />
    <property name="title" value="Edit Billing Address" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCampusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingLine1Address"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingLine2Address" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCityName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingStateCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingPostalCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingCountryCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="billingPhoneNumber"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="BillingAddressMaintenanceDocument-workflowAttributes" parent="BillingAddressMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="BillingAddressMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
