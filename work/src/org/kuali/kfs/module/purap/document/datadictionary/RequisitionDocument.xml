<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd" [
<!ENTITY purchasingDocumentBaseAttributes SYSTEM "../../PurchasingDocumentBaseAttributes.xml">
<!ENTITY purchasingAccountsPayableDocumentBaseAttributes SYSTEM "../../dictionary/entity/PurchasingAccountsPayableDocumentBaseAttributes.xml">
]>
<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.purap.document.RequisitionDocument</documentClass>
        <businessRulesClass>org.kuali.module.purap.rules.RequisitionDocumentRule</businessRulesClass>
        <documentAuthorizerClass>org.kuali.module.purap.document.authorization.RequisitionDocumentAuthorizer</documentAuthorizerClass>
        
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>RequisitionDocument</documentTypeName>
        <documentTypeCode>REQS</documentTypeCode>

        <label>Requisition</label>

        <attributes>

            <!-- BELOW IS DUMMY ATTRIBUTE FOR ROUTING LABELS ONLY -->
 			<attributeReference name="statusDescription" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="requisitionStatus"/>
            
			<!-- PURAP DOCUMENT ATTRIBUTES -->
			&purchasingAccountsPayableDocumentBaseAttributes;
			
			<attributeReference name="purapDocumentIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="requisitionIdentifier"/>

			<attributeReference name="statusCode" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="requisitionStatus">
			    <required>true</required>
			</attributeReference>
            
			<!-- PURCHASING DOCUMENT ATTRIBUTES -->
            &purchasingDocumentBaseAttributes;

			<!-- REQUISITION DOCUMENT ATTRIBUTES -->
            <attribute name="requisitionOrganizationReference1Text" forceUppercase="true">
                <label>Reference 1</label>
                <shortLabel>Text</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="22" />
                </control>

            </attribute>

            <attribute name="requisitionOrganizationReference2Text" forceUppercase="true">
                <label>Reference 2</label>
                <shortLabel>Text</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="22" />
                </control>

            </attribute>

            <attribute name="requisitionOrganizationReference3Text" forceUppercase="true">
                <label>Reference 3</label>
                <shortLabel>Text</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="22" />
                </control>

            </attribute>

            <attributeReference name="organizationAutomaticPurchaseOrderLimit" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericAmount">
                <label>APO Limit</label>
                <shortLabel>APO Limit</shortLabel>

            </attributeReference>

<!-- The following vendor fields are defined here although common among other docs because they are not required on REQ, but are required for PO -->
            <attributeReference name="vendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <required>false</required>
            </attributeReference>

            <attributeReference name="vendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Suggested Vendor</label>
            </attributeReference>
            
            <attributeReference name="vendorLine1Address" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="line1Address">

            </attributeReference>

            <attributeReference name="vendorCityName" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="cityName">

            </attributeReference>
            
            <attributeReference name="vendorCountryCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="countryCode">

            </attributeReference>

            <attributeReference name="alternate1VendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name 1</label>
                <shortLabel>Name 1</shortLabel>

            </attributeReference>

            <attributeReference name="alternate2VendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name 2</label>
                <shortLabel>Name 2</shortLabel>

            </attributeReference>

            <attributeReference name="alternate3VendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name 3</label>
                <shortLabel>Name 3</shortLabel>

            </attributeReference>

            <attributeReference name="alternate4VendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name 4</label>
                <shortLabel>Name 4</shortLabel>

            </attributeReference>

            <attributeReference name="alternate5VendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name 5</label>
                <shortLabel>Name 5</shortLabel>

            </attributeReference>

        </attributes>
		<help parameterNamespace="KFS-PA" parameterDetailType="Requisition" parameterName="REQUISITION" />
        <allowsCopy>true</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
        
    </transactionalDocument>
</dictionaryEntry>