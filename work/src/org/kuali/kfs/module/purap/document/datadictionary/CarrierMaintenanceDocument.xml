<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="CarrierMaintenanceDocument" parent="CarrierMaintenanceDocument-parentBean" />

  <bean id="CarrierMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.Carrier" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="CarrierMaintenanceDocument-EditCarrier" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>carrierCode</value>
      </list>
    </property>
    <property name="label" value="Carrier" />
    <property name="shortLabel" value="Carrier" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="CARRIER"
            p:parameterDetailType="Carrier" />
    </property>
    <property name="documentTypeName" value="CarrierMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMCA" />
    <property name="workflowProperties" >
      <ref bean="CarrierMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="CarrierMaintenanceDocument-EditCarrier" parent="CarrierMaintenanceDocument-EditCarrier-parentBean" />

  <bean id="CarrierMaintenanceDocument-EditCarrier-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Carrier" />
    <property name="title" value="Edit Carrier" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="carrierCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="carrierDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="CarrierMaintenanceDocument-workflowProperties" parent="CarrierMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="CarrierMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
