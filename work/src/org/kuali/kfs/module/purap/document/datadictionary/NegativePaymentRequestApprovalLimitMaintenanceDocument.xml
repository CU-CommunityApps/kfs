<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.purap.bo.NegativePaymentRequestApprovalLimit</businessObjectClass>
        <maintainableClass>org.kuali.core.maintenance.KualiMaintainableImpl</maintainableClass>

        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>PURAP_AP_ADMIN</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>NegativePaymentRequestApprovalLimitMaintenanceDocument</documentTypeName>
        <documentTypeCode>PMNP</documentTypeCode>

        <label>Negative Payment Request Approval Limit</label>
        <help parameterNamespace="KFS-PA" parameterDetailType="NegativePaymentRequestApprovalLimit" parameterName="NEGATIVE_PAYMENT_REQUEST_APPROVAL_LIMIT" />

        <lockingKeys>
            <field attributeName="chartOfAccountsCode" />
        </lockingKeys>
        
      	<defaultExistenceChecks>
			<reference attributeName="chartOfAccounts" attributeToHighlightOnFail="chartOfAccountsCode" />
			<reference attributeName="organization" attributeToHighlightOnFail="organizationCode" />
			<reference attributeName="account" attributeToHighlightOnFail="accountNumber" />
		</defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Edit Negative PREQ Approval Limit">
                <maintainableItems>
                    <maintainableField name="chartOfAccountsCode" required="true" />
                    <maintainableField name="organizationCode"/>
                    <maintainableField name="accountNumber"/>
                    <maintainableField name="negativePaymentRequestApprovalLimitAmount" required="true"/>
                    <maintainableField name="versionNumber" />
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>
    </maintenanceDocument>
</dictionaryEntry>
