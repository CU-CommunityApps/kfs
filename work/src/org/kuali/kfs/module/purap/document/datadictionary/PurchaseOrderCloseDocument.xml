<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderCloseDocument" parent="PurchaseOrderCloseDocument-parentBean" />

  <bean id="PurchaseOrderCloseDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Purchase Order Close" />
    <property name="shortLabel" value="Purchase Order Close" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PURAP"
            p:parameterName="PURCHASE_ORDER"
            p:parameterDetailType="PurchaseOrder" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderCloseDocument" />
    <property name="sessionDocument" value="true" />
    <property name="documentClass" value="org.kuali.kfs.module.purap.document.PurchaseOrderCloseDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.purap.document.validation.impl.PurchaseOrderCloseDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchaseOrderDocumentAuthorizer" />
    <property name="documentPresentationControllerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchaseOrderCloseDocumentPresentationController" />
    <property name="documentTypeCode" value="POC" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderCloseDocument-workflowProperties" />
    </property>
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="PurchaseOrderDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderCloseDocument-workflowProperties" parent="PurchaseOrderCloseDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderCloseDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting.account" />
              <bean parent="WorkflowProperty"
                    p:path="status" />
              <bean parent="WorkflowProperty"
                    p:path="contractManager" />
              <bean parent="WorkflowProperty"
                    p:path="vendorContract" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  
	<bean id="PurchaseOrderCloseDocument-validations" parent="PurchaseOrderCloseDocument-validations-parentBean" />
  
    <bean id="PurchaseOrderCloseDocument-validations-parentBean" class="org.springframework.beans.factory.config.MapFactoryBean">
    	<property name="sourceMap">
	    	<map>			
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedRouteDocumentEvent</value></key>
					<value>PurchaseOrderCloseDocument-routeDocumentValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedApproveDocumentEvent</value></key>
					<value>PurchaseOrderCloseDocument-approveDocumentValidation</value>
				</entry>		
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedAddAccountingLineEvent</value></key>
					<value>PurchaseOrderCloseDocument-addAccountingLineValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedUpdateAccountingLineEvent</value></key>
					<value>PurchaseOrderCloseDocument-updateAccountingLineValidation</value>
				</entry>	
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedReviewAccountingLineEvent</value></key>
					<value>PurchaseOrderCloseDocument-reviewAccountingLineValidation</value>
				</entry>
				<entry>
					<key><value>org.kuali.kfs.module.purap.document.validation.event.AttributedAddPurchasingAccountsPayableItemEvent</value></key>
					<value>PurchaseOrderCloseDocument-addPurchasingAccountsPayableItemValidation</value>				
				</entry>
				<entry>
					<key><value>org.kuali.kfs.module.purap.document.validation.event.AttributedImportPurchasingAccountsPayableItemEvent</value></key>
					<value>PurchaseOrderCloseDocument-importPurchasingAccountsPayableItemValidation</value>				
				</entry>																									
				<entry>
					<key><value>org.kuali.kfs.sys.document.validation.event.AttributedSaveDocumentEvent</value></key>
					<value>PaymentRequest-saveDocumentValidation</value>				
				</entry>												
		    </map>
	    </property>	  
    </bean>
  
</beans>
