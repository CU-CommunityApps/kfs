<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ReceivingAddressMaintenanceDocument" parent="ReceivingAddressMaintenanceDocument-parentBean" />

  <bean id="ReceivingAddressMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.ReceivingAddress" />
    <property name="maintainableClass" value="org.kuali.kfs.module.purap.document.ReceivingAddressMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ReceivingAddressMaintenanceDocument-EditReceivingAddress" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="chartOfAccounts"
              p:attributeToHighlightOnFail="chartOfAccountsCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:attributeToHighlightOnFail="organizationCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>receivingAddressIdentifier</value>
      </list>
    </property>
    <property name="label" value="Receiving Address" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterNamespace="KFS-PURAP"
            p:parameterName="RECEIVING_ADDRESS"
            p:parameterDetailType="ReceivingAddress" />
    </property>    
    <property name="shortLabel" value="Receiving Address" />
    <property name="summary" value="Receiving Address Maintenance Document" />
    <property name="description" value="Maintenance document which allows you to create, copy, or modify Receiving Addresses." />
    <property name="documentTypeName" value="ReceivingAddressMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="preRulesCheckClass" value="org.kuali.kfs.module.purap.document.validation.impl.ReceivingAddressPreRules" />
    <property name="documentTypeCode" value="PMRA" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ReceivingAddressMaintenanceDocument-EditReceivingAddress" parent="ReceivingAddressMaintenanceDocument-EditReceivingAddress-parentBean" />

  <bean id="ReceivingAddressMaintenanceDocument-EditReceivingAddress-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Receiving Address" />
    <property name="title" value="Edit Receiving Address" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingAddressIdentifier" />
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true"
              p:readOnlyAfterAdd="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode"
              p:readOnlyAfterAdd="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingLine1Address"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingLine2Address" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingCityName"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingStateCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingPostalCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="receivingCountryCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="useReceivingIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="defaultIndicator"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
</beans>
