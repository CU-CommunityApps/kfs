<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd" [
<!ENTITY accountsPayableDocumentBaseAttributes SYSTEM "../../AccountsPayableDocumentBaseAttributes.xml">
<!ENTITY purchasingAccountsPayableDocumentBaseAttributes SYSTEM "../../dictionary/entity/PurchasingAccountsPayableDocumentBaseAttributes.xml">
]>
<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.purap.document.CreditMemoDocument</documentClass>
        <businessRulesClass>org.kuali.module.purap.rules.CreditMemoDocumentRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.purap.rules.CreditMemoDocumentPreRules</preRulesCheckClass>
        <documentAuthorizerClass>org.kuali.module.purap.document.authorization.CreditMemoDocumentAuthorizer</documentAuthorizerClass>
        
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_PURAP_ACCOUNTS_PAYABLE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>CreditMemoDocument</documentTypeName>
        <documentTypeCode>CM</documentTypeCode>

        <label>Credit Memo</label>

        <attributes>

            <!-- BELOW IS DUMMY ATTRIBUTE FOR ROUTING LABELS ONLY -->
 			<attributeReference name="statusDescription" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="creditMemoStatus"/>
            
			<!-- PURAP DOCUMENT ATTRIBUTES -->
			&purchasingAccountsPayableDocumentBaseAttributes;
			
			<!-- ACCOUNTS PAYABLE DOCUMENT ATTRIBUTES -->
            &accountsPayableDocumentBaseAttributes;

			<attributeReference name="purapDocumentIdentifier"
				sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy"
				sourceAttributeName="purapDocumentIdentifier">
                <label>Credit Memo Nbr</label>
                <shortLabel>CM Nbr</shortLabel>
            </attributeReference> 
            
			<attributeReference name="vendorHeaderGeneratedIdentifier"
				sourceClassName="org.kuali.module.vendor.bo.VendorDetail"
				sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <required>true</required>
            </attributeReference>

			<attributeReference name="statusCode" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="creditMemoStatus" />
            
			<attributeReference name="creditMemoDate"
				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
				sourceAttributeName="genericDate">
                <label>Credit Memo Date</label>
                <shortLabel>Date</shortLabel>
                
				<required>true</required>

           </attributeReference>
           
			<attributeReference name="purchaseOrderIdentifier"
				sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy"
				sourceAttributeName="purapDocumentIdentifier">
			    <label>Purchase Order Nbr</label>
			    <shortLabel>PO Nbr</shortLabel>

			</attributeReference>
           
			<attributeReference name="purchaseOrderEndDate"
				sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
				sourceAttributeName="genericDate">
			    <label>PO End Date</label> 
			    <shortLabel>PO End Date</shortLabel> 
			</attributeReference> 

            <attribute name="creditMemoAmount" forceUppercase="true">
                <label>Vendor Credit Memo Amount</label>
                <shortLabel>Vendor Credit Memo Amount</shortLabel>

                <maxLength>19</maxLength>
                
				<validationPattern>
					<floatingPoint />
				</validationPattern>
                <required>true</required>

                <control>
                    <text size="21" />
                </control>
            </attribute>

            <attribute name="creditMemoNumber" forceUppercase="true">
                <label>Vendor Credit Memo Number</label>
                <shortLabel>Vendor CM Number</shortLabel>

                <maxLength>35</maxLength>
				<validationPattern>
					<anyCharacter allowWhitespace="true" />
				</validationPattern>
				<required>true</required>
                <control>
                    <text size="37" />
                </control>
            </attribute>

			<attribute name="itemMiscellaneousCreditDescription"
				forceUppercase="true">
                <label>Item Miscellaneous Credit Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>255</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>

                <control>
                    <textarea rows="5" cols="80"/>
                </control>
            </attribute>

			<attribute name="paymentRequestIdentifier"
				forceUppercase="true">
                <label>Payment Request Nbr</label>
                <shortLabel>PREQ #</shortLabel>

                <maxLength>9</maxLength>
				<validationPattern>
					<numeric />
				</validationPattern>

                <control>
                    <text size="11" />
                </control>
            </attribute>
            
            <attribute name="purchaseOrderNotes">
            	<label>PO Notes</label>
            	<shortLabel>PO Notes</shortLabel>
            	
            	<maxLength>3</maxLength>
				<validationPattern>
					<anyCharacter allowWhitespace="true" />
				</validationPattern>
            	
            	<control>
            		<text size="3"/>
            	</control>
            </attribute>
			
			<attribute name="creditMemoType">
            	<label>Credit Memo Type</label>
            	<shortLabel>CM Type</shortLabel>
            	
            	<maxLength>6</maxLength>
				<validationPattern>
					<anyCharacter />
				</validationPattern>
            	
            	<control>
            		<text size="6"/>
            	</control>
            </attribute>
			
			<attributeReference name="lineItemTotal"
				sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy"
				sourceAttributeName="genericItemAmount">
				<label>Total credit processed prior to restocking fee</label>
				<shortLabel>
					Total credit processed prior to restocking fee
				</shortLabel>
			</attributeReference>
            
			<attributeReference name="grandTotal"
				sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy"
				sourceAttributeName="genericItemAmount">
				<label>Grand Total</label>
				<shortLabel>Grand Total</shortLabel>
			</attributeReference>

			<attribute name="reopenPurchaseOrderIndicator" forceUppercase="true">
			    <label>Reopen PO</label>
			    <shortLabel>Reopen PO</shortLabel>
			
			    <maxLength>1</maxLength>
			
			    <control>
			        <checkbox />
			    </control>
			</attribute>
        </attributes>
		<help parameterNamespace="KFS-PA" parameterDetailType="CreditMemo" parameterName="CREDIT_MEMO" />
        <allowsCopy>false</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
        
    </transactionalDocument>
</dictionaryEntry>