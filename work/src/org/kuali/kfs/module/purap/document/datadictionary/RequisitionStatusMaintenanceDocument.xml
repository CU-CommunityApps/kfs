<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="RequisitionStatusMaintenanceDocument" parent="RequisitionStatusMaintenanceDocument-parentBean" />

  <bean id="RequisitionStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.RequisitionStatus" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RequisitionStatusMaintenanceDocument-EditRequisitionStatus" />
      </list>
    </property>
    <property name="allowsNewOrCopy" value="false" />
    <property name="lockingKeys" >
      <list>
        <value>statusCode</value>
      </list>
    </property>
    <property name="label" value="Requisition Status" />
    <property name="shortLabel" value="Requisition Status" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.purap.businessobject.RequisitionStatus" p:parameterName="REQUISITION_STATUS" />
    </property>
    <property name="documentTypeName" value="RequisitionStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMRS" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="workflowAttributes">
    	<ref bean="RequisitionStatusMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="RequisitionStatusMaintenanceDocument-EditRequisitionStatus" parent="RequisitionStatusMaintenanceDocument-EditRequisitionStatus-parentBean" />

  <bean id="RequisitionStatusMaintenanceDocument-EditRequisitionStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Requisition Status" />
    <property name="title" value="Edit Requisition Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="statusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="statusDescription"
              p:required="true" />
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="RequisitionStatusMaintenanceDocument-workflowAttributes" parent="RequisitionStatusMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="RequisitionStatusMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
