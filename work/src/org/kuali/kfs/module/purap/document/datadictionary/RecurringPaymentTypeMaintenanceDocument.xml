<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RecurringPaymentTypeMaintenanceDocument" parent="RecurringPaymentTypeMaintenanceDocument-parentBean" />

  <bean id="RecurringPaymentTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.RecurringPaymentType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RecurringPaymentTypeMaintenanceDocument-EditRecurringPaymentType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>recurringPaymentTypeCode</value>
      </list>
    </property>
    <property name="label" value="Recurring Payment Type" />
    <property name="shortLabel" value="Recurring Payment Type" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PURAP"
            p:parameterName="RECURRING_PAYMENT_TYPE"
            p:parameterDetailType="RecurringPaymentType" />
    </property>
    <property name="documentTypeName" value="RecurringPaymentTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.web.struts.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMRP" />
    <property name="workflowProperties" >
      <ref bean="RecurringPaymentTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="RecurringPaymentTypeMaintenanceDocument-EditRecurringPaymentType" parent="RecurringPaymentTypeMaintenanceDocument-EditRecurringPaymentType-parentBean" />

  <bean id="RecurringPaymentTypeMaintenanceDocument-EditRecurringPaymentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Recurring Payment Type" />
    <property name="title" value="Edit Recurring Payment Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="recurringPaymentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="recurringPaymentTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="RecurringPaymentTypeMaintenanceDocument-workflowProperties" parent="RecurringPaymentTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="RecurringPaymentTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
