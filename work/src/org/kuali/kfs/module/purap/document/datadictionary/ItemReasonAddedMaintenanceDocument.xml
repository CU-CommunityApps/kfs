<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="ItemReasonAddedMaintenanceDocument" parent="ItemReasonAddedMaintenanceDocument-parentBean" />

  <bean id="ItemReasonAddedMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.ItemReasonAdded" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ItemReasonAddedMaintenanceDocument-EditThreshold" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>itemReasonAddedCode</value>
      </list>
    </property>
    <property name="label" value="Item Reason Added" />
    <property name="shortLabel" value="Item Reason" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterNamespace="KFS-PURAP"
            p:parameterName="ITEM_REASON_ADDED"
            p:parameterDetailType="ItemReasonAdded" />
    </property>   
    <property name="documentTypeName" value="IRAD" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="workflowAttributes">
    	<ref bean="ItemReasonAddedMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="ItemReasonAddedMaintenanceDocument-EditThreshold" parent="ItemReasonAddedMaintenanceDocument-EditThreshold-parentBean" />

  <bean id="ItemReasonAddedMaintenanceDocument-EditThreshold-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Item Reason Added" />
    <property name="title" value="Edit Reason Added" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="itemReasonAddedCode"
              p:required="true"  />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemReasonAddedDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="ItemReasonAddedMaintenanceDocument-workflowAttributes" parent="ItemReasonAddedMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="ItemReasonAddedMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
