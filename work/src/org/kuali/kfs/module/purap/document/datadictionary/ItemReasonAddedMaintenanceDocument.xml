<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ItemReasonAddedMaintenanceDocument" parent="ItemReasonAddedMaintenanceDocument-parentBean" />

  <bean id="ItemReasonAddedMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.ItemReasonAdded" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ItemReasonAddedMaintenanceDocument-EditThreshold" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>itemReasonAddedCode</value>
      </list>
    </property>
    <property name="label" value="Item Reason Added" />
    <property name="shortLabel" value="Item Reason" />
    <property name="documentTypeName" value="ItemReasonAddedMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.web.struts.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="IRAD" />
    <property name="workflowProperties" >
      <ref bean="ItemReasonAddedMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="ItemReasonAddedMaintenanceDocument-EditThreshold" parent="ItemReasonAddedMaintenanceDocument-EditThreshold-parentBean" />

  <bean id="ItemReasonAddedMaintenanceDocument-EditThreshold-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Item Reason Added" />
    <property name="title" value="Edit Reason Added" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="itemReasonAddedCode"
              p:required="true"  />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemReasonAddedDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"/>
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber"/>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->
  <bean id="ItemReasonAddedMaintenanceDocument-workflowProperties" parent="ItemReasonAddedMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ItemReasonAddedMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
