<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderPaymentHoldDocument" parent="PurchaseOrderPaymentHoldDocument-parentBean" />

  <bean id="PurchaseOrderPaymentHoldDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Purchase Order Payment Hold" />
    <property name="shortLabel" value="Purchase Order Payment Hold" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PURAP"
            p:parameterName="PURCHASE_ORDER"
            p:parameterDetailType="PurchaseOrder" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderPaymentHoldDocument" />
    <property name="sessionDocument" value="true" />
    <property name="documentClass" value="org.kuali.kfs.module.purap.document.PurchaseOrderPaymentHoldDocument" />
    <property name="businessRulesClass" value="org.kuali.rice.kns.rules.TransactionalDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchasingAccountsPayableTransactionalDocumentAuthorizerBase" />
    <property name="documentPresentationControllerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchaseOrderPaymentHoldDocumentPresentationController" />
    <property name="documentTypeCode" value="POPH" />
    <property name="workflowAttributes">
    	<ref bean="PurchaseOrderPaymentHoldDocument-workflowAttributes" />
    </property>
    <property name="accountingLineGroups">
    	<map>
    		<entry>
    			<key><value>source</value></key>
	    		<ref bean="PurchaseOrderDocument-sourceAccountingLineGroup" parent="AccountingLineGroup" />
	    	</entry>
    	</map>
    </property>    
  </bean>

    <!-- workflow attributes -->
    <bean id="PurchaseOrderPaymentHoldDocument-workflowAttributes" parent="PurchaseOrderPaymentHoldDocument-workflowAttributes-parentBean" />
  
    <bean id="PurchaseOrderPaymentHoldDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true">
    </bean>

</beans>
