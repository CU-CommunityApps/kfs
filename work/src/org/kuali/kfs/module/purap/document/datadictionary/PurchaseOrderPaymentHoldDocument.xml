<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderPaymentHoldDocument" parent="PurchaseOrderPaymentHoldDocument-parentBean" />

  <bean id="PurchaseOrderPaymentHoldDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Purchase Order Payment Hold" />
    <property name="shortLabel" value="Purchase Order Payment Hold" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PURAP"
            p:parameterName="PURCHASE_ORDER"
            p:parameterDetailType="PurchaseOrder" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderPaymentHoldDocument" />
    <property name="sessionDocument" value="true" />
    <property name="documentClass" value="org.kuali.kfs.module.purap.document.PurchaseOrderPaymentHoldDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.purap.document.validation.impl.PurchaseOrderPaymentHoldDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.module.purap.document.authorization.PurchaseOrderPaymentHoldDocumentAuthorizer" />
    <property name="documentTypeCode" value="POPH" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderPaymentHoldDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PURCHASE_ORDER_HOLD_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderPaymentHoldDocument-workflowProperties" parent="PurchaseOrderPaymentHoldDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderPaymentHoldDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting.account" />
              <bean parent="WorkflowProperty"
                    p:path="status" />
              <bean parent="WorkflowProperty"
                    p:path="contractManager" />
              <bean parent="WorkflowProperty"
                    p:path="vendorContract" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
