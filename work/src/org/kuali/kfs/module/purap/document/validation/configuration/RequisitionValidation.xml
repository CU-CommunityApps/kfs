<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    

	<bean id="Requisition-routeDocumentValidation" parent="Requisition-routeDocumentValidation-parentBean" scope="prototype" />
  
  	<bean id="Requisition-routeDocumentValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>  				
  				<bean parent="AccountingDocument-businessObjectDataDictionaryValidation" scope="prototype">
  					<property name="parameterProperties">
  						<list>
  							<bean parent="validationFieldConversion">
  								<property name="sourceEventProperty" value="iterationSubject" />
  								<property name="targetValidationProperty" value="businessObjectForValidation" />
  							</bean>
  						</list>
  					</property>
  				</bean>
  				<bean parent="Requisition-newProcessItemValidation" scope="prototype">								
					<property name="quitOnFail" value="true" />
				</bean>  												
				<!-- Here's the start of Collection Validations testing, will it work ? -->
			    <bean class="org.kuali.kfs.sys.document.validation.impl.CollectionValidation" scope="prototype">
  					<property name="collectionProperty" value="document.items" />
  					<property name="validations">
  						<list>
  							<bean parent="AccountingDocument-businessObjectDataDictionaryValidation" scope="prototype">
  								<property name="parameterProperties">
  									<list>
  										<bean parent="validationFieldConversion">
  											<property name="sourceEventProperty" value="iterationSubject" />
  											<property name="targetValidationProperty" value="businessObjectForValidation" />
  										</bean>
  									</list>
  								</property>
  							</bean>
  							<bean parent="Requisition-newIndividualItemValidation" scope="prototype">
  							    <property name="parameterProperties">
  							      	<list>
  										<bean parent="validationFieldConversion">
  											<property name="sourceEventProperty" value="iterationSubject" />
  											<property name="targetValidationProperty" value="itemForValidation" />
  										</bean>
  									</list>
  							    </property>
  							</bean>
  						</list>
  					</property>
  				</bean>												
  			</list>
  		</property>
  	</bean>

  
  	<bean id="Requisition-approveDocumentValidation" parent="Requisition-approveDocumentValidation-parentBean" scope="prototype" />
  
  	<bean id="Requisition-approveDocumentValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list><bean parent="AccountingDocument-ApproveDocument-DefaultValidation" scope="prototype" /></list>
  		</property>
  	</bean>

</beans>
