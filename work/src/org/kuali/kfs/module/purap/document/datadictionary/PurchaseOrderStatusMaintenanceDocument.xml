<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderStatusMaintenanceDocument" parent="PurchaseOrderStatusMaintenanceDocument-parentBean" />

  <bean id="PurchaseOrderStatusMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.PurchaseOrderStatus" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PurchaseOrderStatusMaintenanceDocument-EditPurchaseOrderStatus" />
      </list>
    </property>
    <property name="allowsNewOrCopy" value="false" />
    <property name="lockingKeys" >
      <list>
        <value>statusCode</value>
      </list>
    </property>
    <property name="label" value="Purchase Order Status" />
    <property name="shortLabel" value="Purchase Order Status" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.purap.businessobject.PurchaseOrderStatus" p:parameterName="PURCHASE_ORDER_STATUS" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderStatusMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMPS" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderStatusMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PurchaseOrderStatusMaintenanceDocument-EditPurchaseOrderStatus" parent="PurchaseOrderStatusMaintenanceDocument-EditPurchaseOrderStatus-parentBean" />

  <bean id="PurchaseOrderStatusMaintenanceDocument-EditPurchaseOrderStatus-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Purchase Order Status" />
    <property name="title" value="Edit Purchase Order Status" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="statusCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="statusDescription"
              p:required="true" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderStatusMaintenanceDocument-workflowProperties" parent="PurchaseOrderStatusMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderStatusMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
