<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="SensitiveDataMaintenanceDocument" parent="SensitiveDataMaintenanceDocument-parentBean" />

  <bean id="SensitiveDataMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.SensitiveData" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="SensitiveDataMaintenanceDocument-EditSensitiveData" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>sensitiveDataCode</value>
      </list>
    </property>
    <property name="label" value="Sensitive Data" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterNamespace="KFS-PURAP"
            p:parameterName="SENSITIVE_DATA"
            p:parameterDetailType="SensitiveData" />
    </property>
    <property name="shortLabel" value="Sensitive Data" />
    <property name="documentTypeName" value="SensitiveDataMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.purap.document.validation.impl.SensitiveDataRule" /> 
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMSN" />
    <property name="workflowProperties" >
      <ref bean="SensitiveDataMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="SensitiveDataMaintenanceDocument-EditSensitiveData" parent="SensitiveDataMaintenanceDocument-EditSensitiveData-parentBean" />

  <bean id="SensitiveDataMaintenanceDocument-EditSensitiveData-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Sensitive Data" />
    <property name="title" value="Edit Sensitive Data" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="sensitiveDataCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="sensitiveDataDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="SensitiveDataMaintenanceDocument-workflowProperties" parent="SensitiveDataMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="SensitiveDataMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
