<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd" [
<!ENTITY accountsPayableDocumentBaseAttributes SYSTEM "../../AccountsPayableDocumentBaseAttributes.xml">
<!ENTITY purchasingAccountsPayableDocumentBaseAttributes SYSTEM "../../dictionary/entity/PurchasingAccountsPayableDocumentBaseAttributes.xml">
]>
<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.purap.document.PaymentRequestDocument</documentClass>
        <businessRulesClass>org.kuali.module.purap.rules.PaymentRequestDocumentRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.purap.rules.PaymentRequestDocumentPreRules</preRulesCheckClass>
        <documentAuthorizerClass>org.kuali.module.purap.document.authorization.PaymentRequestDocumentAuthorizer</documentAuthorizerClass>
        
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>KUALI_PURAP_ACCOUNTS_PAYABLE</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>PaymentRequestDocument</documentTypeName>
        <documentTypeCode>PREQ</documentTypeCode>

        <label>Payment Request</label>

        <attributes>

            <!-- BELOW IS DUMMY ATTRIBUTE FOR ROUTING LABELS ONLY -->
 			<attributeReference name="statusDescription" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="paymentRequestStatus"/>
 			
			<attributeReference name="requisitionIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="requisitionIdentifier"/>
            
			<!-- PURAP DOCUMENT ATTRIBUTES -->
			&purchasingAccountsPayableDocumentBaseAttributes;
			
			<!-- ACCOUNTS PAYABLE DOCUMENT ATTRIBUTES -->
            &accountsPayableDocumentBaseAttributes;
			
			<attributeReference name="purapDocumentIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purapDocumentIdentifier">
                <label>Payment Request Nbr</label>
                <shortLabel>PREQ Nbr</shortLabel>

            </attributeReference>
            
            <attributeReference name="purchaseOrderIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purapDocumentIdentifier">
			    <label>Purchase Order Nbr</label>
			    <shortLabel>PO Nbr</shortLabel>
			    <required>true</required>

			</attributeReference>
                        
			<attributeReference name="statusCode" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="paymentRequestStatus" />
         
			<attributeReference name="invoiceDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate">
                <label>Invoice Date</label>
                <shortLabel>Invoice Date</shortLabel>
                <required>true</required>

            </attributeReference>
			
			<attribute name="invoiceNumber" forceUppercase="true">
				<label>Invoice Number</label>
				<shortLabel>Invoice Number</shortLabel>
				
				<maxLength>20</maxLength>
				<validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
				<required>true</required>
				
				<control>
					<text size="22"/>
				</control>

			</attribute>
			
			<attribute name="vendorInvoiceAmount" forceUppercase="true">
                <label>Vendor Invoice Amount</label>
                <shortLabel>Vendor Invoice Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>
                <required>true</required>

                <control>
                    <text size="21" />
                </control>

            </attribute>
            
            <attributeReference name="paymentRequestPayDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate">
                <label>Pay Date</label>
                <shortLabel>paymentRequestPayDate</shortLabel>

            </attributeReference>
            
            <attribute name="paymentRequestCostSourceCode" forceUppercase="true">
                <label>Payment Request Cost Source</label>
                <shortLabel>PaymentRequestCostSource</shortLabel>

                <maxLength>5</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="21" />
                </control>

            </attribute>
            
            <attribute name="paymentAttachmentIndicator" forceUppercase="true">
                <label>Payment Attachment Indicator</label>
                <shortLabel>Attachment</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

            </attribute>
            
            <attribute name="immediatePaymentIndicator" forceUppercase="true">
                <label>Immediate Payment Indicator</label>
                <shortLabel>Immediate Pay</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

            </attribute>
            
            <attribute name="specialHandlingInstructionLine1Text" forceUppercase="false">
                <label>Special Handling Instructions</label>
                <shortLabel>Special Handling Instructions</shortLabel>

                <maxLength>90</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

            </attribute>
            
            <attribute name="specialHandlingInstructionLine2Text" forceUppercase="false">
                <label>Special Handling Instructions</label>
                <shortLabel>Special Handling Instructions</shortLabel>

                <maxLength>90</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

            </attribute>
            
            <attribute name="specialHandlingInstructionLine3Text" forceUppercase="false">
                <label>Special Handling Instructions</label>
                <shortLabel>Special Handling Instructions</shortLabel>

                <maxLength>90</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="45" />
                </control>

            </attribute>
            
            <attributeReference name="paymentPaidDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate">
                <label>Payment Request Paid Date</label>
                <shortLabel>paymentRequestPaidDate</shortLabel>

            </attributeReference>

            <attribute name="paymentRequestElectronicInvoiceIndicator" forceUppercase="true">
                <label>Payment Request Electronic Invoice Indicator</label>
                <shortLabel>E-Invoice</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

            </attribute>
            
            <attribute name="accountsPayableProcessorIdentifier" forceUppercase="true">
                <label>Accounts Payable Processor</label>
                <shortLabel>AP Processor</shortLabel>

                <maxLength>11</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>
            
            <attribute name="paymentRequestedCancelIndicator" forceUppercase="true">
                <label>Request Cancel Indicator</label>
                <shortLabel>Request Cancel</shortLabel>

                <maxLength>11</maxLength>
                <validationPattern>
                    <numeric />  
                </validationPattern>
 
                <required>true</required>
                
                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderNotes">
            	<label>PO Notes</label>
            	<shortLabel>PO Notes</shortLabel>
            	
            	<maxLength>3</maxLength>
            	<validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>
            	
            	<control>
            		<text size="3"/>
            	</control>

            </attribute>
            
            <attributeReference name="purchaseOrderEndDate" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericDate"> 
			    <label>PO End Date</label> 
			    <shortLabel>PO End Date</shortLabel> 

			</attributeReference> 

			<!-- PAYMENT REQUEST DOCUMENT ATTRIBUTES -->
			
			<attributeReference name="vendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <required>true</required>
            </attributeReference>
			
            <attributeReference name="alternateVendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <label>Alternate Vendor Header Generated Identifier</label>
                <required>false</required>
            </attributeReference>

            <attributeReference name="alternateVendorDetailAssignedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorDetailAssignedIdentifier">
                <label>Alternate Vendor Detail Assigned Identifier</label>
                <required>false</required>
            </attributeReference>

            <attributeReference name="originalVendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <label>Original Vendor Header Generated Identifier</label>
                <required>false</required>
            </attributeReference>

            <attributeReference name="originalVendorDetailAssignedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorDetailAssignedIdentifier">
                <label>Original Vendor Detail Assigned Identifier</label>
                <required>false</required>
            </attributeReference>

			<attributeReference name="primaryVendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName"/>			

            <attributeReference name="vendorPaymentTermsCode" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorPaymentTermsCode"/>
            
            <attributeReference name="vendorShippingTitleCode" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorShippingTitleCode"/>
                                                
            <attributeReference name="vendorShippingPaymentTermsCode" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorShippingPaymentTermsCode"/>
            
            <attributeReference name="recurringPaymentTypeCode" sourceClassName="org.kuali.module.purap.bo.RecurringPaymentType" sourceAttributeName="recurringPaymentTypeCode">
                <label>Payment Classification</label>
                <shortLabel>recurringPaymentTypeCode</shortLabel>
                <control>
                    <select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.RecurringPaymentTypeValuesFinder" />
                </control>

            </attributeReference>

			<attributeReference name="itemTotalPoEncumbranceAmount" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Total PO Encumbrance Amount</label>
				<shortLabel>Encumbrance excluding freight &amp; s/h</shortLabel>

			</attributeReference>

			<attributeReference name="itemTotalPoEncumbranceAmountRelieved" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Total PO Encumbrance Amount Relieved</label>
				<shortLabel>Total Encumbrance Amount Relieved</shortLabel>

			</attributeReference>

			<attributeReference name="itemTotalPoPaidAmount" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Total PO Paid Amount</label>
				<shortLabel>TotalPaidAmount</shortLabel>

			</attributeReference>

			<attributeReference name="lineItemTotal" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Invoice Total Prior to Additional Charges</label>
				<shortLabel>Invoice Total Prior to Additional Charges</shortLabel>

			</attributeReference>

			<attributeReference name="grandTotalExcludingDiscount" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Total Before Discount</label>
				<shortLabel>Total Before Discount</shortLabel>

			</attributeReference>

			<attributeReference name="grandTotal" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="genericItemAmount">
				<label>Grand Total</label>
				<shortLabel>Grand Total</shortLabel>

			</attributeReference>

			<attribute name="closePurchaseOrderIndicator" forceUppercase="true">
			    <label>Close PO</label>
			    <shortLabel>Close PO</shortLabel>
			
			    <maxLength>1</maxLength>
			
			    <control>
			        <checkbox />
			    </control>

			</attribute>
        </attributes>
	
		<help parameterNamespace="KFS-PA" parameterDetailType="PaymentRequest" parameterName="PAYMENT_REQUEST" />
        <allowsCopy>false</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
        
    </transactionalDocument>
</dictionaryEntry>