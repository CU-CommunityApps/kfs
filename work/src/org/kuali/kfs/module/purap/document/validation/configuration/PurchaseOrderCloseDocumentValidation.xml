<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
    <!-- Route Document Event -->
	<bean id="PurchaseOrderClose-routeDocumentValidation" parent="PurchaseOrderClose-routeDocumentValidation-parentBean" scope="prototype" />
  
  	<bean id="PurchaseOrderClose-routeDocumentValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>
  				<bean parent="Purchasing-newProcessItemValidation-parentBean" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  	

				<bean parent="Purchasing-processVendorValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-paymentInfoValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-deliveryValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-capitalAssetValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-updateCamsViewValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  
  			</list>
  		</property>
  	</bean>

	<!-- Approve Document Events -->
  	<bean id="PurchaseOrderClose-approveDocumentValidation" parent="PurchaseOrderClose-approveDocumentValidation-parentBean" scope="prototype" />
  
  	<bean id="PurchaseOrderClose-approveDocumentValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>
  				<bean parent="Purchasing-newProcessItemValidation-parentBean" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  	

				<bean parent="Purchasing-processVendorValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-paymentInfoValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-deliveryValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-capitalAssetValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  

				<bean parent="Purchasing-updateCamsViewValidation" scope="prototype">								
					<property name="quitOnFail" value="false" />
				</bean>  
  				
  			</list>  			
  		</property>
  	</bean>

	<!-- Add Item Event -->
	<bean id="PurchaseOrderClose-addPurchasingAccountsPayableItemValidation" parent="PurchaseOrderClose-addPurchasingAccountsPayableItemValidation-parentBean" scope="prototype" />
  
	<bean id="PurchaseOrderClose-addPurchasingAccountsPayableItemValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>
				<bean parent="Purchasing-addItemValidation" scope="prototype">
					<property name="parameterProperties">
						<list>
							<bean parent="validationFieldConversion">
								<property name="sourceEventProperty" value="item" />
								<property name="targetValidationProperty" value="itemForValidation" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Import Item Event -->
	<bean id="PurchaseOrderClose-importPurchasingAccountsPayableItemValidation" parent="PurchaseOrderClose-importPurchasingAccountsPayableItemValidation-parentBean" scope="prototype" />
  
	<bean id="PurchaseOrderClose-importPurchasingAccountsPayableItemValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>
				<bean parent="Purchasing-importItemValidation" scope="prototype">
					<property name="parameterProperties">
						<list>
							<bean parent="validationFieldConversion">
								<property name="sourceEventProperty" value="item" />
								<property name="targetValidationProperty" value="itemForValidation" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<!-- Save Document Event -->
	<bean id="PurchaseOrderClose-saveDocumentValidation" parent="PurchaseOrderClose-saveDocumentValidation-parentBean" scope="prototype" />
  
	<bean id="PurchaseOrderClose-saveDocumentValidation-parentBean" class="org.kuali.kfs.sys.document.validation.impl.CompositeValidation" scope="prototype" abstract="true">
  		<property name="validations">
  			<list>
			    <bean class="org.kuali.kfs.sys.document.validation.impl.CollectionValidation" scope="prototype">
  					<property name="collectionProperty" value="document.items" />
  					<property name="validations">
  						<list>
							<bean parent="PurchasingAccountsPayable-lineItemIndicatorBranchingValidation" scope="prototype">
			                    <property name="branchMap">
				                    <map>
					                    <entry>
						                    <key><value>isLineItemIndicator</value></key>
			                                <bean parent="Purchasing-commodityCodeValidation" scope="prototype">
												<property name="parameterProperties">
										            <list>
								  	                    <bean parent="validationFieldConversion">
									   	                    <property name="sourceEventProperty" value="iterationSubject" />
												            <property name="targetValidationProperty" value="itemForValidation" />
											            </bean>
										            </list>
									            </property>
									       	</bean>							                                
					                    </entry>
					                    <entry>
						                    <key><value>isNotLineItemIndicator</value></key>
											<bean parent="AccountingDocument-alwaysTrueValidation" scope="prototype" />
					                    </entry>					                    
				                    </map>
					            </property>
			                    <property name="parameterProperties">
						            <list>
				  	                    <bean parent="validationFieldConversion">
					   	                    <property name="sourceEventProperty" value="iterationSubject" />
								            <property name="targetValidationProperty" value="itemForValidation" />
							            </bean>
						            </list>
					            </property>
				            </bean>
						</list>
					</property>			
				</bean>
			</list>
		</property>
	</bean>
		
</beans>
		    