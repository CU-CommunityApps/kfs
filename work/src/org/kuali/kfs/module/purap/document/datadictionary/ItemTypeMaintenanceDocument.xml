<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ItemTypeMaintenanceDocument" parent="ItemTypeMaintenanceDocument-parentBean" />

  <bean id="ItemTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.purap.bo.ItemType" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ItemTypeMaintenanceDocument-EditItemType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>itemTypeCode</value>
      </list>
    </property>
    <property name="label" value="Item Type" />
    <property name="shortLabel" value="Item Type" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="ITEM_TYPE"
            p:parameterDetailType="ItemType" />
    </property>
    <property name="documentTypeName" value="ItemTypeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMIT" />
    <property name="workflowProperties" >
      <ref bean="ItemTypeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>PA_PUR_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ItemTypeMaintenanceDocument-EditItemType" parent="ItemTypeMaintenanceDocument-EditItemType-parentBean" />

  <bean id="ItemTypeMaintenanceDocument-EditItemType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Item Type" />
    <property name="title" value="Edit Item Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="itemTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="quantityBasedGeneralLedgerIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="itemTypeAboveTheLineIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ItemTypeMaintenanceDocument-workflowProperties" parent="ItemTypeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ItemTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
