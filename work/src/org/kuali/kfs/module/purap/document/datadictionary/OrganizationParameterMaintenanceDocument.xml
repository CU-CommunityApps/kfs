<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="OrganizationParameterMaintenanceDocument" parent="OrganizationParameterMaintenanceDocument-parentBean" />

  <bean id="OrganizationParameterMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.purap.businessobject.OrganizationParameter" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="OrganizationParameterMaintenanceDocument-EditOrganizationParameter" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>chartOfAccountsCode</value>
        <value>organizationCode</value>
      </list>
    </property>
    <property name="label" value="Organization Parameter" />
    <property name="shortLabel" value="Organization Parameter" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.purap.businessobject.OrganizationParameter" p:parameterName="ORGANIZATION_PARAMETER" />
    </property>
    <property name="documentTypeName" value="OrganizationParameterMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.purap.document.validation.impl.OrganizationParameterRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PMOP" />
    <property name="workflowProperties" >
      <ref bean="OrganizationParameterMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="OrganizationParameterMaintenanceDocument-EditOrganizationParameter" parent="OrganizationParameterMaintenanceDocument-EditOrganizationParameter-parentBean" />

  <bean id="OrganizationParameterMaintenanceDocument-EditOrganizationParameter-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Organization Parameter" />
    <property name="title" value="Edit Organization Parameter" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="chartOfAccountsCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="organizationAutomaticPurchaseOrderLimit" />
        <bean parent="MaintainableFieldDefinition"
              p:name="activeIndicator" />              
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="OrganizationParameterMaintenanceDocument-workflowProperties" parent="OrganizationParameterMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="OrganizationParameterMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
