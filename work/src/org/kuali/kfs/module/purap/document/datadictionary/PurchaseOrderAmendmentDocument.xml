<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurchaseOrderAmendmentDocument" parent="PurchaseOrderAmendmentDocument-parentBean" />

  <bean id="PurchaseOrderAmendmentDocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
    <property name="label" value="Purchase Order Amendment" />
    <property name="shortLabel" value="Purchase Order Amendment" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-PA"
            p:parameterName="PURCHASE_ORDER"
            p:parameterDetailType="PurchaseOrder" />
    </property>
    <property name="documentTypeName" value="PurchaseOrderAmendmentDocument" />
    <property name="documentClass" value="org.kuali.module.purap.document.PurchaseOrderAmendmentDocument" />
    <property name="businessRulesClass" value="org.kuali.module.purap.rules.PurchaseOrderAmendmentDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.module.purap.document.authorization.PurchaseOrderAmendmentDocumentAuthorizer" />
    <property name="documentTypeCode" value="POA" />
    <property name="workflowProperties" >
      <ref bean="PurchaseOrderAmendmentDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
    <property name="attributes" >
      <list>
        <ref bean="PurchaseOrderAmendmentDocument-newUnorderedItem" />
      </list>
    </property>
  </bean>
  
  <!-- Attribute Definitions -->
  
  <bean id="PurchaseOrderAmendmentDocument-newUnorderedItem" parent="PurchaseOrderAmendmentDocument-newUnorderedItem-parentBean" />

  <bean id="PurchaseOrderAmendmentDocument-newUnorderedItem-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="newUnorderedItem" />
    <property name="label" value="New Unordered Items on Amendment" />
    <property name="shortLabel" value="New Unordered Items" />
    <property name="description" value="New Unordered Items on Purchase Order Amendment" />
    <property name="control" >
       <bean parent="CheckboxControlDefinition" />
    </property>
    <property name="maxLength" value="1" />
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurchaseOrderAmendmentDocument-workflowProperties" parent="PurchaseOrderAmendmentDocument-workflowProperties-parentBean" />

  <bean id="PurchaseOrderAmendmentDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="documentHeader" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting" />
              <bean parent="WorkflowProperty"
                    p:path="accountsForRouting.account" />
              <bean parent="WorkflowProperty"
                    p:path="status" />
              <bean parent="WorkflowProperty"
                    p:path="contractManager" />
              <bean parent="WorkflowProperty"
                    p:path="vendorContract" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
