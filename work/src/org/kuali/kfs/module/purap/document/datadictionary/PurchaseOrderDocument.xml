<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd" [
<!ENTITY purchasingDocumentBaseAttributes SYSTEM "../../PurchasingDocumentBaseAttributes.xml">
<!ENTITY purchasingAccountsPayableDocumentBaseAttributes SYSTEM "../../dictionary/entity/PurchasingAccountsPayableDocumentBaseAttributes.xml">
]>
<dictionaryEntry>
    <transactionalDocument>
        <documentClass>org.kuali.module.purap.document.PurchaseOrderDocument</documentClass>
        <businessRulesClass>org.kuali.module.purap.rules.PurchaseOrderDocumentRule</businessRulesClass>
        <preRulesCheckClass>org.kuali.module.purap.rules.PurchaseOrderDocumentPreRules</preRulesCheckClass>
        <documentAuthorizerClass>org.kuali.module.purap.document.authorization.PurchaseOrderDocumentAuthorizer</documentAuthorizerClass>
        
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                    <!-- workgroup>PA_PUR_USERS</workgroup -->
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>PurchaseOrderDocument</documentTypeName>
        <documentTypeCode>PO</documentTypeCode>

        <label>Purchase Order</label>
        <shortLabel>PO</shortLabel>

        <attributes>

            <!-- BELOW ARE DUMMY ATTRIBUTES FOR ROUTING LABELS ONLY -->
			<attributeReference name="statusDescription" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purchaseOrderStatus"/>
            
            <attributeReference name="contractManagerName" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="contractManager"/>

			<!-- PURAP DOCUMENT ATTRIBUTES -->
			&purchasingAccountsPayableDocumentBaseAttributes;
			
			<attributeReference name="purchaseOrderRetransmissionMethodCode" sourceClassName="org.kuali.module.purap.bo.PurchaseOrderTransmissionMethod" sourceAttributeName="purchaseOrderTransmissionMethodCode">
                <label>Method of PO Retransmission</label>
                <shortLabel>Code</shortLabel>
                <required>false</required>
                <control>
                    <select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.PurchaseOrderRetransmissionMethodValuesFinder" />
                </control>

            </attributeReference>

            <attribute name="retransmitHeader" forceUppercase="true">
            	<label>PO Header</label>
            	<shortLabel>PO Header</shortLabel>
            	
            	<maxLength>45</maxLength>
            	<validationPattern><anyCharacter /></validationPattern>
            	
            	<control>
            		<select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.PurchaseOrderHeaderValuesFinder"/>
            	</control>

            </attribute>

			<attributeReference name="receivingDocumentRequiredIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Receiving Required</label>
                <shortLabel>Receiving Required</shortLabel>
            </attributeReference>
            
            <attributeReference name="paymentRequestPositiveApprovalIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericBoolean">
                <label>Payment Request Positive Approval Required</label>
                <shortLabel>Payment Request Positive Approval Required</shortLabel>
            </attributeReference>
            
            <attributeReference name="contractManagerCode" sourceClassName="org.kuali.module.vendor.bo.ContractManager" sourceAttributeName="contractManagerCode">
                <label>Contract Manager</label>
                <shortLabel>Contract Manager</shortLabel>

            </attributeReference>

            <attributeReference name="contractManager" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="contractManager"/>
                            
			<attributeReference name="purapDocumentIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purapDocumentIdentifier">
                <label>Purchase Order Nbr</label>
                <shortLabel>PO Nbr</shortLabel>

            </attributeReference>

			<attributeReference name="statusCode" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="purchaseOrderStatus" />
            
			<!-- PURCHASING DOCUMENT ATTRIBUTES -->
            &purchasingDocumentBaseAttributes;

			<!-- PURCHASE ORDER DOCUMENT ATTRIBUTES -->
			<attributeReference name="requisitionIdentifier" sourceClassName="org.kuali.module.purap.bo.PurApAttributeReferenceDummy" sourceAttributeName="requisitionIdentifier"/>
            
            <attributeReference name="purchaseOrderVendorChoiceCode" sourceClassName="org.kuali.module.purap.bo.PurchaseOrderVendorChoice" sourceAttributeName="purchaseOrderVendorChoiceCode">
                <label>Vendor Choice</label>
                <shortLabel>Vendor Choice</shortLabel>
                <required>true</required>
                <control>
                    <select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.PurchaseOrderVendorChoiceValuesFinder" />
                </control>

            </attributeReference>

            <attributeReference name="alternateVendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <label>Alternate Vendor Header Generated Identifier</label>
                <required>false</required>
            </attributeReference>

            <attributeReference name="alternateVendorDetailAssignedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorDetailAssignedIdentifier">
                <label>Alternate Vendor Detail Assigned Identifier</label>
                <required>false</required>
            </attributeReference>

            <attributeReference name="alternateVendorNumber" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorNumber">
                <label>Vendor Number</label>
                <required>false</required>

            </attributeReference>

            <attributeReference name="alternateVendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor Name</label>
                <required>false</required>

            </attributeReference>

            <attribute name="finalPaymentAmount" forceUppercase="true">
                <label>Final Payment Amount</label>
                <shortLabel>Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="21" />
                </control>

            </attribute>

            <attribute name="finalPaymentDate" forceUppercase="true">
                <label>Final Payment Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="initialPaymentAmount" forceUppercase="true">
                <label>Initial Payment Amount</label>
                <shortLabel>Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="21" />
                </control>

            </attribute>

            <attribute name="initialPaymentDate" forceUppercase="true">
                <label>Initial Payment Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="recurringPaymentAmount" forceUppercase="true">
                <label>Recurring Payment Amount</label>
                <shortLabel>Amount</shortLabel>

                <maxLength>19</maxLength>
                <validationPattern><floatingPoint /></validationPattern>

                <control>
                    <text size="21" />
                </control>

            </attribute>

            <attribute name="recurringPaymentDate" forceUppercase="true">
                <label>Recurring Payment Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderCommodityDescription" forceUppercase="true">
                <label>Purchase Order Commodity Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderConfirmedIndicator" forceUppercase="true">
                <label>Purchase Order Confirmed Indicator</label>
                <shortLabel>Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

            </attribute>

            <attribute name="purchaseOrderInitialOpenDate" forceUppercase="true">
                <label>Purchase Order Initial Open Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderLastTransmitDate" forceUppercase="true">
                <label>Purchase Order Last Transmit Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>7</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderPreviousIdentifier" forceUppercase="true">
                <label>Purchase Order Previous Identifier</label>
                <shortLabel>Identifier</shortLabel>

                <maxLength>9</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="11" />
                </control>

            </attribute>

            <attribute name="purchaseOrderQuoteDueDate" forceUppercase="true">
                <label>Quote Due Date</label>
                <shortLabel>Date</shortLabel>

                <maxLength>10</maxLength>
                <validationPattern><date /></validationPattern>

                <control>
                    <text size="9" />
                </control>

            </attribute>

            <attribute name="purchaseOrderQuoteTypeCode" forceUppercase="true">
                <label>Quote Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>25</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.PurchaseOrderQuoteTypeValuesFinder"/>
                </control>

            </attribute>

            <attribute name="purchaseOrderQuoteVendorNoteText" forceUppercase="true">
                <label>Notes to Vendor</label>
                <shortLabel>Text</shortLabel>

                <maxLength>255</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <textarea rows="5" cols="80"/>
                </control>

            </attribute>

<!-- The following vendor fields are defined here although common among other docs because they are not required on REQ, but are required for PO -->
            <attributeReference name="vendorHeaderGeneratedIdentifier" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorHeaderGeneratedIdentifier">
                <required>true</required>
            </attributeReference>

            <attributeReference name="vendorName" sourceClassName="org.kuali.module.vendor.bo.VendorDetail" sourceAttributeName="vendorName">
                <label>Vendor</label>
                <shortLabel>Vendor</shortLabel>
                <required>true</required>
            </attributeReference>
            
            <attributeReference name="vendorLine1Address" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="line1Address">
                <required>true</required>

            </attributeReference>

            <attributeReference name="vendorCityName" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="cityName">
                <required>true</required>

            </attributeReference>
            
            <attributeReference name="vendorCountryCode" sourceClassName="org.kuali.module.vendor.bo.VendorAttributeReferenceDummy" sourceAttributeName="countryCode">
                <required>true</required>

            </attributeReference>

            <attributeReference name="recurringPaymentFrequencyCode" sourceClassName="org.kuali.module.purap.bo.RecurringPaymentFrequency" sourceAttributeName="recurringPaymentFrequencyCode">
                <label>Recurring Payment Frequency</label>
                <shortLabel>Code</shortLabel>
                <control>
			        <select valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.RecurringPaymentFrequencyValuesFinder" />
                </control>

			</attributeReference>  
            
            <attributeReference name="requisitionSource" sourceClassName="org.kuali.module.purap.bo.RequisitionSource" sourceAttributeName="requisitionSourceDescription">
            	<label>Requisition Source</label>
            	<shortLabel>Req. Source</shortLabel>        	
            </attributeReference>
            
            <attribute name="statusChange" forceUppercase="true">
            	<label>Waiting on Additional Info</label>
            	<shortLabel>Status Change</shortLabel>
            	
            	<maxLength>4</maxLength>
            	<validationPattern><anyCharacter /></validationPattern>
            	
            	<control>
            		<radio valuesFinderClass="org.kuali.module.purap.lookup.keyvalues.StatusChangeValuesFinder"/>
            	</control>
            </attribute>

            <attributeReference name="internalPurchasingLimit" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericAmount">
                <label>Internal Purchasing Limit</label>
                <shortLabel>Internal Purchasing Limit</shortLabel>

            </attributeReference>

        </attributes>
        <help parameterNamespace="KFS-PA" parameterDetailType="PurchaseOrder" parameterName="PURCHASE_ORDER" />
        <allowsCopy>true</allowsCopy>
        <allowsErrorCorrection>false</allowsErrorCorrection>
        
    </transactionalDocument>
</dictionaryEntry>