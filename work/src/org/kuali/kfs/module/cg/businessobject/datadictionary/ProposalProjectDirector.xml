<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.ProposalProjectDirector">


        <inquiry>
            <title>Proposal Project Director Inquiry</title>

            <inquirySections><inquirySection title="Proposal Project Director Details"><inquiryFields>
                <field attributeName="personUniversalIdentifier" />
                <field attributeName="proposalNumber" />
                <field attributeName="proposalPrimaryProjectDirectorIndicator" />
                <field attributeName="proposalProjectDirectorProjectTitle" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Project Director Lookup</title>

            <instructions>Look up a Proposal Project Director</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="proposalNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="personUniversalIdentifier" required="false" />
                <lookupField attributeName="proposalNumber" required="false" />
                <lookupField attributeName="proposalPrimaryProjectDirectorIndicator" required="false" />
                <lookupField attributeName="proposalProjectDirectorProjectTitle" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="personUniversalIdentifier" />
                <field attributeName="proposalNumber" />
                <field attributeName="proposalPrimaryProjectDirectorIndicator" />
                <field attributeName="proposalProjectDirectorProjectTitle" />
            </resultFields>
        </lookup>

        <attributes>

            <attributeReference name="personUniversalIdentifier" sourceClassName="org.kuali.module.cg.bo.ProjectDirector" sourceAttributeName="personUniversalIdentifier">
            	<label>Project Director ID</label>
            	<shortLabel>Proj Dir ID</shortLabel>
                <control>
                    <hidden/>
                </control>
            </attributeReference>

            <attributeReference name="projectDirector.personUserIdentifier" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personUserIdentifier">
            	<label>Project Director User ID</label>
            	<required>false</required>
            </attributeReference>

            <attributeReference name="projectDirector.personName" sourceClassName="org.kuali.core.bo.user.UniversalUser" sourceAttributeName="personName">
                <label>Name</label>
            	<required>false</required>
                <control>
                    <text size="40" />
                </control>
            </attributeReference>

            <attribute name="proposalNumber" forceUppercase="true">
                <label>Proposal Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>12</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="14" />
                </control>
			</attribute>

            <attribute name="proposalPrimaryProjectDirectorIndicator" forceUppercase="true">
                <label>Primary</label>
                <shortLabel>Primary</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>
			</attribute>

            <attribute name="proposalProjectDirectorProjectTitle" forceUppercase="true">
                <label>Title</label>
                <shortLabel>Title</shortLabel>

                <maxLength>100</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="40" />
                </control>
			</attribute>

			<attributeReference name="newCollectionRecord" 
                                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                                sourceAttributeName="newCollectionRecord" />
                                
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
