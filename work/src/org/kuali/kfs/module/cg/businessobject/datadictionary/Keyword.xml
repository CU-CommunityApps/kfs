<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Keyword" parent="Keyword-parentBean" />

  <bean id="Keyword-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.Keyword" />
    <property name="inquiryDefinition" >
      <ref bean="Keyword-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Keyword-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Keyword" />
    <property name="attributes" >
      <list>
        <ref bean="Keyword-active" />
        <ref bean="Keyword-routingFormKeywordDescription" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Keyword-active" parent="Keyword-active-parentBean" />

  <bean id="Keyword-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
    <property name="name" value="active" />
  </bean>
  <bean id="Keyword-routingFormKeywordDescription" parent="Keyword-routingFormKeywordDescription-parentBean" />

  <bean id="Keyword-routingFormKeywordDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="routingFormKeywordDescription" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Routing Form Keyword Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="70" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="72" />
    </property>
    
    
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Keyword-inquiryDefinition" parent="Keyword-inquiryDefinition-parentBean" />

  <bean id="Keyword-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Keyword Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="routingFormKeywordDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="active" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Keyword-lookupDefinition" parent="Keyword-lookupDefinition-parentBean" />

  <bean id="Keyword-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Keyword Lookup" />
    <property name="instructions" value="Look up a Keyword" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="routingFormKeywordDescription" />
        <bean parent="FieldDefinition"
              p:defaultValue="true"
              p:attributeName="active" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="routingFormKeywordDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="active" />
      </list>
    </property>
  </bean>
</beans>
