<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.routingform.bo.DueDateType">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Due Date Type Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="dueDateDescription" />
                        <field attributeName="dueDateTypeCode" />
                        <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Due Date Type Lookup</title>

            <instructions>Lookup a Due Date Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="dueDateTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="dueDateDescription" required="false" />
                <lookupField attributeName="dueDateTypeCode" required="false" />
                <lookupField attributeName="dataObjectMaintenanceCodeActiveIndicator" required="false">
                    <defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="dueDateDescription" />
                <field attributeName="dueDateTypeCode" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attributeReference name="dataObjectMaintenanceCodeActiveIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attribute name="approvalLeadTime" forceUppercase="true">
                <label>Approval Lead Time</label>
                <shortLabel>Time</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="5" />
                </control>

                <summary>approvalLeadTime</summary>
                <description>approvalLeadTime description...</description>
			</attribute>

            <attribute name="dueDateDescription" forceUppercase="false">
                <label>Due Date Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="22" />
                </control>

                <summary>dueDateDescription</summary>
                <description>dueDateDescription description...</description>
			</attribute>

            <attribute name="dueDateTypeCode" forceUppercase="true">
                <label>Due Date Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>dueDateTypeCode</summary>
                <description>dueDateTypeCode description...</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
