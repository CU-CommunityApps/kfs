<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.ProposalAwardType">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Proposal Award Type Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="proposalAwardTypeCode" />
                <field attributeName="proposalAwardTypeDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Award Type Lookup</title>

            <instructions>Look up a Proposal Award Type</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="proposalAwardTypeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="proposalAwardTypeCode" required="false" />
                <lookupField attributeName="proposalAwardTypeDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="proposalAwardTypeCode" />
                <field attributeName="proposalAwardTypeDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="proposalAwardTypeCode" forceUppercase="true">
                <label>Proposal Award Type Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><alpha exactLength="1" /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>Proposal Award Type Code</summary>
                <description>
					This is a one-letter code to represent the type of proposal or award.  
					Current values are N, C, E, and R.  Additional types may be created 
					using the maintenance document.
				</description>
			</attribute>

            <attribute name="proposalAwardTypeDescription" forceUppercase="true">
                <label>Proposal Award Type Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>20</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="22" />
                </control>

                <summary>Proposal Award Type Description</summary>
                <description>
					This is a text description of the type of proposal or award, such 
					as “New”, “Competing Continuation”, “Supplement”, etc.
				</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>
                	This field identifies whether the Proposal/Award Type Code is active in 
                	the system or not.  This allows historical records to reference inactive 
                	Proposal/Award Types while restricting new proposals and awards from 
                	referencing them.
                </description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
