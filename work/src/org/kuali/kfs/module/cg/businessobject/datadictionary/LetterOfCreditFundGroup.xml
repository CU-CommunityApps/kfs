<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.LetterOfCreditFundGroup">


        <inquiry>
            <title>Letter Of Credit Fund Group Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="letterOfCreditFundGroupCode" />
                <field attributeName="letterOfCreditFundGroupDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Letter Of Credit Fund Group Lookup</title>

            <instructions>Look up a Letter Of Credit Fund Group</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="letterOfCreditFundGroupCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="letterOfCreditFundGroupCode" required="false" />
                <lookupField attributeName="letterOfCreditFundGroupDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="letterOfCreditFundGroupCode" />
                <field attributeName="letterOfCreditFundGroupDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="letterOfCreditFundGroupCode" forceUppercase="true">
                <label>Letter Of Credit Fund Group Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>4</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="6" />
                </control>

                <summary>
                	Letter Of Credit Fund Group Code
                </summary>
                <description>
					This is a 3-4 letter code that represents an abbreviation of the 
					Letter of Credit (LOC) Fund Group Description.  Codes exist for 
					most large Federal Departments and Agencies, as these agencies use 
					LOC funding for their grants and cooperative agreements.  This code 
					is used to aggregate expenditures on all awards from a particular 
					LOC Funding Group in order to determine how much cash needs to be 
					requested from the agency.
				</description>
			</attribute>

            <attribute name="letterOfCreditFundGroupDescription" forceUppercase="true">
                <label>Letter Of Credit Fund Group Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>Letter Of Credit Fund Group Description</summary>
                <description>
					This is a text description of the LOC Fund Group in order to assist 
					in determining which LOC Fund Group Code to assign to a given award.
				</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Inidicator</summary>
                <description>
					This field identifies whether the Letter of Credit Fund Group Code 
					is active in the system or not.  This allows historical records to 
					reference inactive Letter of Credit Fund Group Codes while restricting 
					new proposals and awards from referencing them.
				</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
