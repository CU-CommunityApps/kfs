<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.ProposalPurpose">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Proposal Purpose Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="proposalPurposeCode" />
                <field attributeName="proposalPurposeDescription" />
                <field attributeName="rowActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Purpose Lookup</title>

            <instructions>Look up a Proposal Purpose</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="proposalPurposeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="proposalPurposeCode" required="false" />
                <lookupField attributeName="proposalPurposeDescription" required="false" />
                <lookupField attributeName="rowActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="proposalPurposeCode" />
                <field attributeName="proposalPurposeDescription" />
                <field attributeName="rowActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="proposalPurposeCode" forceUppercase="true">
                <label>Proposal Purpose Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><alpha exactLength="1"/></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>Proposal Purpose Code</summary>
                <description>
					This is a one-letter code to represent the Purpose. Examples are A=Instruction, C=Research, etc.
				</description>
			</attribute>

            <attribute name="proposalPurposeDescription" forceUppercase="true">
                <label>Proposal Purpose Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>26</maxLength>
                <validationPattern><anyCharacter maxLength="26" allowWhitespace="true"/></validationPattern>

                <control>
                    <text size="28" />
                </control>

                <summary>Proposal Purpose Description</summary>
                <description>
					This is a text description of the Proposal Purpose in order to assist in 
					determining which Purpose to assign to the proposal.
				</description>
			</attribute>

            <attribute name="rowActiveIndicator" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>
					This field identifies whether the Proposal Purpose Code is active in the 
					system or not.  This allows historical records to reference inactive Proposal 
					Purpose codes while restricting new proposals from referencing them.
				</description>
            </attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
