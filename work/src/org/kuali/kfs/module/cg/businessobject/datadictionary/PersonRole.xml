<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.routingform.bo.PersonRole">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Person Role Inquiry</title>
             
            <inquirySections>
                <inquirySection title="Header Text">
                    <inquiryFields>
                        <field attributeName="personRoleCode" />
                        <field attributeName="personRoleDescription" />
                        <field attributeName="personRoleSortNumber" />
                        <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
                    </inquiryFields>
                </inquirySection>
            </inquirySections>  
        </inquiry>

        <lookup>
            <title>Person Role Lookup</title>

            <instructions>Look up a Person Role</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="personRoleCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="personRoleCode" required="false" />
                <lookupField attributeName="personRoleDescription" required="false" />
                <lookupField attributeName="dataObjectMaintenanceCodeActiveIndicator" required="false">
                    <defaultValue>Y</defaultValue>
                </lookupField>
            </lookupFields>

            <resultFields>
                <field attributeName="personRoleCode" />
                <field attributeName="personRoleDescription" />
                <field attributeName="personRoleSortNumber" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="personRoleCode" forceUppercase="true">
                <label>Person Role Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>personRoleCode</summary>
                <description>personRoleCode description...</description>
			</attribute>

            <attribute name="personRoleDescription" forceUppercase="true">
                <label>Person Role Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>40</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="42" />
                </control>

                <summary>personRoleDescription</summary>
                <description>personRoleDescription description...</description>
			</attribute>

            <attribute name="personRoleSortNumber" forceUppercase="true">
                <label>Person Role Sort Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="2" />
                </control>

                <summary>personRoleSortNumber</summary>
                <description>personRoleSortNumber description...</description>
			</attribute>

            <attributeReference name="dataObjectMaintenanceCodeActiveIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
