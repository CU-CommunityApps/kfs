<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PersonRole" parent="PersonRole-parentBean" />

  <bean id="PersonRole-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.PersonRole" />
    <property name="inquiryDefinition" >
      <ref bean="PersonRole-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="PersonRole-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Person Role" />
    <property name="attributes" >
      <list>
        <ref bean="PersonRole-personRoleCode" />
        <ref bean="PersonRole-personRoleDescription" />
        <ref bean="PersonRole-personRoleSortNumber" />
        <ref bean="PersonRole-active" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="PersonRole-personRoleCode" parent="PersonRole-personRoleCode-parentBean" />

  <bean id="PersonRole-personRoleCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personRoleCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Person Role Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="personRoleCode" />
    <property name="description" value="personRoleCode description..." />
  </bean>
  <bean id="PersonRole-personRoleDescription" parent="PersonRole-personRoleDescription-parentBean" />

  <bean id="PersonRole-personRoleDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personRoleDescription" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Person Role Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
    <property name="summary" value="personRoleDescription" />
    <property name="description" value="personRoleDescription description..." />
  </bean>
  <bean id="PersonRole-personRoleSortNumber" parent="PersonRole-personRoleSortNumber-parentBean" />

  <bean id="PersonRole-personRoleSortNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personRoleSortNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Person Role Sort Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="2" />
    </property>
    <property name="summary" value="personRoleSortNumber" />
    <property name="description" value="personRoleSortNumber description..." />
  </bean>
  <bean id="PersonRole-active" parent="PersonRole-active-parentBean" />

  <bean id="PersonRole-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
    <property name="name" value="active" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="PersonRole-inquiryDefinition" parent="PersonRole-inquiryDefinition-parentBean" />

  <bean id="PersonRole-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Person Role Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="personRoleCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="personRoleDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="personRoleSortNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="active" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="PersonRole-lookupDefinition" parent="PersonRole-lookupDefinition-parentBean" />

  <bean id="PersonRole-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Person Role Lookup" />
    <property name="instructions" value="Look up a Person Role" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="personRoleCode" />
        <bean parent="FieldDefinition"
              p:attributeName="personRoleDescription" />
        <bean parent="FieldDefinition"
              p:defaultValue="true"
              p:attributeName="active" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="personRoleCode" />
        <bean parent="FieldDefinition"
              p:attributeName="personRoleDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="personRoleSortNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="active" />
      </list>
    </property>
  </bean>
</beans>
