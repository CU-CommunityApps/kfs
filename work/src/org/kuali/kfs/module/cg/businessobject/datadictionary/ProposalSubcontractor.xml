<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../core/datadictionary/dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.ProposalSubcontractor">


        <inquiry>
            <title>Proposal Subcontractor Inquiry</title>

            <inquirySections>
				<inquirySection title="Proposal Subcontractor Details">
					<inquiryFields>
						<field attributeName="proposalNumber" />
		                <field attributeName="proposalSubcontractorAmount" />
			            <field attributeName="proposalSubcontractorNumber" />
			            <field attributeName="subcontractorNumber" />
			        </inquiryFields>
				</inquirySection>
			</inquirySections>
        </inquiry>

        <lookup>
            <title>Proposal Subcontractor Lookup</title>

            <instructions>Look up a Proposal Subcontractor</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="proposalSubcontractorNumber" />
                    <sortAttribute attributeName="proposalNumber" />
                    <sortAttribute attributeName="subcontractorNumber" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="proposalNumber" required="false" />
                <lookupField attributeName="proposalSubcontractorAmount" required="false" />
                <lookupField attributeName="proposalSubcontractorNumber" required="false" />
                <lookupField attributeName="subcontractorNumber" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="proposalNumber" />
                <field attributeName="proposalSubcontractorAmount" />
                <field attributeName="proposalSubcontractorNumber" />
                <field attributeName="subcontractorNumber" />
            </resultFields>
        </lookup>

        <attributes>

            <attributeReference name="proposalNumber"  sourceClassName="org.kuali.module.cg.bo.Proposal" sourceAttributeName="proposalNumber"/>

			<attributeReference name="subcontractorNumber" sourceClassName="org.kuali.module.cg.bo.Subcontractor" sourceAttributeName="subcontractorNumber"/>

			<attributeReference name="proposalSubcontractorAmount"  sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="genericAmount">
				<description>Proposal Subcontractor Amount</description>
				
                <formatterClass>org.kuali.core.web.format.CurrencyFormatter</formatterClass>
			</attributeReference>				

            <attribute name="proposalSubcontractorNumber" forceUppercase="true">
                <label>Proposal Subcontractor Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

				<control>
                    <text size="4" />
                </control>
			</attribute>


			<attribute name="proposalSubcontractorDescription">
                <label>Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>30</maxLength>
                <validationPattern>
                    <anyCharacter allowWhitespace="true" maxLength="30"/>
                </validationPattern>

                <control>
                    <text size="30" />
                </control>
            </attribute>

			<attributeReference name="subcontractor.subcontractorName" sourceClassName="org.kuali.module.cg.bo.Subcontractor" sourceAttributeName="subcontractorName">
                <label>Name</label>
            </attributeReference>

            <attributeReference name="newCollectionRecord"
                                sourceClassName="org.kuali.core.bo.AttributeReferenceDummy"
                                sourceAttributeName="newCollectionRecord" />
                                
            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
