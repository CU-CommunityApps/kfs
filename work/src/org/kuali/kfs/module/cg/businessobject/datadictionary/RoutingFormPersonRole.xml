<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RoutingFormPersonRole" parent="RoutingFormPersonRole-parentBean" />

  <bean id="RoutingFormPersonRole-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.RoutingFormPersonRole" />
    <property name="inquiryDefinition" >
      <ref bean="RoutingFormPersonRole-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RoutingFormPersonRole-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Routing Form Person Role" />
    <property name="attributes" >
      <list>
        <ref bean="RoutingFormPersonRole-documentNumber" />
        <ref bean="RoutingFormPersonRole-personRoleCode" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RoutingFormPersonRole-documentNumber" parent="RoutingFormPersonRole-documentNumber-parentBean" />

  <bean id="RoutingFormPersonRole-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="14" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="documentNumber" />
    <property name="description" value="documentNumber description..." />
  </bean>
  <bean id="RoutingFormPersonRole-personRoleCode" parent="RoutingFormPersonRole-personRoleCode-parentBean" />

  <bean id="RoutingFormPersonRole-personRoleCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="personRoleCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Person Role Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="personRoleCode" />
    <property name="description" value="personRoleCode description..." />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="RoutingFormPersonRole-inquiryDefinition" parent="RoutingFormPersonRole-inquiryDefinition-parentBean" />

  <bean id="RoutingFormPersonRole-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Routing Form Person Role Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="documentNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="personRoleCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="RoutingFormPersonRole-lookupDefinition" parent="RoutingFormPersonRole-lookupDefinition-parentBean" />

  <bean id="RoutingFormPersonRole-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Routing Form Person Role Lookup" />
    <property name="instructions" value="Look up a Routing Form Person Role" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="personRoleCode" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="personRoleCode" />
      </list>
    </property>
  </bean>
</beans>
