<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="QuestionType" parent="QuestionType-parentBean" />

  <bean id="QuestionType-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.QuestionType" />
    <property name="inquiryDefinition" >
      <ref bean="QuestionType-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="QuestionType-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Question Type" />
    <property name="attributes" >
      <list>
        <ref bean="QuestionType-active" />
        <ref bean="QuestionType-questionTypeCode" />
        <ref bean="QuestionType-questionTypeDescription" />
        <ref bean="QuestionType-questionTypeSortNumber" />
        <ref bean="QuestionType-questionTypeNotificationValue" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="QuestionType-active" parent="QuestionType-active-parentBean" />

  <bean id="QuestionType-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
    <property name="name" value="active" />
  </bean>
  <bean id="QuestionType-questionTypeCode" parent="QuestionType-questionTypeCode-parentBean" />

  <bean id="QuestionType-questionTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="questionTypeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Question Type Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="questionTypeCode" />
    <property name="description" value="questionTypeCode description..." />
  </bean>
  <bean id="QuestionType-questionTypeDescription" parent="QuestionType-questionTypeDescription-parentBean" />

  <bean id="QuestionType-questionTypeDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="questionTypeDescription" />
    <property name="label" value="Question Text" />
    <property name="shortLabel" value="Text" />
    <property name="maxLength" value="200" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="32" />
    </property>
    <property name="summary" value="questionTypeDescription" />
    <property name="description" value="questionTypeDescription description..." />
  </bean>
  <bean id="QuestionType-questionTypeSortNumber" parent="QuestionType-questionTypeSortNumber-parentBean" />

  <bean id="QuestionType-questionTypeSortNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="questionTypeSortNumber" />
    <property name="label" value="Sort Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
    <property name="summary" value="sortNumber" />
    <property name="description" value="sortNumber description..." />
  </bean>
  <bean id="QuestionType-questionTypeNotificationValue" parent="QuestionType-questionTypeNotificationValue-parentBean" />

  <bean id="QuestionType-questionTypeNotificationValue-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="questionTypeNotificationValue" />
    <property name="label" value="Question Type Notification Value" />
    <property name="shortLabel" value="Not. Value" />
    <property name="maxLength" value="1" />
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="questionTypeNotificationValue" />
    <property name="description" value="Value on which to route to the notification group.  Valid options are Y (yes), N (no), A (all), X (never)." />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="QuestionType-inquiryDefinition" parent="QuestionType-inquiryDefinition-parentBean" />

  <bean id="QuestionType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Question Type Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="questionTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="questionTypeDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="questionTypeSortNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="questionTypeNotificationValue" />
              <bean parent="FieldDefinition"
                    p:attributeName="active" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="QuestionType-lookupDefinition" parent="QuestionType-lookupDefinition-parentBean" />

  <bean id="QuestionType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Question Type Lookup" />
    <property name="instructions" value="Look up a Question Type" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeSortNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeNotificationValue" />
        <bean parent="FieldDefinition"
              p:defaultValue="true"
              p:attributeName="active" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeSortNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="questionTypeNotificationValue" />
        <bean parent="FieldDefinition"
              p:attributeName="active" />
      </list>
    </property>
  </bean>
</beans>
