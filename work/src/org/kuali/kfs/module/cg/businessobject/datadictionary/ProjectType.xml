<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProjectType" parent="ProjectType-parentBean" />

  <bean id="ProjectType-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ProjectType" />
    <property name="inquiryDefinition" >
      <ref bean="ProjectType-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="ProjectType-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Project Type" />
    <property name="attributes" >
      <list>
        <ref bean="ProjectType-projectTypeCode" />
        <ref bean="ProjectType-projectTypeDescription" />
        <ref bean="ProjectType-sortNumber" />
        <ref bean="ProjectType-active" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="ProjectType-projectTypeCode" parent="ProjectType-projectTypeCode-parentBean" />

  <bean id="ProjectType-projectTypeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="projectTypeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Project Type Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="projectTypeCode" />
    <property name="description" value="projectTypeCode description..." />
  </bean>
  <bean id="ProjectType-projectTypeDescription" parent="ProjectType-projectTypeDescription-parentBean" />

  <bean id="ProjectType-projectTypeDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="projectTypeDescription" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Project Type Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="40" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="42" />
    </property>
    <property name="summary" value="projectTypeDescription" />
    <property name="description" value="projectTypeDescription description..." />
  </bean>
  <bean id="ProjectType-sortNumber" parent="ProjectType-sortNumber-parentBean" />

  <bean id="ProjectType-sortNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="sortNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Sort Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
    <property name="summary" value="sortNumber" />
    <property name="description" value="sortNumber description..." />
  </bean>
  <bean id="ProjectType-active" parent="ProjectType-active-parentBean" />

  <bean id="ProjectType-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
    <property name="name" value="active" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="ProjectType-inquiryDefinition" parent="ProjectType-inquiryDefinition-parentBean" />

  <bean id="ProjectType-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Project Type Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="projectTypeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="projectTypeDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="sortNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="active" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="ProjectType-lookupDefinition" parent="ProjectType-lookupDefinition-parentBean" />

  <bean id="ProjectType-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Project Type Lookup" />
    <property name="instructions" value="Look up a Project Type" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="projectTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="projectTypeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="sortNumber" />
        <bean parent="FieldDefinition"
              p:defaultValue="true"
              p:attributeName="active" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="projectTypeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="projectTypeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="sortNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="active" />
      </list>
    </property>
  </bean>
</beans>
