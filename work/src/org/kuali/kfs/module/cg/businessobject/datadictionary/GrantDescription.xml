<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.cg.bo.GrantDescription">
        <customAttributeEnabled>false</customAttributeEnabled>

        <inquiry>
            <title>Grant Description Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="grantDescription" />
                <field attributeName="grantDescriptionCode" />
                <field attributeName="grantDescriptionActiveCode" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Grant Description Lookup</title>

            <instructions>Look up a Grant Description</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="grantDescriptionCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="grantDescription" required="false" />
                <lookupField attributeName="grantDescriptionCode" required="false" />
                <lookupField attributeName="grantDescriptionActiveCode" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="grantDescription" />
                <field attributeName="grantDescriptionCode" />
                <field attributeName="grantDescriptionActiveCode" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="grantDescription" forceUppercase="true">
                <label>Grant Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>25</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="27" />
                </control>

                <summary>Grant Description</summary>
                <description>
					This is a text description of the type of grant or contract that is 
					being proposed or awarded.  Examples include Federal Grant, Federal 
					Contract, Non-Federal Grant, Non-Fed Fixed Price Contract.  The Grant 
					Description is based on the funding agencyâ€™s terms and conditions for 
					the particular project.  
				</description>
			</attribute>

            <attribute name="grantDescriptionCode" forceUppercase="true">
                <label>Grant Description Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>3</maxLength>
                <validationPattern><alphaNumeric /></validationPattern>

                <control>
                    <text size="5" />
                </control>

                <summary>Grant Description Code</summary>
                <description>
					This is a 1-3 letter code that abbreviates the Grant 
					Description.  Examples include OFP=Non-Fed Fixed Price 
					Contract, CR=Govt Cost Reimbursable, and N=Non Federal Grant.
				</description>
			</attribute>
            <attribute name="grantDescriptionActiveCode" forceUppercase="false">
                <label>Active Indicator</label>
                <shortLabel>Active Indicator</shortLabel>

                <maxLength>1</maxLength>

                <control>
                    <checkbox />
                </control>

                <summary>Active Indicator</summary>
                <description>
					This field identifies whether the Grant Description is active 
					in the system or not.  This allows historical records to 
					reference the inactive Grant Descriptions while restricting new 
					proposals and awards from referencing them.
				</description>
			</attribute>

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
    </businessObject>
</dictionaryEntry>
