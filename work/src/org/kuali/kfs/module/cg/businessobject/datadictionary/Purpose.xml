<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="Purpose" parent="Purpose-parentBean" />

  <bean id="Purpose-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.Purpose" />
    <property name="inquiryDefinition" >
      <ref bean="Purpose-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="Purpose-lookupDefinition" />
    </property>
    <property name="objectLabel" value="Purpose" />
    <property name="attributes" >
      <list>
        <ref bean="Purpose-purposeCode" />
        <ref bean="Purpose-purposeDescription" />
        <ref bean="Purpose-userSortNumber" />
        <ref bean="Purpose-active" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="Purpose-purposeCode" parent="Purpose-purposeCode-parentBean" />

  <bean id="Purpose-purposeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="purposeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Purpose Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    
    
  </bean>
  <bean id="Purpose-purposeDescription" parent="Purpose-purposeDescription-parentBean" />

  <bean id="Purpose-purposeDescription-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="purposeDescription" />
    <property name="label" value="Purpose Description" />
    <property name="shortLabel" value="Description" />
    <property name="maxLength" value="26" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="28" />
    </property>
    
    
  </bean>
  <bean id="Purpose-userSortNumber" parent="Purpose-userSortNumber-parentBean" />

  <bean id="Purpose-userSortNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="userSortNumber" />
    <property name="label" value="Sort Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="2" />
    <property name="validationPattern" >
      <bean parent="NumericValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="4" />
    </property>
    
    
  </bean>
  <bean id="Purpose-active" parent="Purpose-active-parentBean" />

  <bean id="Purpose-active-parentBean" abstract="true" parent="GenericAttributes-activeIndicator">
    <property name="name" value="active" />
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="Purpose-inquiryDefinition" parent="Purpose-inquiryDefinition-parentBean" />

  <bean id="Purpose-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Purpose Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="purposeCode" />
              <bean parent="FieldDefinition"
                    p:attributeName="purposeDescription" />
              <bean parent="FieldDefinition"
                    p:attributeName="userSortNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="active" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="Purpose-lookupDefinition" parent="Purpose-lookupDefinition-parentBean" />

  <bean id="Purpose-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Purpose Lookup" />
    <property name="instructions" value="Look up a Purpose" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="purposeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="purposeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="userSortNumber" />
        <bean parent="FieldDefinition"
              p:defaultValue="Y"
              p:attributeName="active" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="purposeCode" />
        <bean parent="FieldDefinition"
              p:attributeName="purposeDescription" />
        <bean parent="FieldDefinition"
              p:attributeName="userSortNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="active" />
      </list>
    </property>
  </bean>
</beans>
