<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../dataDictionary-1_0.dtd">
<dictionaryEntry>
    <businessObject businessObjectClass="org.kuali.module.kra.routingform.bo.Purpose">


        <inquiry>
            <title>Purpose Inquiry</title>

            <inquirySections><inquirySection title="Header Text"><inquiryFields>
                <field attributeName="purposeCode" />
                <field attributeName="purposeDescription" />
                <field attributeName="userSortNumber" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </inquiryFields></inquirySection></inquirySections>
        </inquiry>

        <lookup>
            <title>Purpose Lookup</title>

            <instructions>Look up a Purpose</instructions>

            <defaultSort sortAscending="true">
                <sortAttributes>
                    <sortAttribute attributeName="purposeCode" />
                </sortAttributes>
            </defaultSort>

            <lookupFields>
                <lookupField attributeName="purposeCode" required="false" />
                <lookupField attributeName="purposeDescription" required="false" />
                <lookupField attributeName="userSortNumber" required="false" />
                <lookupField attributeName="dataObjectMaintenanceCodeActiveIndicator" required="false" />
            </lookupFields>

            <resultFields>
                <field attributeName="purposeCode" />
                <field attributeName="purposeDescription" />
                <field attributeName="userSortNumber" />
                <field attributeName="dataObjectMaintenanceCodeActiveIndicator" />
            </resultFields>
        </lookup>

        <attributes>

            <attribute name="purposeCode" forceUppercase="true">
                <label>Purpose Code</label>
                <shortLabel>Code</shortLabel>

                <maxLength>1</maxLength>
                <validationPattern><anyCharacter /></validationPattern>

                <control>
                    <text size="3" />
                </control>

                <summary>purposeCode</summary>
                <description>purposeCode description...</description>
			</attribute>

            <attribute name="purposeDescription" forceUppercase="false">
                <label>Purpose Description</label>
                <shortLabel>Description</shortLabel>

                <maxLength>26</maxLength>
                <validationPattern><anyCharacter allowWhitespace="true" /></validationPattern>

                <control>
                    <text size="28" />
                </control>

                <summary>purposeDescription</summary>
                <description>purposeDescription description...</description>
			</attribute>

            <attribute name="userSortNumber" forceUppercase="true">
                <label>Sort Number</label>
                <shortLabel>Number</shortLabel>

                <maxLength>2</maxLength>
                <validationPattern><numeric /></validationPattern>

                <control>
                    <text size="4" />
                </control>

                <summary>userSortNumber</summary>
                <description>userSortNumber description...</description>
			</attribute>

            <attributeReference name="dataObjectMaintenanceCodeActiveIndicator" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="activeIndicator" />

            <attributeReference name="versionNumber" sourceClassName="org.kuali.core.bo.AttributeReferenceDummy" sourceAttributeName="versionNumber" />

        </attributes>
        <objectLabel>Purpose</objectLabel>
    </businessObject>
</dictionaryEntry>
