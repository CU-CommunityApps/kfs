<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RoutingFormPurpose" parent="RoutingFormPurpose-parentBean" />

  <bean id="RoutingFormPurpose-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="org.kuali.module.kra.routingform.bo.RoutingFormPurpose" />
    <property name="inquiryDefinition" >
      <ref bean="RoutingFormPurpose-inquiryDefinition" />
    </property>
    <property name="lookupDefinition" >
      <ref bean="RoutingFormPurpose-lookupDefinition" />
    </property>
    <property name="attributes" >
      <list>
        <ref bean="RoutingFormPurpose-documentNumber" />
        <ref bean="RoutingFormPurpose-purposeCode" />
        <ref bean="RoutingFormPurpose-versionNumber" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RoutingFormPurpose-documentNumber" parent="RoutingFormPurpose-documentNumber-parentBean" />

  <bean id="RoutingFormPurpose-documentNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="documentNumber" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Document Number" />
    <property name="shortLabel" value="Number" />
    <property name="maxLength" value="14" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="16" />
    </property>
    <property name="summary" value="documentNumber" />
    <property name="description" value="documentNumber description..." />
  </bean>
  <bean id="RoutingFormPurpose-purposeCode" parent="RoutingFormPurpose-purposeCode-parentBean" />

  <bean id="RoutingFormPurpose-purposeCode-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="purposeCode" />
    <property name="forceUppercase" value="true" />
    <property name="label" value="Purpose Code" />
    <property name="shortLabel" value="Code" />
    <property name="maxLength" value="1" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="TextControlDefinition"
            p:size="3" />
    </property>
    <property name="summary" value="purposeCode" />
    <property name="description" value="purposeCode description..." />
  </bean>
  <bean id="RoutingFormPurpose-versionNumber" parent="RoutingFormPurpose-versionNumber-parentBean" />

  <bean id="RoutingFormPurpose-versionNumber-parentBean" abstract="true" parent="GenericAttributes-versionNumber">
  </bean>

<!-- Business Object Inquiry Definition -->


  <bean id="RoutingFormPurpose-inquiryDefinition" parent="RoutingFormPurpose-inquiryDefinition-parentBean" />

  <bean id="RoutingFormPurpose-inquiryDefinition-parentBean" abstract="true" parent="InquiryDefinition">
    <property name="title" value="Routing Form Purpose Inquiry" />
    <property name="inquirySections" >
      <list>
        <bean parent="InquirySectionDefinition">
          <property name="title" value="Header Text" />
          <property name="numberOfColumns" value="1" />
          <property name="inquiryFields" >
            <list>
              <bean parent="FieldDefinition"
                    p:attributeName="documentNumber" />
              <bean parent="FieldDefinition"
                    p:attributeName="purposeCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Business Object Lookup Definition -->


  <bean id="RoutingFormPurpose-lookupDefinition" parent="RoutingFormPurpose-lookupDefinition-parentBean" />

  <bean id="RoutingFormPurpose-lookupDefinition-parentBean" abstract="true" parent="LookupDefinition">
    <property name="title" value="Routing Form Purpose Lookup" />
    <property name="instructions" value="Look up a Routing Form Purpose" />
    <property name="defaultSort" >
      <bean parent="SortDefinition">
      </bean>
    </property>
    <property name="lookupFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="purposeCode" />
      </list>
    </property>
    <property name="resultFields" >
      <list>
        <bean parent="FieldDefinition"
              p:attributeName="documentNumber" />
        <bean parent="FieldDefinition"
              p:attributeName="purposeCode" />
      </list>
    </property>
  </bean>
</beans>
