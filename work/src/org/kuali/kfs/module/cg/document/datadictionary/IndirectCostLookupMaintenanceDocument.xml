<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="IndirectCostLookupMaintenanceDocument" parent="IndirectCostLookupMaintenanceDocument-parentBean" />

  <bean id="IndirectCostLookupMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.IndirectCostLookup" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="IndirectCostLookupMaintenanceDocument-EditIndirectCostLookup" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="budgetPurpose"
              p:attributeToHighlightOnFail="budgetPurposeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>budgetOnCampusIndicator</value>
        <value>budgetPurposeCode</value>
      </list>
    </property>
    <property name="label" value="Indirect Cost Lookup Maintenance Document" />
    <property name="shortLabel" value="IndirectCostLookupMainDoc" />
    <property name="summary" value="Indirect Cost Lookup maintenance document" />
    <property name="description" value="Document used to create or update Indirect Cost Lookup objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.IndirectCostLookup" p:parameterName="INDIRECT_COST_LOOKUP" />
    </property>
    <property name="documentTypeName" value="IndirectCostLookupMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.cg.document.validation.impl.IndirectCostLookupRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="IDCL" />

    <property name="workflowAttributes">
    	<ref bean="IndirectCostLookupMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="IndirectCostLookupMaintenanceDocument-EditIndirectCostLookup" parent="IndirectCostLookupMaintenanceDocument-EditIndirectCostLookup-parentBean" />

  <bean id="IndirectCostLookupMaintenanceDocument-EditIndirectCostLookup-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Indirect Cost Lookup" />
    <property name="title" value="Edit Indirect Cost Lookup" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetOnCampusIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetPurposeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="budgetIndirectCostRate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  
    <!-- workflow attributes -->
  <bean id="IndirectCostLookupMaintenanceDocument-workflowAttributes" parent="IndirectCostLookupMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="IndirectCostLookupMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
