<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PersonRoleMaintenanceDocument" parent="PersonRoleMaintenanceDocument-parentBean" />

  <bean id="PersonRoleMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.PersonRole" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PersonRoleMaintenanceDocument-EditPersonRole" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>personRoleCode</value>
      </list>
    </property>
    <property name="label" value="Person Role" />
    <property name="shortLabel" value="Person Role" />
    <property name="summary" value="Person Role maintenance document" />
    <property name="description" value="Document used to create or update Person Role objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.PersonRole" p:parameterName="PERSON_ROLE" />
    </property>
    <property name="documentTypeName" value="PersonRoleMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PRSN" />
    <property name="workflowProperties" >
      <ref bean="PersonRoleMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PersonRoleMaintenanceDocument-EditPersonRole" parent="PersonRoleMaintenanceDocument-EditPersonRole-parentBean" />

  <bean id="PersonRoleMaintenanceDocument-EditPersonRole-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Person Role" />
    <property name="title" value="Edit Person Role" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="personRoleCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personRoleDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="personRoleSortNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PersonRoleMaintenanceDocument-workflowProperties" parent="PersonRoleMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PersonRoleMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
