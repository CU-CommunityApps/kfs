<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProposalMaintenanceDocument" parent="ProposalMaintenanceDocument-parentBean" />

  <bean id="ProposalMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.Proposal" />
    <property name="maintainableClass" value="org.kuali.kfs.module.cg.document.ProposalMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ProposalMaintenanceDocument-ProposalMaintenance" />
        <ref bean="ProposalMaintenanceDocument-Organizations" />
        <ref bean="ProposalMaintenanceDocument-ProjectDirectors" />
        <ref bean="ProposalMaintenanceDocument-Subcontractors" />
        <ref bean="ProposalMaintenanceDocument-ResearchRisks" />
      </list>
    </property>
    <property name="defaultExistenceChecks" >
      <list>
        <bean parent="ReferenceDefinition"
              p:attributeName="proposalStatus"
              p:activeIndicatorAttributeName="rowActiveIndicator"
              p:attributeToHighlightOnFail="proposalStatusCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="agency"
              p:activeIndicatorAttributeName="historicalIndicator"
              p:attributeToHighlightOnFail="agencyNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="proposalAwardType"
              p:activeIndicatorAttributeName="rowActiveIndicator"
              p:attributeToHighlightOnFail="proposalAwardTypeCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="proposalPurpose"
              p:activeIndicatorAttributeName="rowActiveIndicator"
              p:attributeToHighlightOnFail="proposalPurposeCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="federalPassThroughAgency"
              p:activeIndicatorAttributeName="historicalIndicator"
              p:attributeToHighlightOnFail="federalPassThroughAgencyNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="cfda"
              p:activeIndicatorAttributeName="cfdaStatusCode"
              p:attributeToHighlightOnFail="cfdaNumber" />
        <bean parent="ReferenceDefinition"
              p:attributeName="organization"
              p:collection="proposalOrganizations"
              p:activeIndicatorAttributeName="active"
              p:attributeToHighlightOnFail="organizationCode" />
        <bean parent="ReferenceDefinition"
              p:attributeName="subcontractor"
              p:collection="proposalSubcontractors"
              p:activeIndicatorAttributeName="active"
              p:attributeToHighlightOnFail="subcontractorNumber" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>proposalNumber</value>
      </list>
    </property>
    <property name="label" value="Proposal" />
    <property name="shortLabel" value="Proposal" />
    <property name="summary" value="Proposal maintenance document" />
    <property name="description" value="Document used to create or update Proposal objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.Proposal" p:parameterName="PROPOSAL" />
    </property>
    <property name="documentTypeName" value="ProposalMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.cg.document.validation.impl.ProposalRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PRPL" />
    <property name="displayTopicFieldInNotes" value="true" />
    <property name="webScriptFiles" >
      <list>
        <value>../dwr/interface/AgencyService.js</value>
        <value>../dwr/interface/OrganizationService.js</value>
        <value>../dwr/interface/ProjectDirectorService.js</value>
        <value>../dwr/interface/SubcontractorService.js</value>
        <value>../scripts/cg/proposalDocument.js</value>
      </list>
    </property>
    <property name="workflowProperties" >
      <ref bean="ProposalMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ProposalMaintenanceDocument-ProposalMaintenance" parent="ProposalMaintenanceDocument-ProposalMaintenance-parentBean" />

  <bean id="ProposalMaintenanceDocument-ProposalMaintenance-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Proposal Maintenance" />
    <property name="title" value="Proposal Maintenance" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalNumber"
              p:readOnly="true"
              p:required="true"
              p:defaultValueFinderClass="org.kuali.kfs.module.cg.businessobject.defaultvalue.NextProposalNumberFinder" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalStatusCode"
              p:defaultValue="P"
              p:required="true"
              p:webUILeaveFieldFunction="onblur_proposalStatusCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="agencyNumber"
              p:required="true"
              p:webUILeaveFieldFunction="onblur_agencyNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="agency.fullName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalProjectTitle"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalBeginningDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalEndingDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalDirectCostAmount"
              p:required="true"
              p:webUILeaveFieldFunction="onblur_proposalDirectCostAmount" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalIndirectCostAmount"
              p:required="true"
              p:webUILeaveFieldFunction="onblur_proposalIndirectCostAmount" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalTotalAmount"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalSubmissionDate"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalClosingDate"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalAwardTypeCode"
              p:defaultValue="N"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalPurposeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="grantNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalFederalPassThroughIndicator" />
        <bean parent="MaintainableFieldDefinition"
              p:name="federalPassThroughAgencyNumber"
              p:webUILeaveFieldFunction="onblur_federalPassThroughAgencyNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="federalPassThroughAgency.fullName"
              p:readOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="cfdaNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalFellowName" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalDueDate" />
        <bean parent="MaintainableFieldDefinition"
              p:name="proposalRejectedDate" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>
  <bean id="ProposalMaintenanceDocument-Organizations" parent="ProposalMaintenanceDocument-Organizations-parentBean" />

  <bean id="ProposalMaintenanceDocument-Organizations-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Organizations" />
    <property name="title" value="Organizations" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="proposalOrganizations" />
          <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ProposalOrganization" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="organizationCode" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalPrimaryOrganizationIndicator" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="chartOfAccountsCode"
                    p:required="true"
                    p:webUILeaveFieldFunction="organizationNameLookup" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="organizationCode"
                    p:required="true"
                    p:webUILeaveFieldFunction="organizationNameLookup" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="organization.organizationName"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalPrimaryOrganizationIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
          <property name="attributeToHighlightOnDuplicateKey" value="organizationCode" />
        </bean>
      </list>
    </property>
  </bean>
  <bean id="ProposalMaintenanceDocument-ProjectDirectors" parent="ProposalMaintenanceDocument-ProjectDirectors-parentBean" />

  <bean id="ProposalMaintenanceDocument-ProjectDirectors-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Project Directors" />
    <property name="title" value="Project Directors" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="proposalProjectDirectors" />
          <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ProposalProjectDirector" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="projectDirector.personName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalPrimaryProjectDirectorIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalProjectDirectorProjectTitle" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="projectDirector.personUserIdentifier"
                    p:required="true"
                    p:webUILeaveFieldFunction="proposalDirectorIDLookup" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="projectDirector.personName"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="personUniversalIdentifier"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalPrimaryProjectDirectorIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalProjectDirectorProjectTitle" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="ProposalMaintenanceDocument-Subcontractors" parent="ProposalMaintenanceDocument-Subcontractors-parentBean" />

  <bean id="ProposalMaintenanceDocument-Subcontractors-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Subcontractors" />
    <property name="title" value="Subcontractors" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="proposalSubcontractors" />
          <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ProposalSubcontractor" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="subcontractor.subcontractorName" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalSubcontractorAmount" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="subcontractorNumber"
                    p:webUILeaveFieldFunction="onblur_subcontractorNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="subcontractor.subcontractorName"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalSubcontractorDescription" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="proposalSubcontractorAmount"
                    p:defaultValue="0.00" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="ProposalMaintenanceDocument-ResearchRisks" parent="ProposalMaintenanceDocument-ResearchRisks-parentBean" />

  <bean id="ProposalMaintenanceDocument-ResearchRisks-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Research Risks" />
    <property name="title" value="Research Risks" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableCollectionDefinition">
          <property name="name" value="proposalResearchRisks" />
          <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ProposalResearchRisk" />
          <property name="includeAddLine" value="false" />
          <property name="summaryFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="researchRiskType.researchRiskTypeDescription" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="active" />
            </list>
          </property>
          <property name="maintainableFields" >
            <list>
              <bean parent="MaintainableFieldDefinition"
                    p:name="researchRiskType.researchRiskTypeDescription"
                    p:readOnly="true" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="researchRiskTypeIndicator" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="newCollectionRecord" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="versionNumber" />
              <bean parent="MaintainableFieldDefinition"
                    p:name="researchRiskTypeCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ProposalMaintenanceDocument-workflowProperties" parent="ProposalMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ProposalMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups" >
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties" >
            <list>
              <bean parent="WorkflowProperty"
                    p:path="oldMaintainableObject.businessObject" />
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject" />
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.Agency" />
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.Award" />
              <bean parent="WorkflowProperty"
                    p:path="newMaintainableObject.businessObject.ProposalResearchRisk.researchRiskTypeCode" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
