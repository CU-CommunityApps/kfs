<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ResearchTypeCodeMaintenanceDocument" parent="ResearchTypeCodeMaintenanceDocument-parentBean" />

  <bean id="ResearchTypeCodeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.ResearchTypeCode" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="ResearchTypeCodeMaintenanceDocument-EditResearchTypeCode" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>researchTypeCode</value>
      </list>
    </property>
    <property name="label" value="Research Type" />
    <property name="shortLabel" value="Research Type" />
    <property name="summary" value="Research Type Code maintenance document" />
    <property name="description" value="Document used to create or update Research Type Code objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.ResearchTypeCode" p:parameterName="RESEARCH_TYPE_CODE" />
    </property>
    <property name="documentTypeName" value="ResearchTypeCodeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="RTCM" />
    <property name="workflowProperties" >
      <ref bean="ResearchTypeCodeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="ResearchTypeCodeMaintenanceDocument-EditResearchTypeCode" parent="ResearchTypeCodeMaintenanceDocument-EditResearchTypeCode-parentBean" />

  <bean id="ResearchTypeCodeMaintenanceDocument-EditResearchTypeCode-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Research Type Code" />
    <property name="title" value="Edit Research Type Code" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="researchTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="researchTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="ResearchTypeCodeMaintenanceDocument-workflowProperties" parent="ResearchTypeCodeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="ResearchTypeCodeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
