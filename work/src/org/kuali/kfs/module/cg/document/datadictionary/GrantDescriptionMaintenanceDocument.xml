<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="GrantDescriptionMaintenanceDocument" parent="GrantDescriptionMaintenanceDocument-parentBean" />

  <bean id="GrantDescriptionMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.module.cg.bo.GrantDescription" />
    <property name="maintainableClass" value="org.kuali.core.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="GrantDescriptionMaintenanceDocument-EditGrantDescription" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>grantDescriptionCode</value>
      </list>
    </property>
    <property name="label" value="Grant Description" />
    <property name="shortLabel" value="Grant Description" />
    <property name="summary" value="Grant Description Maintenance Document" />
    <property name="description" value="Document used to create or update Grant Description objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition"
            p:parameterNamespace="KFS-CG"
            p:parameterName="GRANT_DESCRIPTION"
            p:parameterDetailType="GrantDescription" />
    </property>
    <property name="documentTypeName" value="GrantDescriptionMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="GDES" />
    <property name="workflowProperties" >
      <ref bean="GrantDescriptionMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="GrantDescriptionMaintenanceDocument-EditGrantDescription" parent="GrantDescriptionMaintenanceDocument-EditGrantDescription-parentBean" />

  <bean id="GrantDescriptionMaintenanceDocument-EditGrantDescription-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Grant Description" />
    <property name="title" value="Edit Grant Description" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="grantDescriptionCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="grantDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="grantDescriptionActiveCode"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="GrantDescriptionMaintenanceDocument-workflowProperties" parent="GrantDescriptionMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="GrantDescriptionMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
