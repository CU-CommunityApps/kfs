<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="AppointmentTypeMaintenanceDocument" parent="AppointmentTypeMaintenanceDocument-parentBean" />

  <bean id="AppointmentTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.AppointmentType" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="AppointmentTypeMaintenanceDocument-EditAppointmentType" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>appointmentTypeCode</value>
      </list>
    </property>
    <property name="label" value="Appointment Type" />
    <property name="shortLabel" value="Appointment Type" />
    <property name="summary" value="Appointment Type maintenance document" />
    <property name="description" value="Document used to create or update AppointmentType objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.AppointmentType" p:parameterName="APPOINTMENT_TYPE" />
    </property>
    <property name="documentTypeName" value="AppointmentTypeMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.kfs.module.cg.document.validation.impl.AppointmentTypeMaintenanceDocumentRule" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="APPT" />

    <property name="workflowAttributes">
    	<ref bean="AppointmentTypeMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="AppointmentTypeMaintenanceDocument-EditAppointmentType" parent="AppointmentTypeMaintenanceDocument-EditAppointmentType-parentBean" />

  <bean id="AppointmentTypeMaintenanceDocument-EditAppointmentType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Appointment Type" />
    <property name="title" value="Edit Appointment Type" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="appointmentTypeAbbrieviation"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="fringeRateAmount"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="costShareFringeRateAmount"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="relatedAppointmentTypeCode" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  
    <!-- workflow attributes -->
  <bean id="AppointmentTypeMaintenanceDocument-workflowAttributes" parent="AppointmentTypeMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="AppointmentTypeMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
