<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:dd="http://rice.kuali.org/dd"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://rice.kuali.org/dd
        http://rice.kuali.org/dd/dd.xsd">

  <bean id="KeywordMaintenanceDocument" parent="KeywordMaintenanceDocument-parentBean" />

  <bean id="KeywordMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.Keyword" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="KeywordMaintenanceDocument-EditKeyword" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>routingFormKeywordDescription</value>
      </list>
    </property>
    <property name="label" value="Keyword" />
    <property name="shortLabel" value="Keyword" />
    <property name="summary" value="Keyword maintenance document" />
    <property name="description" value="Document used to create or update Keyword objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.Keyword" p:parameterName="KEYWORD" />
    </property>
    <property name="documentTypeName" value="KEYW" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="workflowAttributes">
    	<ref bean="KeywordMaintenanceDocument-workflowAttributes" />
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="KeywordMaintenanceDocument-EditKeyword" parent="KeywordMaintenanceDocument-EditKeyword-parentBean" />

  <bean id="KeywordMaintenanceDocument-EditKeyword-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Keyword" />
    <property name="title" value="Edit Keyword" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="routingFormKeywordDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
      </list>
    </property>
  </bean>
  
    <!-- workflow attributes -->
  <bean id="KeywordMaintenanceDocument-workflowAttributes" parent="KeywordMaintenanceDocument-workflowAttributes-parentBean" />
  
  <bean id="KeywordMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.kns.datadictionary.WorkflowAttributes" abstract="true" />
</beans>
