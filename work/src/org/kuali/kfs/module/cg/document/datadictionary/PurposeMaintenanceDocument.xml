<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="PurposeMaintenanceDocument" parent="PurposeMaintenanceDocument-parentBean" />

  <bean id="PurposeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.kfs.module.cg.businessobject.Purpose" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="PurposeMaintenanceDocument-EditPurpose" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>purposeCode</value>
      </list>
    </property>
    <property name="label" value="Purpose" />
    <property name="shortLabel" value="Purpose" />
    <property name="summary" value="Purpose maintenance document" />
    <property name="description" value="Document used to create or update Purpose objects" />
    <property name="helpDefinition" >
      <bean parent="HelpDefinition" p:parameterClass="org.kuali.kfs.module.cg.businessobject.Purpose" p:parameterName="PURPOSE" />
    </property>
    <property name="documentTypeName" value="PurposeMaintenanceDocument" />
    <property name="documentAuthorizerClass" value="org.kuali.kfs.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase" />
    <property name="documentTypeCode" value="PRPS" />
    <property name="workflowProperties" >
      <ref bean="PurposeMaintenanceDocument-workflowProperties" />
    </property>
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="action" value="initiate" />
          <property name="authorizedGroups" >
            <set>
              <value>SY_MAINTENANCE_USERS</value>
            </set>
          </property>
        </bean>
      </list>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->


  <bean id="PurposeMaintenanceDocument-EditPurpose" parent="PurposeMaintenanceDocument-EditPurpose-parentBean" />

  <bean id="PurposeMaintenanceDocument-EditPurpose-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Purpose" />
    <property name="title" value="Edit Purpose" />
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:name="purposeCode"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="purposeDescription"
              p:required="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="userSortNumber" />
        <bean parent="MaintainableFieldDefinition"
              p:name="active"
              p:defaultValue="true" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
  </bean>

<!-- Exported Workflow Properties -->


  <bean id="PurposeMaintenanceDocument-workflowProperties" parent="PurposeMaintenanceDocument-workflowProperties-parentBean" />

  <bean id="PurposeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
  </bean>
</beans>
