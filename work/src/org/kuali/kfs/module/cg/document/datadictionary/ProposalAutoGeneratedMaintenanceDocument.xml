<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cg.bo.Proposal</businessObjectClass>
        <maintainableClass>org.kuali.module.cg.maintenance.ProposalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.cg.rules.ProposalRule</businessRulesClass>
        <!--preRulesCheckClass>org.kuali.module.chart.rules.AccountPreRules</preRulesCheckClass-->
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>KualiProposalAutoGeneratedMaintenanceDocument</documentTypeName>
        <documentTypeCode>PRPL</documentTypeCode>

		<webScriptFile>../cg/proposalDocument.js</webScriptFile>

        <label>Proposal Maintenance Document</label>
        <shortLabel>PrpslMaintDoc</shortLabel>

        <summary>Proposal maintenance document</summary>
        <description>Document used to create or update Proposal objects</description>
		<!--help securityGroupName="ChartMaintenanceEDoc" parameterName="CHART_HELP_ACCOUNT" /-->

        <lockingKeys>
            <field attributeName="proposalNumber" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="proposalStatus" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalStatusCode" />
            <reference attributeName="agency" activeIndicatorAttributeName="historicalIndicator" activeIndicatorReversed="true" attributeToHighlightOnFail="agencyNumber" />
            <reference attributeName="proposalAwardType" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalAwardTypeCode" />
            <reference attributeName="proposalPurpose" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalPurposeCode" />
            <reference attributeName="federalPassThroughAgency" activeIndicatorAttributeName="historicalIndicator" activeIndicatorReversed="true" attributeToHighlightOnFail="federalPassThroughAgencyNumber" />
            <reference attributeName="cfda" activeIndicatorAttributeName="cfdaStatusCode" attributeToHighlightOnFail="cfdaNumber" />
            <!-- when collections support: reference attributeName="proposalProjectDirectors.projectDirector.universalUser" attributeToHighlightOnFail="projectDirector.universalUser.personUserIdentifier" / -->
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Proposal Maintenance">
                <maintainableItems>
                    <maintainableField name="proposalNumber" required="true" />
                </maintainableItems>
            </maintainableSection>

        </maintainableSections>
               
        <allowsNoteDelete>false</allowsNoteDelete>
        <displayTopicFieldInNotes>true</displayTopicFieldInNotes>
    </maintenanceDocument>
</dictionaryEntry>
