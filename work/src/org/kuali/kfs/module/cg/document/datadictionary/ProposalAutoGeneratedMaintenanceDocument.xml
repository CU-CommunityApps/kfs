<!DOCTYPE dictionaryEntry PUBLIC
    "-//Kuali Project//DTD Data Dictionary 1.0//EN"
    "../../../../core/datadictionary/dataDictionary-1_0.dtd">

<dictionaryEntry>
    <maintenanceDocument>
        <businessObjectClass>org.kuali.module.cg.bo.ProposalAutoGenerated</businessObjectClass>
        <maintainableClass>org.kuali.module.cg.maintenance.ProposalMaintainableImpl</maintainableClass>
        <businessRulesClass>org.kuali.module.cg.rules.ProposalRule</businessRulesClass>
        <!--preRulesCheckClass>org.kuali.module.chart.rules.AccountPreRules</preRulesCheckClass-->
        <documentAuthorizerClass>org.kuali.core.document.authorization.MaintenanceDocumentAuthorizerBase</documentAuthorizerClass>
        <authorizations>
            <authorization action="initiate">
                <workgroups>
                    <workgroup>kualiUniversalGroup</workgroup>
                </workgroups>
            </authorization>
        </authorizations>

        <documentTypeName>ProposalAutoGeneratedMaintenanceDocument</documentTypeName>
        <documentTypeCode>PRPL</documentTypeCode>

		<webScriptFile>../cg/proposalDocument.js</webScriptFile>

        <label>Proposal Maintenance Document</label>
        <shortLabel>PrpslMaintDoc</shortLabel>

        <summary>Proposal maintenance document</summary>
        <description>Document used to create or update Proposal objects</description>

        <lockingKeys>
            <field attributeName="proposalNumber" />
        </lockingKeys>

        <defaultExistenceChecks>
            <reference attributeName="proposalStatus" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalStatusCode" />
            <reference attributeName="agency" activeIndicatorAttributeName="historicalIndicator" attributeToHighlightOnFail="agencyNumber" />
            <reference attributeName="proposalAwardType" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalAwardTypeCode" />
            <reference attributeName="proposalPurpose" activeIndicatorAttributeName="rowActiveIndicator" attributeToHighlightOnFail="proposalPurposeCode" />
            <reference attributeName="federalPassThroughAgency" activeIndicatorAttributeName="historicalIndicator" attributeToHighlightOnFail="federalPassThroughAgencyNumber" />
            <reference attributeName="cfda" activeIndicatorAttributeName="cfdaStatusCode" attributeToHighlightOnFail="cfdaNumber" />
            <reference collection="proposalOrganizations" attributeName="organization" activeIndicatorAttributeName="organizationActiveIndicator" attributeToHighlightOnFail="organizationCode" />
            <reference collection="proposalSubcontractors" attributeName="subcontractor" activeIndicatorAttributeName="active" attributeToHighlightOnFail="subcontractorNumber" />
        </defaultExistenceChecks>

        <maintainableSections>
            <maintainableSection title="Proposal Maintenance">
                <maintainableItems>
                    <maintainableField name="proposalNumber" required="true" />
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Organizations">
                <maintainableItems>
                    <maintainableCollection name="proposalOrganizations" businessObjectClass="org.kuali.module.cg.bo.ProposalOrganization" attributeToHighlightOnDuplicateKey="organizationCode">
                        <maintainableField name="chartOfAccountsCode" required="true" />
                        <maintainableField name="organizationCode" required="true" />
                        <maintainableField name="organization.organizationName" readOnly="true" />
                        <maintainableField name="proposalPrimaryOrganizationIndicator" required="false" />
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>

            <maintainableSection title="Project Directors">
                <maintainableItems>
                    <maintainableCollection name="proposalProjectDirectors" businessObjectClass="org.kuali.module.cg.bo.ProposalProjectDirector">
                        <maintainableField name="projectDirector.personUserIdentifier" required="true" />
                        <maintainableField name="projectDirector.personName" readOnly="true" />
                        <maintainableField name="personUniversalIdentifier" readOnly="true" />
                        <maintainableField name="proposalPrimaryProjectDirectorIndicator" required="false" />
                        <maintainableField name="proposalProjectDirectorProjectTitle" required="false" />
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>
			
            <maintainableSection title="Subcontractors">
                <maintainableItems>
                    <maintainableCollection name="proposalSubcontractors" businessObjectClass="org.kuali.module.cg.bo.ProposalSubcontractor" >
                        <maintainableField name="subcontractorNumber" required="false" />
                        <maintainableField name="subcontractor.subcontractorName" readOnly="true" />
                        <maintainableField name="proposalSubcontractorDescription" />
                        <maintainableField name="proposalSubcontractorAmount" />
                        <maintainableField name="newCollectionRecord" />
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>
            
            <maintainableSection title="Research Risks">
                <maintainableItems>
                    <maintainableCollection name="proposalResearchRisks" businessObjectClass="org.kuali.module.cg.bo.ProposalResearchRisk" includeAddLine="false">
                        <maintainableField name="researchRiskType.researchRiskTypeDescription" readOnly="true" />
                        <maintainableField name="researchRiskTypeIndicator" required="false" />
                        <maintainableField name="newCollectionRecord" />
                        <maintainableField name="versionNumber" />
                        <maintainableField name="researchRiskTypeCode" />
                    </maintainableCollection>
                </maintainableItems>
            </maintainableSection>
        </maintainableSections>               
        <allowsNoteDelete>false</allowsNoteDelete>
        <displayTopicFieldInNotes>true</displayTopicFieldInNotes>
    </maintenanceDocument>
</dictionaryEntry>
