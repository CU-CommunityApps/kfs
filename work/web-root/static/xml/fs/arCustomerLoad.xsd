<xsd:schema elementFormDefault="qualified"
    targetNamespace="http://www.kuali.org/modules/ar/customerLoad"
    xmlns:kfs="http://www.kuali.org/kfsTypes"
    xmlns="http://www.kuali.org/modules/ar/customerLoad" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  
    <xsd:import namespace="http://www.kuali.org/kfsTypes" schemaLocation="../../../../../org/kuali/kfs/sys/batch/kfsTypes.xsd" />

    <!-- simple data types -->
    <xsd:simpleType name="oneToSevenNumberType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="[0-9]{7}"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:simpleType name="emailTypeMaxSixty">
        <xsd:restriction base="xsd:string">
            <xsd:minLength value="1"/>
            <xsd:maxLength value="60"/>
	    <!-- FIXME: add regex for email address -->
        </xsd:restriction>
    </xsd:simpleType>
    
	<xsd:element name="customerNumber"                type="kfs:oneToNineCharType" />
	<xsd:element name="customerName"                  type="kfs:oneToSixtyCharType" />
	<xsd:element name="customerParentCompanyNumber"   type="kfs:oneToNineCharType" />
	<xsd:element name="customerTypeCode"              type="kfs:oneToTwoCharType" />
	<xsd:element name="customerAddressChangeDate"     type="xsd:date" />
	<xsd:element name="customerRecordAddDate"         type="xsd:date" />
	<xsd:element name="customerLastActivityDate"      type="xsd:date" />
	<xsd:element name="customerTaxTypeCode"           type="kfs:oneToFourCharType" />
	<xsd:element name="customerTaxNbr"                type="kfs:oneToNineCharType" />
	<xsd:element name="customerActiveIndicator"       type="kfs:indicatorType" />
	<xsd:element name="customerPhoneNumber"           type="kfs:oneToTwentyCharType" />
	<xsd:element name="customer800PhoneNumber"        type="kfs:oneToTwentyCharType" />
	<xsd:element name="customerContactName"           type="kfs:oneToFortyCharType" />
	<xsd:element name="customerContactPhoneNumber"    type="kfs:oneToTwentyCharType" />
	<xsd:element name="customerFaxNumber"             type="kfs:oneToTwentyCharType" />
	<xsd:element name="customerBirthDate"             type="xsd:date" />
	<xsd:element name="customerTaxExemptIndicator"    type="kfs:indicatorType" />
	<xsd:element name="customerCreditLimitAmount"     type="kfs:amountType" />
	<xsd:element name="customerCreditApprovedByName"  type="kfs:oneToFortyCharType" />
	<xsd:element name="customerEmailAddress"          type="emailTypeMaxSixty" />
	<xsd:element name="customerAddressIdentifier"     type="oneToSevenNumberType" />
	<xsd:element name="customerAddressName"           type="kfs:oneToFortyCharType" />
	<xsd:element name="customerLine1StreetAddress"    type="kfs:oneToThirtyCharType" />
	<xsd:element name="customerLine2StreetAddress"    type="kfs:oneToThirtyCharType" />
	<xsd:element name="customerCityName"              type="kfs:oneToTwentyFiveCharType" />
	<xsd:element name="customerStateCode"             type="kfs:twoAlphaType" />
	<xsd:element name="customerZipCode"               type="kfs:oneToTwentyFiveCharType" />
	<xsd:element name="customerCountryCode"           type="kfs:twoAlphaType" />
	<xsd:element name="customerAddressInternationalProvinceName" type="kfs:oneToFortyFiveCharType" />
	<xsd:element name="customerInternationalMailCode" type="kfs:oneToTwentyCharType" />
	<xsd:element name="customerEmailAddress"          type="emailTypeMaxSixty" />
	<xsd:element name="customerAddressTypeCode"       type="kfs:oneToTwoCharType" />
	<xsd:element name="customerAddressEndDate"        type="xsd:date" />

    <!-- definition of complex type elements -->
    <xsd:element name="customers">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element maxOccurs="unbounded" minOccurs="1" ref="customer"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="customer">
        <xsd:complexType>
            <xsd:sequence>
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerNumber" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerName" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerParentCompanyNumber" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerTypeCode" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerLastActivityDate" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxTypeCode" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxNbr" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerActiveIndicator" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerPhoneNumber" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customer800PhoneNumber" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerContactName" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerContactPhoneNumber" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerFaxNumber" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerBirthDate" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerTaxExemptIndicator" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerCreditLimitAmount" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerCreditApprovedByName" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerEmailAddress" />
               <xsd:element maxOccurs="unbounded" minOccurs="1" ref="addresses" />
             </xsd:sequence>  
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="addresses">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element maxOccurs="unbounded" minOccurs="1" ref="address"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:element name="address">
        <xsd:complexType>
            <xsd:sequence>
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerAddressName" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerLine1StreetAddress" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerLine2StreetAddress" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerCityName" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerStateCode" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerZipCode" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerCountryCode" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerAddressInternationalProvinceName" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerInternationalMailCode" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerEmailAddress" />
               <xsd:element maxOccurs="1" minOccurs="0" ref="customerAddressTypeCode" />
               <xsd:element maxOccurs="1" minOccurs="1" ref="customerAddressEndDate" />
             </xsd:sequence>  
        </xsd:complexType>
    </xsd:element>
</xsd:schema>

