<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet author="kfs" id="KFS_40_KC_FIX_COL_LENGTH">
		<comment>Fix column length on auto-creation defaults table</comment>
	    <modifyColumn tableName="CA_ACCT_AUTO_CREATE_DFLT_T">
			<column name="CONTR_CTRLACCT_NBR" type="VARCHAR2(7)" />
		</modifyColumn>
        <modifySql dbms="mysql">
			<replace replace="VARCHAR2" with="VARCHAR" />
	    </modifySql>
	</changeSet>
  <changeSet author="Winston" id="KFS_401_CA_ACCT_AUTO_CREATE_DFLT_T_AddColumn_ACCT_DFLT_ID_Oracle" dbms="oracle">
    <comment>KFSMI-KFSMI-6552 create an incrementing ID for account creation default table</comment>
    <dropUniqueConstraint tableName="CA_ACCT_AUTO_CREATE_DFLT_T" constraintName="KC_UNIT" />
    <addColumn tableName="CA_ACCT_AUTO_CREATE_DFLT_T">
      <column name="ACCT_DFLT_ID" type="NUMBER(10)">
        <constraints nullable="false" primaryKey="true" />
      </column>
    </addColumn>
     <createSequence sequenceName="CA_ACCT_AUTO_CREATE_DFLT_SEQ"/>
   </changeSet>
   
    <changeSet author="Winston" id="KFS_401_CA_ACCT_AUTO_CREATE_DFLT_T_AddColumn_ACCT_DFLT_ID_MySql" dbms="mysql">
    <comment>KFSMI-KFSMI-6552 create an incrementing ID for account creation default table</comment>
    <dropUniqueConstraint tableName="CA_ACCT_AUTO_CREATE_DFLT_T" constraintName="KC_UNIT" />
    <addColumn tableName="CA_ACCT_AUTO_CREATE_DFLT_T">
      <column name="ACCT_DFLT_ID" type="BIGINT(19)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
    </addColumn>
    </changeSet>
   
</databaseChangeLog>
	