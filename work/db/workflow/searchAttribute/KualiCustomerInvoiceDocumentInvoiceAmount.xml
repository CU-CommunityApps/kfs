<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
      <name>KualiCustomerInvoiceDocumentInvoiceAmount</name>
      <className>org.kuali.workflow.attribute.KualiXmlSearchableAttributeImpl</className>
      <label>Kuali Customer Invoice Document Invoice Amount</label>
      <description>Attribute to identify the Invoice Amount of the Customer Invoice Document</description>
      <type>SearchableXmlAttribute</type>
      <searchingConfig>
        <fieldDef name="amount" title="kuali_dd_label(SourceAccountingLine)">
          <display>
            <type>text</type>
          </display>
          <searchDefinition allowWildcards="true" caseSensitive="false" />
          <fieldEvaluation>
            <xpathexpression>wf:xstreamsafe('//document/generalLedgerPendingEntries/org.kuali.kfs.bo.GeneralLedgerPendingEntry/documentHeader/financialDocumentTotalAmount/value')</xpathexpression>
          </fieldEvaluation>
        </fieldDef>
      </searchingConfig>
    </ruleAttribute>
  </ruleAttributes>
</data>