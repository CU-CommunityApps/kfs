<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <ruleAttributes xmlns="ns:workflow/RuleAttribute" xsi:schemaLocation="ns:workflow/RuleAttribute resource:RuleAttribute">
    <ruleAttribute>
      <name>KualiCustomerInvoiceDocSearchResultProcessor</name>
      <className>edu.iu.uis.eden.docsearch.xml.DocumentSearchXMLResultProcessorImpl</className>
      <label>Customer Invoice Document Search Result Processor</label>
      <description>Attribute to allow for custom search results for Customer Invoice documents</description>
      <type>DocumentSearchXMLResultProcessorAttribute</type>
      <searchResultConfig overrideSearchableAttributes="true" showStandardSearchFields="false">
        <column name="customerNumber" title="Customer Number" sortable="true"/>
        <column name="billByChartOfAccountCode" title="Billing COA" sortable="true"/>
        <column name="billedByOrganizationCode" title="Billing Org" sortable="true"/>
        <column name="documentHeader.processingChartOfAccountCode" title="Processing COA" sortable="true    "/>
        <column name="documentHeader.processingOrganizationCode" title="Processing Org" sortable="true"/>
        <column name="organizationInvoiceNumber" title="Org Invoice Number" sortable="true"/>
        <column name="customerPurchaseOrderNumber" title="Customer Purchase Order Number" sortable="true"/>
        <column name="amount" title="Original Amount" sortable="true"/>
        <column name="docRouteStatusCodeDesc" />
        <column name="initiator" />
        <column name="dateCreated" />
      </searchResultConfig>
    </ruleAttribute>
  </ruleAttributes>
</data>
